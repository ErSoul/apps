
pkgname=skanlite
pkgver=1.1.1
pkgrel=2
pkgdesc="Image Scanning Application for KDE"
arch=('x86_64')
url='http://www.kde.org'
license=('LGPL')
depends=('kio' 'libksane' 'sane')
makedepends=('pkgconfig' 'extra-cmake-modules' 'git' 'kdoctools')
conflicts=('kf5-skanlite')
replaces=('kf5-skanlite')
groups=('graphics')
source=("git://anongit.kde.org/skanlite#branch=frameworks")
md5sums=('SKIP')

build() {
  cd ${srcdir}
  #sed -i -e 's/5.2.0/5.3.0/' ${srcdir}/CMakeLists.txt
  
  mkdir build
  cd build
  cmake ../skanlite \
    -DCMAKE_BUILD_TYPE=Release \
    -DCMAKE_INSTALL_PREFIX=/usr
  make 
}

package() {
  cd ${srcdir}/build
  
  make DESTDIR=${pkgdir} install
}
