
pkgname=cantata
pkgver=1.4.2
pkgdesc="A KDE client for the music player daemon (MPD)"
pkgrel=1
arch=('x86_64')
url="http://kde-apps.org/content/show.php/Cantata?content=147733"
license=('GPL')
depends=('qt5-multimedia' 'qt5-svg' 'libmtp' 'libcddb' 'libmusicbrainz5'
         'mpg123' 'qjson' 'taglib-extras' 'mpd' 'media-player-info')
makedepends=('cmake' 'automoc4' 'qt5-tools')
install="$pkgname.install"
source=("https://drive.google.com/uc?export=download&id=0Bzghs6gQWi60UDFOeU1qSkIzaVE")
md5sums=('0533b65d50e736c6e53fb3b4a9d3a409')

build() {
  cd "$srcdir/$pkgname-$pkgver"
  mkdir build

  cmake . \
    -DCMAKE_INSTALL_PREFIX=/usr \
    -DCMAKE_BUILD_TYPE=Release \
    -DENABLE_HTTP_STREAM_PLAYBACK=ON \
    -DENABLE_KDE=OFF \
    -DENABLE_QT5=ON 
  make
}

package() {
  cd "$srcdir/$pkgname-$pkgver"
  
  make DESTDIR="$pkgdir" PREFIX="/usr" install
}
