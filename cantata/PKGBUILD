
pkgname=cantata
pkgver=1.3.1
pkgdesc="A KDE client for the music player daemon (MPD)"
pkgrel=2
arch=('x86_64')
url="http://kde-apps.org/content/show.php/Cantata?content=147733"
license=('GPL')
depends=('kde-runtime' 'libmtp' 'libcddb' 'libmusicbrainz5'
         'mpg123' 'qjson' 'taglib-extras' 'mpd' 'media-player-info')
makedepends=('cmake' 'automoc4')
install="$pkgname.install"
source=("https://drive.google.com/uc?export=download&id=0Bzghs6gQWi60YmdyaExDZUo4NGs")
md5sums=('5dc0bea62863ee991b46925b0be44869')

build() {
  cd "$srcdir/$pkgname-$pkgver"
  mkdir build

  cmake . \
    -DCMAKE_INSTALL_PREFIX=/usr \
    -DCMAKE_BUILD_TYPE=Release \
    -DENABLE_HTTP_STREAM_PLAYBACK=ON \
    -DENABLE_KDE=ON \
    -DENABLE_QT5=OFF
  make
}

package() {
  cd "$srcdir/$pkgname-$pkgver"
  
  make DESTDIR="$pkgdir" PREFIX="/usr" install
}
