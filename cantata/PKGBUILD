
pkgname=cantata
pkgver=1.3.0.1
pkgdesc="A KDE client for the music player daemon (MPD)"
pkgrel=1
arch=('x86_64')
url="http://kde-apps.org/content/show.php/Cantata?content=147733"
license=('GPL')
depends=('qt5-multimedia' 'qt5-svg' 'libmtp' 'libcddb' 'libmusicbrainz5' 'mpg123' 'qjson' 'taglib-extras' 'mpd')
makedepends=('cmake' 'automoc4')
install="$pkgname.install"
source=("https://drive.google.com/uc?export=download&id=0Bzghs6gQWi60czZxNXJtdWllc0E")
md5sums=('1a1c300b82ca173d043e990d11f79db8')

build() {
  cd "$srcdir/$pkgname-$pkgver"
  mkdir build

  cmake . \
    -DCMAKE_INSTALL_PREFIX=/usr \
    -DCMAKE_BUILD_TYPE=Release \
    -DENABLE_HTTP_STREAM_PLAYBACK=ON \
    -DENABLE_KDE=OFF \
    -DENABLE_QT5=On
  make
}

package() {
  cd "$srcdir/$pkgname-$pkgver"
  
  make DESTDIR="$pkgdir" PREFIX="/usr" install
}
