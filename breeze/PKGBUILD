
# include global config
source ../_buildscripts/${current_repo}-${_arch}-cfg.conf

pkgname=breeze
_pkgver=${_plasmaver}
pkgrel=1
pkgdesc='Artwork, styles and assets for the Breeze visual style for the Plasma Desktop'
arch=('x86_64')
url='https://projects.kde.org/projects/kde/workspace/breeze'
license=('LGPL')
depends=('kwin' 'qt5-tools' 'frameworkintegration')
makedepends=('extra-cmake-modules' 'git')
groups=('plasma5')
source=("http://download.kde.org/stable/plasma/$pkgver/$pkgname-$pkgver.tar.xz")
md5sums=(`grep ${pkgname}-$_plasmaver.tar.xz ../kf5.md5 | cut -d" " -f1`)
#source=("git://anongit.kde.org/breeze.git#branch=graesslin/kdecoration2")
#md5sums=('SKIP')

prepare () {
  cd $pkgname-$pkgver
  #sed -i -e 's/KF5 CONFIG REQUIRED/KF5 REQUIRED/' ${srcdir}/${pkgname}/windec/kdecoration2/CMakeLists.txt
}
  
build () {  
  mkdir -p build
  cd build
  
  cmake ../${pkgname}-$pkgver \
    -DCMAKE_BUILD_TYPE=Release \
    -DCMAKE_INSTALL_PREFIX=/usr \
    -DLIB_INSTALL_DIR=lib \
    -DQML_INSTALL_DIR=/usr/lib/qt5/qml \
    -DPLUGIN_INSTALL_DIR=/usr/lib/qt5/plugins \
    -DKDE_INSTALL_USE_QT_SYS_PATHS=ON \
    -DBUILD_TESTING=OFF
  make
}

package () {
  cd build

  make DESTDIR="${pkgdir}" install
}

