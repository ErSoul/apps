
pkgname=jsoncpp
pkgver=1.6.5
pkgrel=1
pkgdesc="A JSON C++ library"
url='https://github.com/open-source-parsers/jsoncpp'
license=('custom:Public_Domain')
arch=('x86_64')
depends=('gcc-libs' 'python2')
makedepends=('cmake')
source=("https://github.com/open-source-parsers/jsoncpp/archive/${pkgver}.tar.gz"
        "https://github.com/open-source-parsers/jsoncpp/commit/e6f1cffdd3fb04a0ed96319e6f8df6a7cbdd1557.patch")
md5sums=('2bb16bb8d2b867acbdd71d1855062a89'
         'c57797dc180b10b85c9a99c1606acc40')

build() {
  cd ${pkgname}-${pkgver}
  #patch -p1 -i $srcdir/e6f1cffdd3fb04a0ed96319e6f8df6a7cbdd1557.patch
  
  mkdir -p build/debug
  cd build/debug
  
  cmake -DCMAKE_BUILD_TYPE=debug \
        -DCMAKE_INSTALL_PREFIX=/usr \
        -DJSONCPP_LIB_BUILD_SHARED=ON -G "Unix Makefiles" ../..
  make
}

package() {
  cd ${pkgname}-${pkgver}/build/debug
  make DESTDIR=${pkgdir} install
  
  cd ../..
  install -Dm644 LICENSE ${pkgdir}/usr/share/licenses/${pkgname}/LICENSE
}
