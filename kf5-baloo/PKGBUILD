
# include global config
source ../_buildscripts/${current_repo}-${_arch}-cfg.conf

pkgname=kf5-baloo
_pkgname=baloo
pkgver=4.97.0
pkgrel=2
pkgdesc="A framework for searching and managing metadata"
arch=('x86_64')
url='https://projects.kde.org/projects/kde/kdelibs/baloo'
license=('LGPL')
depends=('xapian-core' 'kf5-kfilemetadata' 'kidletime' 'kcmutils' 'krunner' 'kemoticons' 'kf5-kdepimlibs')
makedepends=('extra-cmake-modules' 'kdoctools')
conflicts=('baloo')
provides=('baloo')
replaces=('baloo')
source=("http://download.kde.org/unstable/plasma/$pkgver/src/baloo-kf5-$pkgver.tar.xz")
md5sums=('529b4ecdcaea2501aeffceda1759d194')
#source=("git://anongit.kde.org/baloo.git#branch=frameworks")
#md5sums=('SKIP')

build() {
  mkdir -p build
  cd build
  
  cmake ../${_pkgname}-$pkgver \
    -DCMAKE_BUILD_TYPE=Release \
    -DCMAKE_INSTALL_PREFIX=/usr \
    -DSYSCONF_INSTALL_DIR=/etc \
    -DPLUGIN_INSTALL_DIR=/usr/lib/qt5/plugins \
    -DLIB_INSTALL_DIR=lib \
    -DKDEPIM_SUPPORT_BUILD=TRUE
  make
}

package() {
  cd build

  make DESTDIR="${pkgdir}" install
}
