
# include global config
source ../_buildscripts/${current_repo}-${_arch}-cfg.conf

pkgname=kstars
pkgver=2.3.0
pkgrel=1
pkgdesc="Desktop Planetarium"
url="http://kde.org/applications/education/kstars/"
arch=('x86_64')
url='http://www.kde.org'
license=('GPL' 'LGPL' 'FDL')
depends=('kconfig' 'kwidgetsaddons' 'knewstuff' 'kdbusaddons' 'ktexteditor' 'kxmlgui' 'kwindowsystem' 'kinit'
         'kdeclarative' 'kplotting' 'libindi' 'cfitsio' 'wcslib' 'xplanet' 'qjson-qt5' 'qt5-multimedia' 'qt5-quick1')
makedepends=('extra-cmake-modules' 'kdoctools' 'git' 'eigen3' 'kdelibs')
provides=('kdeedu-kstars')
conflicts=('kdeedu-kstars')
#groups=('kde' 'kdeedu' 'kde-uninstall' 'education')
#options=('docs')
install=${pkgname}.install
#source=("$_mirror/${_pkgname}-$_kdever.tar.xz")
#md5sums=(`grep ${_pkgname}-$_kdever.tar.xz ../kde-sc.md5 | cut -d" " -f1`)
source=("git://anongit.kde.org/kstars#branch=frameworks")
md5sums=('SKIP')

prepare() {
  cd ${srcdir}/${pkgname}
  sed -i -e 's|add_subdirectory(doc)|#add_subdirectory(doc)|' ${srcdir}/${pkgname}/CMakeLists.txt 
}

build() {
 mkdir -p build
  cd build

  cmake ../${pkgname} \
    -DCMAKE_BUILD_TYPE=Release \
    -DCMAKE_INSTALL_PREFIX=/usr \
    -DLIB_INSTALL_DIR=lib \
    -DSYSCONF_INSTALL_DIR=/etc \
    -DQML_INSTALL_DIR=/usr/lib/qt5/qml \
    -DKDE_INSTALL_USE_QT_SYS_PATHS=ON \
    -DBUILD_TESTING=OFF 
  make
}

package() {
  cd build

  make DESTDIR=${pkgdir} install
}
