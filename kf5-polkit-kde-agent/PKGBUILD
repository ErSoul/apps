
pkgname=kf5-polkit-kde-agent
_pkgname=polkit-kde-agent-1
pkgver=0.103.0
pkgrel=1
pkgdesc='KDE PolicyKit Authentication Agent'
arch=('x86_64')
url='https://projects.kde.org/projects/extragear/base/polkit-kde-agent-1'
license=('LGPL')
depends=('ki18n' 'kwindowsystem' 'kdelibs4support' 'polkit-qt5')
makedepends=('extra-cmake-modules' 'kdoctools' 'git')
#groups=("kde-uninstall" "kde-support")
source=('git://anongit.kde.org/polkit-kde-agent-1.git#branch=frameworks')
md5sums=('SKIP')

build() {
  mkdir -p build
  cd build

  cmake ../${_pkgname} \
    -DCMAKE_BUILD_TYPE=Release \
    -DCMAKE_INSTALL_PREFIX=/usr \
    -DLIB_INSTALL_DIR=lib \
    -DSYSCONF_INSTALL_DIR=/etc \
    -DQML_INSTALL_DIR=/usr/lib/qt5/qml \
    -DPLUGIN_INSTALL_DIR=/usr/lib/qt5/plugins \
    -DKDE_INSTALL_USE_QT_SYS_PATHS=ON \
    -DBUILD_TESTING=OFF 
  make
}

package() {
  cd build

  make DESTDIR=${pkgdir} install
}
