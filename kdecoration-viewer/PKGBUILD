
# include global config
source ../_buildscripts/${current_repo}-${_arch}-cfg.conf

pkgname=kdecoration-viewer
pkgver=5.0.0
pkgrel=1
pkgdesc='Viewer application for KDecoration2 based decorations.'
arch=('x86_64')
url='https://projects.kde.org/projects/playground/base/kdecoration-viewer'
license=('LGPL')
depends=('kdecoration' 'kconfig' 'kconfigwidgets' 'kdeclarative' 'ki18n' 'kservice')
makedepends=('extra-cmake-modules' 'kdoctools' 'qt5-tools')
#source=("http://download.kde.org/stable/plasma/$pkgver/$pkgname-$pkgver.tar.xz")
#md5sums=(`grep ${pkgname}-$_kdever.tar.xz ../kf5.md5 | cut -d" " -f1`)
source=("git://anongit.kde.org/kdecoration-viewer.git")
md5sums=('SKIP')

prepare () {
  cd $pkgname
  sed -i -e 's/KF5 CONFIG REQUIRED/KF5 REQUIRED/' ${srcdir}/${pkgname}/CMakeLists.txt
}

build() {
  mkdir -p build
  cd build
  
  cmake ../${pkgname} \
    -DCMAKE_BUILD_TYPE=Release \
    -DCMAKE_INSTALL_PREFIX=/usr \
    -DLIB_INSTALL_DIR=lib \
    -DSYSCONF_INSTALL_DIR=/etc \
    -DQML_INSTALL_DIR=/usr/lib/qt5/qml \
    -DPLUGIN_INSTALL_DIR=/usr/lib/qt5/plugins \
    -DBUILD_TESTING=OFF
  make
}

package() {
  cd build

  make DESTDIR="${pkgdir}" install
}

