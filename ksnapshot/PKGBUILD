
# include global config
source ../_buildscripts/${current_repo}-${_arch}-cfg.conf

pkgname=ksnapshot
#pkgver=${_kdever}
pkgver=15.03.70
pkgrel=1
pkgdesc="Screen Capture Program"
url="http://kde.org/applications/graphics/ksnapshot/"
arch=('x86_64')
license=('GPL' 'LGPL' 'FDL')
depends=('kconfig' 'kconfigwidgets' 'kcoreaddons' 'kguiaddons' 'ki18n' 'kio' 'kparts' 'kservice'
         'kwindowsystem' 'kxmlgui' 'libkipi')
makedepends=('extra-cmake-modules' 'kdoctools' 'pkg-config')
install=${pkgname}.install
conflicts=('kdegraphics-ksnapshot')
provides=('kdegraphics-ksnapshot')
replaces=('kdegraphics-ksnapshot')
groups=('kde' 'kdegraphics' 'kde-uninstall')
#source=("$_mirror/${_pkgname}-$_kdever.tar.xz")
#md5sums=(`grep ${_pkgname}-$_kdever.tar.xz ../kde-sc.md5 | cut -d" " -f1`)
source=("git://anongit.kde.org/ksnapshot#branch=frameworks"
        'CMakeLists.diff')
md5sums=('SKIP'
         '6c84f5368dbd745634bdb5c7f1fed3d2')

prepare() {
  cd $pkgname
  #sed -i -e 's|ksnapshot KF5::Kipi|ksnapshot KF5::KIPI|' ${srcdir}/${pkgname}/CMakeLists.txt
  #patch -p1 -i ${srcdir}/CMakeLists.diff 
}

build() {
  mkdir -p build
  cd build
  
  cmake ../${pkgname} \
    -DCMAKE_BUILD_TYPE=Release \
    -DCMAKE_INSTALL_PREFIX=/usr \
    -DLIB_INSTALL_DIR=lib \
    -DPLUGIN_INSTALL_DIR=/usr/lib/qt5/plugins \
    -DKDE_INSTALL_USE_QT_SYS_PATHS=ON \
    -DBUILD_TESTING=OFF
  make
}

package() {
  cd build

  make DESTDIR=${pkgdir} install
}
