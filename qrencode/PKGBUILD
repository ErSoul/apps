
pkgname=qrencode
pkgver=4.0.1
pkgrel=1
pkgdesc="C library for encoding data in a QR Code symbol."
arch=('x86_64')
url="https://fukuchi.org/works/qrencode/"
license=('GPL')
depends=('libpng' 'zlib')
makedepends=('cmake')
options=('!libtool')
source=("https://fukuchi.org/works/qrencode/${pkgname}-${pkgver}.tar.bz2")
sha512sums=('ee1d43f2f791757a7dd0c38364d0661daf1784a1bdd2c7a7fd1200d1cdde249fd9fcad4c8d2fa919db14e6f8e464badae88ec01ed646c693eddea69c97fcf9a0')

build() {
  mkdir -p build
  cd build
  
  cmake ../${pkgname}-${pkgver} \
    -DCMAKE_BUILD_TYPE=Release \
    -DCMAKE_INSTALL_PREFIX=/usr \
    -DBUILD_SHARED_LIBS=ON
  make
}

package() {
  cd build

  make DESTDIR=${pkgdir} install
}
