
pkgname=kf5-sddm
_pkgname=sddm
pkgver=20140706
pkgrel=1
pkgdesc="QML based X11 display manager"
arch=('x86_64')
url="http://github.com/sddm/sddm"
license=('GPL')
depends=('qt5-declarative' 'libxcb')
makedepends=('cmake' 'git' 'qt5-tools')
conflicts=('sddm')
backup=('etc/sddm.conf')
install=sddm.install
source=('git://github.com/sddm/sddm.git'
        'background.png')
md5sums=('SKIP'
         '4932058967e1fe4df3e8cd75b75997ca')

build() {
  cd "$srcdir"
  
  mkdir -p $srcdir/build
  cd build

  cmake ../${_pkgname} -DCMAKE_INSTALL_PREFIX=/usr -DUSE_QT5=true
  make
}

package() {
  cd ${srcdir}/build
  make DESTDIR="${pkgdir}" install
  
  #sed -i -e "s|white|deepskyblue|g" $pkgdir/usr/share/sddm/themes/maui/Main.qml
  sed -i -e "s|LastSession=|LastSession=plasma.desktop|g" $pkgdir/etc/sddm.conf
  sed -i -e "s|plasma.desktoptrue|true|g" $pkgdir/etc/sddm.conf
  sed -i -e "s|CurrentTheme=maui|CurrentTheme=breeze|g" $pkgdir/etc/sddm.conf
  
  #rm "${pkgdir}"/usr/share/sddm/themes/maui/background.png
  #install -m 644 -p ${srcdir}/background.png ${pkgdir}/usr/share/sddm/themes/maui/  
  
  install -d -g 136 -o 136 "${pkgdir}"/var/lib/sddm
}
