
pkgname=slime-engine
pkgver=0.2
_commit=9d2fd26da9c38b2e5c4c1c4d994b193213559e2f
pkgrel=2
pkgdesc="QML webview wrapper to support both QtWebEngine and Oxide through one simple QML API."
url="https://github.com/tim-sueberkrueb/slime-engine"
arch=('x86_64')
license=('LGPL')
depends=('qtwebengine')
source=("https://github.com/tim-sueberkrueb/slime-engine/archive/${_commit}.zip")
md5sums=('c7efe9b105ae729a0fa01db9bdea4867')

build() {
   mkdir -p build
   cd build

   /usr/lib/qt5/bin/qmake CONFIG+=QTWEBENGINE_ENABLED ../${pkgname}-${_commit}/slime-engine.pro
   make
}

package() {
   cd build
   
   make INSTALL_ROOT=${pkgdir} install
}
