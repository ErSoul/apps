
pkgname=ring-lrc
pkgver=1.0.0
_commit=00cde39c1ece9c946ad81fcccf6269b324f24403
pkgrel=1
pkgdesc="Client communication library for Ring"
arch=('x86_64')
url="https://github.com/savoirfairelinux/lrc"
license=('GPL3')
depends=('ring-daemon' 'qt5-base')
makedepends=('cmake' 'git' 'qt5-tools')
source=("https://github.com/savoirfairelinux/ring-lrc/archive/${_commit}.zip"
        'qt5.5.diff')
md5sums=('15de97595acdf1c9acce06ac83d7ebbf'
         '1864050a00c86d1800d15b999dcb84eb')

prepare() {
  cd $pkgname-${_commit}
  #patch -p1 -i $srcdir/qt5.5.diff
}
  
build() {  
  mkdir -p build
  cd build

  cmake ../${pkgname}-${_commit} \
    -DCMAKE_INSTALL_PREFIX=/usr \
    -DCMAKE_BUILD_TYPE=Release
  make -j4
}

package() {
  cd build

  make DESTDIR=${pkgdir} install
}
