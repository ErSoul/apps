
pkgname=ring-lrc
pkgver=0.4.0
pkgrel=1
pkgdesc="Client communication library for Ring"
arch=('x86_64')
url="https://github.com/savoirfairelinux/lrc"
license=('GPL3')
depends=('ring-daemon' 'qt5-base')
makedepends=('cmake' 'git' 'qt5-tools')
source=("git+https://gerrit-ring.savoirfairelinux.com/${pkgname}"
        'qt5.5.diff')
md5sums=('SKIP'
         '1864050a00c86d1800d15b999dcb84eb')

prepare() {
  cd $pkgname
  patch -p1 -i $srcdir/qt5.5.diff
}
  
build() {  
  mkdir -p build
  cd build

  cmake ../${pkgname} \
    -DCMAKE_INSTALL_PREFIX=/usr \
    -DCMAKE_BUILD_TYPE=Release
  make -j4
}

package() {
  cd build

  make DESTDIR=${pkgdir} install
}
