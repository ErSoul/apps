
# include global config
source ../_buildscripts/${current_repo}-${_arch}-cfg.conf

pkgname=calendersupport
pkgver=${_kdever}
pkgrel=1
pkgdesc="This lib provides calendar support."
arch=('x86_64')
url='https://projects.kde.org/projects/kde/pim/calendersupport'
license=('LGPL')
depends=('kdepimlibs' 'ki18n' 'kmime' 'kcodecs' 'kcalutils' 'kcalcore' 'kidentitymanagement'
         'kholidays' 'akonadi-calendar' 'pimcommon' 'kdepim-apps-libs' 'ktextwidgets')
makedepends=('extra-cmake-modules' 'git')
source=("http://download.kde.org/stable/applications/${_kdever}/src/${pkgname}-${_kdever}.tar.xz")
md5sums=(`grep ${pkgname}-${_kdever}.tar.xz ../kde-sc.md5 | cut -d" " -f1`)
source=("git://anongit.kde.org/calendersupport.git")
md5sums=('SKIP')

#prepare() {
#  cd $pkgname-${pkgver}
  #patch -p1 -i $srcdir/qt55.diff
#}

build() {
  mkdir build
  cd build 
  
  cmake ../${pkgname}-${pkgver} \
    -DCMAKE_INSTALL_PREFIX=/usr \
    -DCMAKE_BUILD_TYPE=Release \
    -DCMAKE_SKIP_RPATH=ON \
    -DCMAKE_INSTALL_LIBDIR=lib \
    -DKDE_INSTALL_USE_QT_SYS_PATHS=ON \
    -DQML_INSTALL_DIR=/usr/lib/qt5/qml \
    -DPLUGIN_INSTALL_DIR=/usr/lib/qt5/plugins \
    -DBUILD_TESTING=OFF 
  make 
}

package() {
  cd build
  
  make DESTDIR=${pkgdir} install
}
