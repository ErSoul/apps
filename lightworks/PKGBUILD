 
pkgname=lightworks
pkgver=11.5
pkgrel=2
pkgdesc="A professional video editing software"
arch=('x86_64')
url="http://www.lwks.com/"
license=('custom')
install="${pkgname}.install"
depends=('gtk3' 'portaudio-svn' 'libgl' 'glu' 'ffmpeg' 'libedit' 'libtiff' 'nvidia-cg-toolkit')
source=("lwks-${pkgver}-amd64.deb")
md5sums=('748a8f916121e282f95ba01020565cd6')
 
package() {
   tar -zxf data.tar.gz -C "${pkgdir}"
   gzip -d "${pkgdir}/usr/share/doc/${pkgname}/changelog.gz"
 
   install -Dm644 "${pkgdir}/usr/share/doc/${pkgname}/copyright" "$pkgdir/usr/share/licenses/lwks/copyright"
   rm "${pkgdir}/usr/share/doc/${pkgname}/copyright"

   install -d "${pkgdir}/usr/lib/x86_64-linux-gnu"
   ln -s /usr/lib/libcurl.so "${pkgdir}/usr/lib/x86_64-linux-gnu/libcurl.so"
 
   # fix: permissions
   install -dm777 "${pkgdir}/usr/share/lightworks/{Preferences,Audio Mixes}"
}
