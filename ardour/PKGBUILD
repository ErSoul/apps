
pkgname=ardour
_pkgname=Ardour
# adjust .desktop version!
pkgver=4.2.0
pkgrel=1
pkgdesc="A multichannel hard disk recorder and digital audio workstation"
arch=('x86_64')
url="http://ardour.org/"
license=('GPL')
depends=('qjackctl' 'desktop-file-utils' 'gtk2')
options=('!strip')
install="$pkgname.install"
source=("https://sourceforge.net/projects/kaosx/files/sources/ardour/${_pkgname}_64bit-$pkgver.run"
        "$pkgname.desktop")
md5sums=('f2104deb2a62519593c6793e07157e41'
         'd4b2b048e94599dc2b32cf8d6254b5a3')

build() {
  cd "${srcdir}"
  mkdir build
  sh "${_pkgname}_64bit-$pkgver.run" --noexec --target build
}

package() {
  cd "${srcdir}"/build

  install -d "$pkgdir/opt"
  bsdtar --no-same-owner -jxvf \
   ${_pkgname}_x86_64-$pkgver.tar.bz2 \
    -C "$pkgdir/opt"

  install -Dm644 "$srcdir/$pkgname.desktop" \
  "$pkgdir/usr/share/applications/$pkgname.desktop"
}
