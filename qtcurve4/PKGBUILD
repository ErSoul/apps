
pkgname=qtcurve4
_pkgname=qtcurve
pkgver=1.8.18.3
pkgrel=1
arch=('x86_64')
license=('GPL')
pkgdesc='The QtCurve style engine for Qt4 and KDE 4 applications.'
url='https://projects.kde.org/projects/playground/base/qtcurve'
depends=('qtcurve' 'qt')
makedepends=('cmake' 'automoc4' 'git')
source=("git://anongit.kde.org/qtcurve.git")
md5sums=('SKIP')

build() {
	cd ${srcdir}/${_pkgname}
	
	mkdir build
	cd build
	cmake .. -DCMAKE_BUILD_TYPE=Release \
		 -DCMAKE_INSTALL_PREFIX=/usr \
		 -DENABLE_GTK2=false \
		 -DQTC_QT5_ENABLE_KDE=false \
		 -DQTC_QT4_ENABLE_KDE=false
	make
}

package() {
	cd $srcdir/${_pkgname}/build/qt4
	
	make DESTDIR=${pkgdir} install
}
