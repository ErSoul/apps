
pkgname=fdesktoprecorder
pkgver=20130819
pkgrel=1
pkgdesc="A program that can video record a single window or your entire desktop using ffmpeg."
arch=('x86_64')
url="https://bitbucket.org/Lacky/fdesktoprecorder/"
license=('GPL')
depends=('kdelibs' 'ffmpeg' 'xorg-server' 'desktop-file-utils')
makedepends=('cmake' 'automoc4' 'mercurial')
groups=('utils')
source=("${pkgname}::hg+https://bitbucket.org/Lacky/${pkgname}#branch=development")
md5sums=('SKIP')

build() {
  cd ${srcdir}/${pkgname}

  cmake \
        -DCMAKE_INSTALL_PREFIX=/usr \
        -DCMAKE_BUILD_TYPE=Release
  make
}

package() {
  cd ${srcdir}/${pkgname}
  
  make DESTDIR="$pkgdir" install
}
