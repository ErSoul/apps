
pkgname=kf5-ktp-send-file
_pkgname=ktp-send-file
pkgver=0.9.90
pkgrel=1
pkgdesc="A File manager plugin to launch a file transfer job with a specified contact"
arch=('x86_64')
url="http://www.kde.org"
license=('GPL')
depends=('kf5-ktp-filetransfer-handler' 'kf5-ktp-contact-list')
makedepends=('extra-cmake-modules' 'kdoctools' 'git')
groups=('kf5-kde-telepathy')
install=${_pkgname}.install
#source=("ftp://mirrors.mit.edu/kde/stable/kde-telepathy/${pkgver}/src/${pkgname}-${pkgver}.tar.bz2")
conflicts=('ktp-send-file')
source=("git://anongit.kde.org/ktp-send-file.git#branch=frameworks")
md5sums=('SKIP')

build() {
  cd ${srcdir}
  
  mkdir -p build
  cd build

  cmake ../${_pkgname} \
    -DCMAKE_BUILD_TYPE=Release \
    -DCMAKE_INSTALL_PREFIX=/usr \
    -DLIB_INSTALL_DIR=lib \
    -DSYSCONF_INSTALL_DIR=/etc \
    -DQML_INSTALL_DIR=/usr/lib/qt5/qml \
    -DPLUGIN_INSTALL_DIR=/usr/lib/qt5/plugins \
    -DBUILD_TESTING=OFF 
  make
}

package() {
  cd build

  make DESTDIR=${pkgdir} install
}
