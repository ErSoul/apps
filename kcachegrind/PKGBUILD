
# include global config
source ../_buildscripts/${current_repo}-${_arch}-cfg.conf

pkgname=kcachegrind
#pkgver=${_kdever}
pkgver=16.07.70
_commit=e58b49f03a710afde0225b89f7bea6fef5d8237c
pkgrel=1
pkgdesc='Visualization of Performance Profiling Data'
url='http://kde.org/applications/development/kcachegrind/'
arch=('x86_64')
license=('GPL' 'LGPL' 'FDL')
depends=('kcoreaddons' 'kwidgetsaddons' 'kxmlgui' 'ki18n' 'kconfig' 'kio')
makedepends=('extra-cmake-modules' 'kdoctools')
conflicts=('kdesdk-kcachegrind')
replaces=('kdesdk-kcachegrind')
optdepends=('php: PHP support')
#groups=('kde' 'kdesdk' 'kde-uninstall' 'programming')
#source=("$_mirror/${_pkgname}-$_kdever.tar.xz")
#md5sums=(`grep ${_pkgname}-$_kdever.tar.xz ../kde-sc.md5 | cut -d" " -f1`)
source=("https://github.com/KDE/kcachegrind/archive/${_commit}.zip")
md5sums=('5e2ebd00bfcc6b627310a002419f23a5')

build() {
  mkdir -p build
  
  cd build 
  cmake ../${pkgname}-${_commit} \
    -DCMAKE_INSTALL_PREFIX=/usr \
    -DCMAKE_BUILD_TYPE=Release \
    -DCMAKE_SKIP_RPATH=ON \
    -DKDE_INSTALL_LIBDIR=lib \
    -DKDE_INSTALL_SYSCONFDIR=/etc \
    -DKDE_INSTALL_QMLDIR=/usr/lib/qt5/qml \
    -DKDE_INSTALL_PLUGINDIR=/usr/lib/qt5/plugins \
    -DBUILD_TESTING=OFF 
  make 
}

package() {
  cd build
  
  make DESTDIR=${pkgdir} install
}
