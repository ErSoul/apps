
pkgname=opera
pkgver=25.0.1614.35
pkgrel=1
pkgdesc="A fast and secure web browser and Internet suite."
arch=('x86_64')
url="http://www.opera.com/browser/"
license=('custom:opera')
depends=('gcc-libs' 'libxt' 'freetype2' 'libxext' 'glib2' 'gconf' 'shared-mime-info' 'hicolor-icon-theme'
        'desktop-file-utils' 'gtk2')
install=${pkgname}.install
groups=('internet')
source=("http://get.geo.opera.com.global.prod.fastly.net/pub/opera-beta/${pkgver}/linux/opera-beta_${pkgver}_amd64.deb")
md5sums=('264ed3e54a7d45a2dd678344e8b7c476')

package() {
	bsdtar -xJf data.tar.xz -C "${pkgdir}/"
	chmod 4755 "${pkgdir}/usr/lib/x86_64-linux-gnu/opera-beta/opera_sandbox"
	mkdir -p "${pkgdir}/usr/lib/x86_64-linux-gnu/opera-beta/lib"
	ln -s "/usr/lib/libudev.so.1" "${pkgdir}/usr/lib/x86_64-linux-gnu/opera-beta/lib/libudev.so.0"
}
