
# include global config
source ../_buildscripts/${current_repo}-${_arch}-cfg.conf

pkgname=kdialog
pkgver=16.11.70
_commit=60c95699e99023f9ac116b4445e50622650fb5a9
pkgrel=1
pkgdesc="KDialog can be used to show nice dialog boxes from shell scripts"
arch=('x86_64')
url='https://github.com/KDE/kdialog'
license=('LGPL')
depends=('kio' 'kdelibs4support')
makedepends=('extra-cmake-modules' 'kdoctools')
conflicts=('kde-baseapps')
replaces=('kde-baseapps')
provides=('kde-baseapps')
install=kdialog.install
#source=("http://download.kde.org/unstable/plasma/$pkgver/src/${_pkgname}-$pkgver.tar.xz")
source=("https://github.com/KDE/kdialog/archive/${_commit}.zip")
md5sums=('df482fe4df21958663e2e9231315e054')

build() {
  mkdir -p build
  cd build
  
  cmake ../${pkgname}-${_commit} \
    -DCMAKE_BUILD_TYPE=Release \
    -DCMAKE_INSTALL_PREFIX=/usr \
    -DKDE_INSTALL_SYSCONFDIR=/etc \
    -DKDE_INSTALL_PLUGINDIR=/usr/lib/qt5/plugins \
    -DKDE_INSTALL_USE_QT_SYS_PATHS=ON \
    -DKDE_INSTALL_LIBDIR=lib
  make
}

package() {
  cd build

  make DESTDIR=${pkgdir} install
}
