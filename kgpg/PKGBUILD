
# include global config
source ../_buildscripts/${current_repo}-${_arch}-cfg.conf

pkgname=kgpg
arch=('x86_64')
#pkgver=${_kdever}
pkgver=16.07.71
_commit=e0f2e9ee8cd7de6edc145104aeffab3f910f85d6
pkgrel=1
pkgdesc="GPG encryption and key management"
url="https://github.com/KDE/kgpg"
license=('GPL' 'LGPL' 'FDL')
depends=('kdepimlibs' 'karchive' 'ki18n' 'kiconthemes' 'kcodecs' 'kio'
         'kdelibs4support' 'ktexteditor' 'kxmlgui' 'kservice' 'kwidgetsaddons' 'gpgme')
makedepends=('extra-cmake-modules' 'kdoctools' 'boost')
groups=('kde' 'kdeutils' 'kde-uninstall' 'utils')
#source=($_mirror/${_pkgname}-$_kdever.tar.xz)
#md5sums=(`grep ${_pkgname}-$_kdever.tar.xz ../kde-sc.md5 | cut -d" " -f1`)
source=("https://github.com/KDE/kgpg/archive/${_commit}.zip")
md5sums=('811fe482ca7d05f86923d65826179033')

build() {
  mkdir build
  cd build

  cmake ../${pkgname}-${_commit} \
    -DCMAKE_BUILD_TYPE=Release \
    -DCMAKE_INSTALL_PREFIX=/usr \
    -DKDE_INSTALL_LIBDIR=lib \
    -DKDE_INSTALL_PLUGINDIR=/usr/lib/qt5/plugins \
    -DKDE_INSTALL_USE_QT_SYS_PATHS=ON
  make
}

package() {
  cd build
  
  make DESTDIR=${pkgdir} install
}
