
pkgname=scons
pkgver=3.0.4
pkgrel=2
pkgdesc="Extensible Python-based build utility"
arch=('x86_64')
url="http://scons.org"
license=('MIT')
depends=('python3')
makedepends=('python3-setuptools')
groups=('programming')
source=("https://downloads.sourceforge.net/sourceforge/scons/${pkgname}-${pkgver}.tar.gz")
md5sums=('dcf8ed13acde28040784606bb3d5fb84')

package() {
  cd ${pkgname}-${pkgver}

  python3 setup.py install --standard-lib \
                           --prefix=/usr \
                           --install-data=/usr/share \
                           --optimize=1 \
                           --root="${pkgdir}" \

  install -D -m644 README.txt ${pkgdir}/usr/share/licenses/${pkgname}/README
}

