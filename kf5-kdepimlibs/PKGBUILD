
# include global config
source ../_buildscripts/${current_repo}-${_arch}-cfg.conf

pkgname=kf5-kdepimlibs
_pkgname=kdepimlibs
pkgver=14.12.80
pkgrel=1
arch=('x86_64')
pkgdesc="KDE Pim Libraries"
url="http://www.kde.org"
license=('GPL' 'LGPL' 'FDL')
install=kdepimlibs.install
#options=('docs' 'debug')
depends=('akonadi' 'kdelibs4support' 'kio' 'kcompletion' 'kcodecs' 'phonon-qt5' 'kcontacts' 'kcalcore'
         'kmime' 'ki18n' 'kitemviews' 'kconfig' 'solid' 'qt5-tools' 'kldap' 'kmbox' 'prison-qt5')
makedepends=('extra-cmake-modules' 'boost' 'kdoctools')
#groups=("kde" "kde-uninstall" "kde-minimal")
#source=($_mirror/${pkgname}-$_kdever.tar.xz)
#md5sums=(`grep ${pkgname}-$_kdever.tar.xz ../kde-sc.md5 | cut -d" " -f1`)
source=("git://anongit.kde.org/kdepimlibs.git")      
md5sums=('SKIP')

build() {
	cd ${srcdir}
	#sed -i 's|sb_add_project(kmime)|#sb_add_project(kmime)|' ${srcdir}/$_pkgname/CMakeLists.txt
	#sed -i 's|add_subdirectory(kmime)|#add_subdirectory(kmime)|' ${srcdir}/$_pkgname/CMakeLists.txt
	mkdir -p build
	cd build

	cmake ../${_pkgname} \
		-DCMAKE_BUILD_TYPE=Release \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_SKIP_RPATH=ON \
		-DLIB_INSTALL_DIR=lib  
                #-DKDEPIMLIBS_SUPERBUILD=TRUE 
                
	make # -j8 sb_all
}

package() {
	cd ${srcdir}/build
	
	make DESTDIR=${pkgdir} install
}
