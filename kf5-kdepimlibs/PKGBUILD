
# include global config
source ../_buildscripts/${current_repo}-${_arch}-cfg.conf

pkgname=kf5-kdepimlibs
_pkgname=kdepimlibs
pkgver=4.98.0
pkgrel=1
arch=('x86_64')
pkgdesc="KDE Pim Libraries"
url="http://www.kde.org"
license=('GPL' 'LGPL' 'FDL')
install=kdepimlibs.install
options=('docs' 'debug')
depends=('kf5-akonadi' 'libical' 'gpgme' 'prison' 'libdmtx' 'qrencode' 'qjson' 'kcmutils'
         'kdelibs4support' 'kemoticons' 'kidletime' 'kinit' 'kitemmodels' 'qt5-tools')
makedepends=('pkg-config' 'extra-cmake-modules' 'boost' 'cyrus-sasl' 'openldap' 'docbook-xsl' 'kdoctools')
groups=("kde" "kde-uninstall" "kde-minimal")
#source=($_mirror/${pkgname}-$_kdever.tar.xz)
#md5sums=(`grep ${pkgname}-$_kdever.tar.xz ../kde-sc.md5 | cut -d" " -f1`)
source=("git://anongit.kde.org/kdepimlibs.git#branch=frameworks")      
md5sums=('SKIP')

build() {
	cd ${srcdir}
	sed -i 's|add_subdirectory(autotests)|#add_subdirectory(autotests)|' ${srcdir}/$_pkgname/syndication/CMakeLists.txt
	mkdir -p build
	cd build

	cmake ../${_pkgname} \
		-DCMAKE_BUILD_TYPE=Release \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_SKIP_RPATH=ON \
		-DLIB_INSTALL_DIR=lib \
                -DSYSCONF_INSTALL_DIR=/etc \
                -DQML_INSTALL_DIR=/usr/lib/qt5/qml \
                -DPLUGIN_INSTALL_DIR=/usr/lib/qt5/plugins \
                -DBUILD_TESTING=OFF 
	make
}

package() {
	cd ${srcdir}/build
	
	make DESTDIR=${pkgdir} install
}
