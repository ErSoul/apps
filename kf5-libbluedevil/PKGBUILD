
# include global config
source ../_buildscripts/${current_repo}-${_arch}-cfg.conf

pkgname=kf5-libbluedevil
_pkgname=libbluedevil
pkgver=${_plasmaver}
pkgrel=1
pkgdesc='Qt wrapper for bluez used in the new KDE bluetooth stack'
arch=('x86_64')
url="https://projects.kde.org/projects/playground/libs/libbluedevil"
license=('GPL')
depends=('qt5-base' 'bluez')
makedepends=('extra-cmake-modules')
conflicts=('libbluedevil')
provides=('libbluedevil')
source=("http://download.kde.org/stable/plasma/${pkgver}/${_pkgname}-${pkgver}.tar.xz")
md5sums=(`grep ${_pkgname}-${_plasmaver}.tar.xz ../kf5.md5 | cut -d" " -f1`)

build(){
  cd ${srcdir}
  
  mkdir build
  cd build
  cmake ../${_pkgname}-${pkgver} \
    -DCMAKE_BUILD_TYPE=Release \
    -DCMAKE_INSTALL_PREFIX=/usr \
    -DLIB_INSTALL_DIR=lib 
  make
}

package() {
  cd ${srcdir}/build
  
  make DESTDIR=${pkgdir} install
}
