
pkgname=lftp
pkgver=4.8.0
_pkgver=4.8.0
pkgrel=1
pkgdesc="Sophisticated command line based FTP client with openssl"
arch=('x86_64')
url="https://lftp.yar.ru/"
license=('GPL3')
depends=('gcc-libs' 'readline' 'gnutls' 'expat' 'perl' 'sh')
makedepends=('autoconf')
categories=('network')
source=("https://lftp.yar.ru/ftp/${pkgname}-${_pkgver}.tar.xz")
md5sums=('468558412ad3575ef8e98547c41339f4')

build() {
  cd ${pkgname}-${_pkgver}
  
  ./configure --prefix=/usr \
        --with-gnutls \
        --without-included-regex \
        --without-openssl \
        --disable-static
  make
}

package() {
  cd ${pkgname}-${_pkgver}
  make DESTDIR=${pkgdir} install
  
  rm -rf ${pkgdir}/usr/lib
}
