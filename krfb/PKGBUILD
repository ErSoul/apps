
# include global config
source ../_buildscripts/${current_repo}-${_arch}-cfg.conf

pkgname=krfb
#pkgver=${_kdever}
pkgver=15.11.72
pkgrel=1
pkgdesc='Desktop Sharing Server'
url='http://www.kde.org/applications/system/krfb'
arch=('x86_64')
license=('GPL' 'LGPL' 'FDL')
depends=('ki18n' 'kcompletion' 'kconfig' 'kcrash' 'kcoreaddons' 'kdnssd' 'knotifications' 'kwallet' 'kwidgetsaddons'
         'kdbusaddons' 'kxmlgui' 'libvncserver' 'libxdamage' 'ktp-common-internals')
makedepends=('extra-cmake-modules' 'kdoctools' 'git')
conflicts=('kdenetwork-krfb')
replaces=('kdenetwork-krfb')
groups=('kde' 'kdenetwork' 'kde-uninstall' 'network')
#source=("$_mirror/${pkgname}-$_kdever.tar.xz")
#md5sums=(`grep ${pkgname}-$_kdever.tar.xz ../kde-sc.md5 | cut -d" " -f1`)
source=("git://anongit.kde.org/krfb.git#branch=frameworks")
md5sums=('SKIP')

build() {
  mkdir build
  cd build
  
  cmake ../${pkgname} \
    -DCMAKE_BUILD_TYPE=Release \
    -DCMAKE_INSTALL_PREFIX=/usr \
    -DLIB_INSTALL_DIR=lib \
    -DPLUGIN_INSTALL_DIR=/usr/lib/qt5/plugins \
    -DKDE_INSTALL_USE_QT_SYS_PATHS=ON \
    -DBUILD_TESTING=OFF 
  make
}

package() {
  cd build
  
  make DESTDIR=$pkgdir install
}
