
# include global config
source ../_buildscripts/${current_repo}-${_arch}-cfg.conf

pkgname=powerdevil
pkgver=${_plasmaver}
pkgrel=1
pkgdesc='KDE power management tools'
arch=('x86_64')
url='https://projects.kde.org/projects/extragear/base/powerdevil'
license=('LGPL')
depends=('plasma-workspace' 'libxrandr')
makedepends=('extra-cmake-modules' 'kdoctools')
groups=('plasma5')
source=("http://download.kde.org/stable/plasma/$pkgver/$pkgname-$pkgver.tar.xz"
        'brightness.diff')
md5sums=(`grep ${pkgname}-$_plasmaver.tar.xz ../kf5.md5 | cut -d" " -f1`
         'aafb843abac9bea5267e5263bb857381')

prepare() {
  cd ${srcdir}/${pkgname}-${pkgver}
  
  #patch -p1 -i ${srcdir}/brightness.diff
}
         
build() {
  mkdir -p build
  cd build
  
  cmake ../${pkgname}-${pkgver} \
    -DCMAKE_BUILD_TYPE=Release \
    -DCMAKE_INSTALL_PREFIX=/usr \
    -DLIB_INSTALL_DIR=lib \
    -DLIBEXEC_INSTALL_DIR=lib \
    -DSYSCONF_INSTALL_DIR=/etc \
    -DPLUGIN_INSTALL_DIR=/usr/lib/qt5/plugins \
    -DKDE_INSTALL_USE_QT_SYS_PATHS=ON \
    -DBUILD_TESTING=OFF
  make
}

package() {
  cd build

  make DESTDIR=${pkgdir} install
  # conflict with khotkeys
  rm -r ${pkgdir}/usr/share/doc/HTML/en_US/kcm/index.cache.bz2
  rm -r ${pkgdir}/usr/share/doc/HTML/en_US/kcm/index.docbook
}
