
# include global config
source ../_buildscripts/${current_repo}-${_arch}-cfg.conf

pkgname=kcontacts
pkgver=${_pimver}
#pkgver=15.03.80
pkgrel=1
pkgdesc="libkcontacts - new address book API for KDE"
arch=('x86_64')
url='https://projects.kde.org/projects/kde/pim/kcontacts'
license=('LGPL')
depends=('kconfig' 'kcoreaddons' 'ki18n' 'kio' 'kcodecs')
makedepends=('extra-cmake-modules' 'git')
#source=($_mirror/${pkgname}-$_pimver.tar.xz)
#md5sums=(`grep ${pkgname}-$_pimver.tar.xz ../kde-sc.md5 | cut -d" " -f1`)
source=("git://anongit.kde.org/kcontacts.git"
        'qt5.5.diff')
md5sums=('SKIP'
         '8547d8594775f5317cd12e67858d26e9')

prepare() {
  cd $pkgname
  patch -p1 -i $srcdir/qt5.5.diff
}

build() {
  cd ${srcdir}

  mkdir build
  
  cd build 
  cmake ../${pkgname} \
    -DCMAKE_INSTALL_PREFIX=/usr \
    -DCMAKE_BUILD_TYPE=Release \
    -DCMAKE_SKIP_RPATH=ON \
    -DCMAKE_INSTALL_LIBDIR=lib \
    -DKDE_INSTALL_USE_QT_SYS_PATHS=ON \
    -DQML_INSTALL_DIR=/usr/lib/qt5/qml \
    -DPLUGIN_INSTALL_DIR=/usr/lib/qt5/plugins \
    -DBUILD_TESTING=OFF 
  make 
}

package() {
  cd ${srcdir}/build
  
  make DESTDIR=${pkgdir} install
}