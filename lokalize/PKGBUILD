
pkgname=lokalize
pkgver=4.96.0
pkgrel=1
pkgdesc="Computer-aided translation"
arch=('x86_64')
url="https://projects.kde.org/projects/kde/kdesdk/lokalize"
license=('LGPL')
depends=('hunspell' 'kconfig' 'kcoreaddons' 'ki18n' 'kio' 'knotifications' 'kross' 'kxmlgui' 'sonnet')
makedepends=('extra-cmake-modules' 'git' 'kdoctools')
conflicts=('kdesdk-lokalize')
replaces=('kdesdk-lokalize')
source=("git://anongit.kde.org/lokalize.git#branch=frameworks")
md5sums=('SKIP')

build() {
  cd $pkgname
  #sed -i -e 's|V4.2-Based Variant V1.1//EN" "dtd/kdex.dtd"|V4.5-Based Variant V1.1//EN" "dtd/kdedbx45.dtd"|' ${srcdir}/${pkgname}/doc/index.docbook
  sed -i -e "s|add_subdirectory(doc)|#add_subdirectory(doc)|" ${srcdir}/$pkgname/CMakeLists.txt
  mkdir build
  
  cd build
  cmake -DCMAKE_INSTALL_PREFIX=/usr \
        -DCMAKE_BUILD_TYPE=Release \
        -DLIB_INSTALL_DIR=lib \
        -DSYSCONF_INSTALL_DIR=/etc \
        -DQML_INSTALL_DIR=/usr/lib/qt5/qml \
        -DPLUGIN_INSTALL_DIR=/usr/lib/qt5/plugins \
        -DKDE_INSTALL_USE_QT_SYS_PATHS=ON \
        -DBUILD_TESTING=OFF ..
  make
}

package() {
  cd $pkgname/build
  
  make DESTDIR="$pkgdir" install
}
