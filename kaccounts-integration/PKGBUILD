
pkgname=kaccounts-integration
pkgver=0.1.1
pkgrel=1
pkgdesc="System to administer web accounts for the sites and services across the KDE desktop, 
        including: Google, Facebook, Owncloud, IMAP, Jabber and others"
arch=('x86_64')
url="https://projects.kde.org/projects/kdereview/kaccounts-providers"
license=('GPL')
depends=('kaccounts-providers' 'kcmutils' 'kio' 'ki18n' 'kwidgetsaddons' 'kcoreaddons' 
         'kiconthemes' 'kconfig' 'kwallet' 'kdbusaddons' 'accounts-qt5' 'signon-qt5' 
         'kf5-akonadi' 'kf5-kdepimlibs')
makedepends=('extra-cmake-modules' 'kdoctools' 'git')
#groups=('kde-telepathy')
source=("git://anongit.kde.org/kaccounts-integration.git")
md5sums=('SKIP')

build() {
  cd ${srcdir}
  
  mkdir -p build
  cd build

  cmake ../${pkgname} \
    -DCMAKE_BUILD_TYPE=Release \
    -DCMAKE_INSTALL_PREFIX=/usr \
    -DLIB_INSTALL_DIR=lib \
    -DSYSCONF_INSTALL_DIR=/etc \
    -DQML_INSTALL_DIR=/usr/lib/qt5/qml \
    -DPLUGIN_INSTALL_DIR=/usr/lib/qt5/plugins \
    -DKDE_INSTALL_USE_QT_SYS_PATHS=ON \
    -DBUILD_TESTING=OFF 
  make
}

package() {
  cd build

  make DESTDIR=${pkgdir} install
}
