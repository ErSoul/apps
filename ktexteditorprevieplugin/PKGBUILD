
pkgname=ktexteditorpreviewplugin
pkgver=0.2.1
pkgrel=1
pkgdesc="Document Preview Plugin for Kate & KDevelop or other KTextEditor using programs."
arch=('x86_64')
url="https://cgit.kde.org/ktexteditorpreviewplugin.git/about/"
license=('LGPLv2')
depends=('ki18n' 'ktexteditor' 'kparts')
makedepends=('extra-cmake-modules')
source=("https://download.kde.org/stable/ktexteditorpreviewplugin/${pkgver}/src/${pkgname}-${pkgver}.tar.xz")
md5sums=('eb251aa33ac33a67b31017b595b8ec67')

prepare() {
  cd ${pkgname}-${pkgver}
  #sed -i -e 's|Qt5WebEngineWidgets CONFIG QUIET|Qt5WebEngineWidgets CONFIG REQUIRED|' src/previewplugins/CMakeLists.txt
}

build() {
  mkdir -p build
  cd build
  
  cmake ../${pkgname}-${pkgver} \
    -DCMAKE_INSTALL_PREFIX=/usr \
    -DCMAKE_BUILD_TYPE=Release \
    -DKDE_INSTALL_LIBDIR=lib \
    -DKDE_INSTALL_PLUGINDIR=/usr/lib/qt5/plugins \
    -DBUILD_TESTING=OFF 
  make
}

package() {
  cd build

  make DESTDIR=${pkgdir} install
}
