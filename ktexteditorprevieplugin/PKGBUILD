
pkgname=ktexteditorpreviewplugin
pkgver=0.0.1
pkgrel=1
pkgdesc="Document Preview Plugin for Kate & KDevelop or other KTextEditor using programs."
arch=('x86_64')
url="https://cgit.kde.org/scratch/kossebau/ktexteditorpreviewplugin.git/tree/README.md"
license=('GPL' 'LGPL')
depends=('ki18n' 'ktexteditor' 'qt5-svg' 'qtwebengine' 'qt5-location')
makedepends=('extra-cmake-modules')
source=("git://anongit.kde.org/scratch/kossebau/ktexteditorpreviewplugin.git")
md5sums=('SKIP')

prepare() {
  cd ${pkgname}
  #sed -i -e 's|Qt5WebEngineWidgets CONFIG QUIET|Qt5WebEngineWidgets CONFIG REQUIRED|' src/previewplugins/CMakeLists.txt
}

build() {
  mkdir -p build
  cd build
  
  cmake ../${pkgname} \
    -DCMAKE_INSTALL_PREFIX=/usr \
    -DCMAKE_BUILD_TYPE=Release \
    -DKDE_INSTALL_LIBDIR=lib \
    -DKDE_INSTALL_PLUGINDIR=/usr/lib/qt5/plugins \
    -DBUILD_TESTING=OFF 
  make -j1
}

package() {
  cd build

  make DESTDIR=${pkgdir} install
}
