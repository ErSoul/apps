 
pkgname=krename
pkgver=4.90.90
pkgrel=1
pkgdesc="Powerful batch renamer for KDE."
arch=("x86_64")
url="http://www.krename.net/"
license=('GPL')
depends=('kcompletion' 'kconfig' 'kcoreaddons' 'kcrash' 'ki18n' 'kiconthemes' 'kitemviews' 'kjobwidgets'
         'kjs' 'kio' 'kservice' 'kwidgetsaddons' 'kxmlgui' 'taglib' 'exiv2' 'podofo')
makedepends=('extra-cmake-modules' 'kdoctools')
source=("https://download.kde.org/unstable/krename/${pkgver}/krename-${pkgver}.tar.xz")
md5sums=('e007ca7b4fc0ceb923edb9e82ae986b5')
 
build() {
  mkdir -p build
  cd build
 
  cmake ../${pkgname}-${pkgver} \
    -DCMAKE_BUILD_TYPE=Release \
    -DCMAKE_INSTALL_PREFIX=/usr \
    -DKDE_INSTALL_LIBDIR=lib
  make
}
 
package() {
  cd build
 
  make DESTDIR=${pkgdir} install
}
