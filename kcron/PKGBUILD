
# include global config
source ../_buildscripts/${current_repo}-${_arch}-cfg.conf

pkgname=kcron
#pkgver=${_kdever}
pkgver=14.11.80
pkgrel=1
pkgdesc='GUI crontab editor'
url='http://userbase.kde.org/KCron'
arch=('x86_64')
license=('GPL' 'LGPL' 'FDL')
#groups=('kde' 'kdeadmin' 'kde-uninstall')
depends=('kdelibs4support' 'kio')
makedepends=('extra-cmake-modules' 'kdoctools' 'git')
#source=("$_mirror/${_pkgname}-$_kdever.tar.xz") 
#md5sums=(`grep ${_pkgname}-$_kdever.tar.xz ../kde-sc.md5 | cut -d" " -f1`)
source=("git://anongit.kde.org/kcron.git#branch=frameworks")
md5sums=('SKIP')

prepare() {
  cd $pkgname
  #sed -i -e 's|add_subdirectory( doc )|#add_subdirectory( doc )|' ${srcdir}/${pkgname}/CMakeLists.txt
}

build() {
  mkdir -p build
  cd build
  
  cmake ../${pkgname} \
    -DCMAKE_BUILD_TYPE=Release \
    -DCMAKE_INSTALL_PREFIX=/usr \
    -DLIB_INSTALL_DIR=lib \
    -DPLUGIN_INSTALL_DIR=/usr/lib/qt5/plugins \
    -DKDE_INSTALL_USE_QT_SYS_PATHS=ON \
    -DBUILD_TESTING=OFF 
  make
}

package() {
  cd build

  make DESTDIR=${pkgdir} install
}
