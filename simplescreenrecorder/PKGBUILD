 
pkgname=simplescreenrecorder
pkgver=0.3.1.1
pkgrel=1
_commit=c396076
pkgdesc="Screen recorder that is actually quite complex, but 'simple' in the sense that it's easy to use"
arch=('x86_64')
url="http://www.maartenbaert.be/simplescreenrecorder/"
license=("GPL3")
depends=('qt5-x11extras' 'ffmpeg' 'alsa-lib' 'pulseaudio' 'jack' 'libgl' 'glu' 'libx11' 'libxext' 
         'libxfixes' 'libxi')
makedepends=('qt5-tools')
options=('!libtool')
source=("https://github.com/MaartenBaert/ssr/tarball/master/ssr-$pkgver.tar.gz")
md5sums=('097eedbdc3ffdcc907de460cff3049dd')

build() {
  cd MaartenBaert-ssr-${_commit}
  
  ./configure --prefix=/usr --disable-assert --with-qt5=yes
  
  make
}
package() {
  cd MaartenBaert-ssr-${_commit}
  
  make DESTDIR=$pkgdir install
}