
pkgname=plasma-mediacenter
pkgver=1.3.0.1
_pkgver=1.3.0.1
pkgrel=1
pkgdesc="A Media Center for the KDE Software Compilation based on plasma technology"
arch=('x86_64')
url="https://projects.kde.org/projects/playground/multimedia/plasma-mediacenter"
license=('GPL3')
depends=('kguiaddons' 'kio' 'kconfigwidgets' 'plasma-desktop' 'taglib' 'kdelibs4support')
makedepends=('extra-cmake-modules' 'kdoctools')
groups=('multimedia')
#source=("http://download.kde.org/stable/${pkgname}/${pkgver}/src/${pkgname}-${_pkgver}.tar.bz2")
#md5sums=('2cb45d02eba7566fe029b5459800c47d')
source=("git://anongit.kde.org/plasma-mediacenter.git#branch=frameworks")
md5sums=('SKIP')

prepare() {
  cd ${srcdir}/${pkgname}
  sed -i -e 's|add_subdirectory(tests)|#add_subdirectory(tests)|' ${srcdir}/${pkgname}/CMakeLists.txt 
  sed -i -e 's|add_subdirectory(test)|#add_subdirectory(test)|' ${srcdir}/${pkgname}/libs/CMakeLists.txt
}

build () {
  mkdir -p build

  cd build
  cmake ../${pkgname} \
    -DCMAKE_BUILD_TYPE=Release \
    -DCMAKE_INSTALL_PREFIX=/usr \
    -DLIB_INSTALL_DIR=lib \
    -DSYSCONF_INSTALL_DIR=/etc \
    -DQML_INSTALL_DIR=/usr/lib/qt5/qml \
    -DPLUGIN_INSTALL_DIR=/usr/lib/qt5/plugins \
    -DBUILD_TESTING=FALSE \
    -DQT_USE_QTMAIN=FALSE \
    -DQT_USE_QTTEST=FALSE
  make
}

package() {
  cd build

  make DESTDIR=${pkgdir} install
}


   
 
