
# include global config
source ../_buildscripts/${current_repo}-${_arch}-cfg.conf

pkgname=parley
#pkgver=${_kdever}
pkgver=4.9.90
pkgrel=2
pkgdesc="Vocabulary Trainer"
url="http://kde.org/applications/education/parley/"
arch=('x86_64')
url='http://www.kde.org'
license=('GPL' 'LGPL' 'FDL')
depends=('kcoreaddons' 'kconfig' 'kcrash' 'ki18n' 'kio' 'knewstuff' 'kross' 'khtml' 'sonnet' 'kcmutils'
         'kxmlgui' 'knotifications' 'libkeduvocdocument' 'libxslt' 'libxml2' 'libx11' 'qt5-multimedia') # 'attica'
makedepends=('extra-cmake-modules' 'kdoctools')
conflicts=('kdeedu-parley')
#groups=('kde' 'kdeedu' 'kde-uninstall' 'education')
#options=('docs')
install=${pkgname}.install
#source=("$_mirror/${_pkgname}-$_kdever.tar.xz")
#md5sums=(`grep ${_pkgname}-$_kdever.tar.xz ../kde-sc.md5 | cut -d" " -f1`)
source=("git://anongit.kde.org/parley.git#branch=frameworks")
md5sums=('SKIP')

build() {
  mkdir -p build
  cd build
  
  cmake ../${pkgname} \
    -DCMAKE_BUILD_TYPE=Release \
    -DCMAKE_INSTALL_PREFIX=/usr \
    -DLIB_INSTALL_DIR=lib \
    -DPLUGIN_INSTALL_DIR=/usr/lib/qt5/plugins \
    -DBUILD_TESTING=OFF 
  make
}

package() {
  cd build

  make DESTDIR=${pkgdir} install
}
