
pkgname=kde-ksplash-themes
pkgver=2.0.0
pkgrel=1
pkgbase='kde-ksplash-themes'
pkgname='kde-ksplash-themes-midna'
pkgdesc="KDE KSplash-Themes"
url="http://kaosx.us"
license=('GPL')
arch=('x86_64')
groups=('kde' 'kde-complete' 'kde-uninstall' 'kde-minimal')
source=("http://sourceforge.net/projects/kaosx/files/sources/midna/ksplash/$pkgver/midna.tar.xz")
md5sums=('f0d778c51a7812ddab7df25f8f07874c')

package_kde-ksplash-themes-midna() {
	pkgdesc="Midna KSplash-Theme, based on litho flowers for KaOS"
	groups=('kde' 'kde-complete' 'kde-uninstall' 'kde-minimal')
	_THEME="midna"
	pkgrel=1
	
	cd ${srcdir}/midna
	
	msg "Install theme"
	mkdir -pv $pkgdir/usr/share/apps/ksplash/Themes/$_THEME
	cp -Rv * $pkgdir/usr/share/apps/ksplash/Themes/$_THEME
}
