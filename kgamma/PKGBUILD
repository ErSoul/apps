
# include global config
source ../_buildscripts/${current_repo}-${_arch}-cfg.conf

pkgname=kgamma
pkgver=${_kdever}
pkgver=15.03.71
pkgrel=1
pkgdesc="Adjust your monitor's gamma settings"
arch=('x86_64')
url='https://projects.kde.org/projects/kde/kdegraphics/kgamma'
license=('GPL' 'LGPL' 'FDL')
depends=('kdelibs4support' 'libxxf86vm')
makedepends=('extra-cmake-modules' 'kdoctools' 'git')
groups=('kde' 'kdegraphics' 'kde-uninstall' 'graphics')
replaces=('kdegraphics-kgamma')
conflicts=('kdegraphics-kgamma')
#source=("$_mirror/${pkgname}-$_kdever.tar.xz")
#md5sums=(`grep ${pkgname}-$_kdever.tar.xz ../kde-sc.md5 | cut -d" " -f1`)
source=("git://anongit.kde.org/kgamma#branch=frameworks")
md5sums=('SKIP')

build() {
  cd ${srcdir}
  #sed -e "s/ADD_SUBDIRECTORY( symbols-ng )/#ADD_SUBDIRECTORY( symbols-ng )/" -i ${srcdir}/$pkgname/src/data/CMakeLists.txt
  
  mkdir -p build
  cd build

  cmake ../${pkgname} \
    -DCMAKE_BUILD_TYPE=Release \
    -DCMAKE_INSTALL_PREFIX=/usr \
    -DLIB_INSTALL_DIR=lib \
    -DSYSCONF_INSTALL_DIR=/etc \
    -DQML_INSTALL_DIR=/usr/lib/qt5/qml \
    -DPLUGIN_INSTALL_DIR=/usr/lib/qt5/plugins \
    -DKDE_INSTALL_USE_QT_SYS_PATHS=ON \
    -DBUILD_TESTING=OFF 
  make
}

package() {
  cd build

  make DESTDIR=${pkgdir} install
}
