
pkgname=qbittorrent
pkgver=3.1.10.1
pkgrel=1
pkgdesc="A bittorrent client written in C++ / Qt4 using the good libtorrent library"
screenshot="http://sourceforge.net/dbimage.php?id=242189"
arch=('x86_64')
url="http://www.qbittorrent.org/"
license=('GPL')
depends=('qt5-base' 'libtorrent-rasterbar' 'xdg-utils' 'boost-libs')
makedepends=('boost' 'which' 'qt5-tools')
optdepends=('python2: needed for search')
groups=('network')
install=qbittorrent.install
#source=("http://sourceforge.net/projects/qbittorrent/files/${pkgname}/${pkgname}-${pkgver}/${pkgname}-${pkgver}.tar.xz")
source=("git://github.com/qbittorrent/qBittorrent.git")
md5sums=('SKIP')

build() {
    cd ${srcdir}/qBittorrent
    
    ./configure --prefix=/usr --with-qt5
    make
}

package(){
    cd ${srcdir}/qBittorrent
    
    make INSTALL_ROOT=${pkgdir} install
}
