
pkgname=qbittorrent
pkgver=3.1.9.1
pkgrel=1
pkgdesc="A bittorrent client written in C++ / Qt4 using the good libtorrent library"
screenshot="http://sourceforge.net/dbimage.php?id=242189"
arch=('x86_64')
url="http://www.qbittorrent.org/"
license=('GPL')
depends=('qt' 'libtorrent-rasterbar' 'xdg-utils' 'boost-libs')
makedepends=('boost' 'which')
optdepends=('python2: needed for search')
groups=('network')
install=qbittorrent.install
source=("http://sourceforge.net/projects/${pkgname}/files/${pkgname}/${pkgname}-${pkgver}/${pkgname}-${pkgver}.tar.xz")
md5sums=('a59c8ee9eaa3d924588e3ce7e9428639')

build() {
    cd ${srcdir}/${pkgname}-${pkgver}
    
    ./configure --prefix=/usr
    make
}

package(){
    cd ${srcdir}/${pkgname}-${pkgver}
    
    make INSTALL_ROOT=${pkgdir} install
}
