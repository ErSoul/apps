
# include global config
source ../_buildscripts/${current_repo}-${_arch}-cfg.conf

pkgname=kfilemetadata
#pkgver=${_plasmaver}
pkgver=5.6.1
pkgrel=2
pkgdesc="A library for extracting file metadata"
arch=('x86_64')
url='https://projects.kde.org/projects/kde/kdelibs/kfilemetadata'
license=('LGPL')
depends=('ebook-tools' 'karchive' 'exiv2' 'kservice' 'poppler-qt5' 'taglib' 'ffmpeg')
makedepends=('extra-cmake-modules')
groups=('plasma5')
conflicts=('kf5-kfilemetadata')
provides=('kf5-kfilemetadata' )
replaces=('kf5-kfilemetadata')
source=("http://download.kde.org/stable/plasma/$pkgver/${pkgname}-$pkgver.tar.xz")
#md5sums=(`grep ${_pkgname}-$_plasmaver.tar.xz ../kf5.md5 | cut -d" " -f1`)
md5sums=('12c57ca501117397edbda63f284dae68')

prepare() {
  cd $pkgname-${pkgver}
  #sed -i -e 's/ecm_setup_version(5.0.0/ecm_setup_version(1/' ${srcdir}/${_pkgname}-${pkgver}/CMakeLists.txt
}

build() {
  mkdir -p build
  cd build
  
  cmake ../${pkgname}-${pkgver} \
    -DCMAKE_BUILD_TYPE=Release \
    -DCMAKE_INSTALL_PREFIX=/usr \
    -DPLUGIN_INSTALL_DIR=/usr/lib/qt5/plugins \
    -DKDE_INSTALL_USE_QT_SYS_PATHS=ON \
    -DLIB_INSTALL_DIR=lib
  make
}

package() {
  cd build

  make DESTDIR="${pkgdir}" install
}
