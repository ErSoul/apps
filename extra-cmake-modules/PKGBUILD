
pkgname=extra-cmake-modules
pkgver=1.2.1
_pkgver=5.2.0
pkgrel=1
pkgdesc='Extra CMake modules'
arch=('x86_64')
url='http://quickgit.kde.org/index.php?p=extra-cmake-modules.git&a=summary'
license=('LGPL')
depends=('cmake' 'python3')
makedepends=('python2-sphinx' 'qt5-tools')
source=("http://download.kde.org/stable/frameworks/${_pkgver}/${pkgname}-${pkgver}.tar.xz")
md5sums=('79b70ca25003af18db97c6336d68e4b3')

build() {
  mkdir -p build
  cd build
  
  cmake ../${pkgname}-${pkgver} \
    -DCMAKE_INSTALL_PREFIX=/usr \
    -DCMAKE_BUILD_TYPE=Release \
    -DKDE_INSTALL_USE_QT_SYS_PATHS=ON
  make
}

package() {
  cd build
  
  make DESTDIR="${pkgdir}" install
}
