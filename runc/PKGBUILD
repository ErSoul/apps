
# stay with _commit builds, keep in sync with what docker ships
pkgname=runc
pkgver=0.1.1
_commit=2d41c047c83e09a6d61d464906feb2a2f3c52aa4
pkgrel=9
arch=('x86_64')
pkgdesc="CLI tool for spawning and running containers according to the OCI specification."
url="http://runc.io/"
license=('APACHE')
depends=('glibc' 'libseccomp')
makedepends=('go')
#source=("https://github.com/opencontainers/runc/archive/v${pkgver}.tar.gz")
source=("https://github.com/opencontainers/runc/archive/${_commit}.zip")
md5sums=('c26a791455abdb56ea62ebb683f7d8fa')

prepare() {
    cd ${srcdir}
    
    install -d src/github.com/opencontainers
    mv ${pkgname}-${_commit} src/github.com/opencontainers/${pkgname}
}

build() {
    cd src/github.com/opencontainers/${pkgname}

    export GOPATH=~/gocode
    export PATH=$PATH:$GOPATH/bin
    
    make
}

package() {
    cd src/github.com/opencontainers/${pkgname}
    
    install -Dm755 runc ${pkgdir}/usr/bin/runc
}
