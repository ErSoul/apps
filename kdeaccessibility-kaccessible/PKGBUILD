
# include global config
source ../_buildscripts/${current_repo}-${_arch}-cfg.conf

pkgname=('kdeaccessibility-kaccessible')
_pkgname="kaccessible"
arch=('x86_64')
pkgver=${_kdever}
pkgrel=1
pkgdesc='Provides accessibility services like focus tracking and a screenreader'
url="http://www.kde.org"
license=('GPL' 'LGPL' 'FDL')
depends=('kde-runtime' 'speech-dispatcher')
makedepends=('pkgconfig' 'cmake' 'automoc4' 'speech-dispatcher')
install='kdeaccessibility.install'
groups=('kdeaccessibility' 'kde' 'kde-uninstall' 'kde-doc')
options=('docs')
groups=('accessibility')

source=($_mirror/${_pkgname}-$_kdever.tar.xz)
md5sums=(`grep ${_pkgname}-$_kdever.tar.xz ../kde-sc.md5 | cut -d" " -f1`)

build() {
	cd ${srcdir}/${_pkgname}-${pkgver}

	msg "starting build ..."
	cmake . -DCMAKE_BUILD_TYPE=${_build_type} \
		-DCMAKE_INSTALL_PREFIX=${_installprefix} \
		-DCMAKE_SKIP_RPATH=ON \
		-DCMAKE_{SHARED,MODULE,EXE}_LINKER_FLAGS='-Wl,--no-undefined -Wl,--as-needed'

	make 
}

package() {
    	cd ${srcdir}/${_pkgname}-${pkgver}
    	
	make DESTDIR=${pkgdir} install
}
