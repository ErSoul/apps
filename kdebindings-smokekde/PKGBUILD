
# include global config
source ../_buildscripts/${current_repo}-${_arch}-cfg.conf

pkgname=kdebindings-smokekde
_pkgname=smokekde
pkgver=4.14.3
pkgrel=2
pkgdesc="Language independent library for KDE bindings"
url="http://kde.org/"
arch=('x86_64')
license=('GPL' 'LGPL' 'FDL')
depends=('kdebindings-smokeqt' 'kdepimlibs')
makedepends=('cmake' 'automoc4' 'kdebindings-smokegen' 'kdegraphics-okular'
             'kdesdk-kate' 'boost' 'mesa')
source=("http://download.kde.org/stable/${pkgver}/src/${_pkgname}-${pkgver}.tar.xz")
#md5sums=(`grep ${_pkgname}-$_kdever.tar.xz ../kde-sc.md5 | cut -d" " -f1`)
md5sums=('bbda223b9a33fb07c695479cec968fbc')
replaces=('kdebindings-common')
groups=("kde" "kdebindings" "kde-uninstall")
provides=('smokekde')
options=('docs')

prepare() {
  cd "${srcdir}"/${_pkgname}-${pkgver}
        
  #patch -p0 -i ${srcdir}/akonadi_includes.diff
}

build() {
  cd "${srcdir}"
  mkdir build
  
  cd build
  cmake ../smokekde-${pkgver} \
    -DCMAKE_BUILD_TYPE=Release \
    -DCMAKE_INSTALL_PREFIX=/usr 
  make
}

package() {
  cd "${srcdir}"/build
  
  make DESTDIR="${pkgdir}" install
}
