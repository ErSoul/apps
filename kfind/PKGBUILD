
# include global config
source ../_buildscripts/${current_repo}-${_arch}-cfg.conf

pkgname=kfind
pkgver=16.11.70
_commit=af2bf5285c0f783964b976d5d6808aeae12376b4
pkgrel=1
pkgdesc="KDE file find utility"
arch=('x86_64')
url='https://github.com/KDE/kfind'
license=('LGPL')
depends=('karchive' 'kdelibs4support')
makedepends=('extra-cmake-modules' 'kdoctools')
#source=("http://download.kde.org/unstable/plasma/$pkgver/src/${_pkgname}-$pkgver.tar.xz")
source=("https://github.com/KDE/kfind/archive/${_commit}.zip")
md5sums=('6501e5f8622026261453c2b385301fc8')

build() {
  mkdir -p build
  cd build
  
  cmake ../${pkgname}-${_commit} \
    -DCMAKE_BUILD_TYPE=Release \
    -DCMAKE_INSTALL_PREFIX=/usr \
    -DKDE_INSTALL_SYSCONFDIR=/etc \
    -DKDE_INSTALL_PLUGINDIR=/usr/lib/qt5/plugins \
    -DKDE_INSTALL_USE_QT_SYS_PATHS=ON \
    -DKDE_INSTALL_LIBDIR=lib
  make
}

package() {
  cd build

  make DESTDIR=${pkgdir} install
}
