
# include global config
source ../_buildscripts/${current_repo}-${_arch}-cfg.conf

pkgname=kompare
pkgver=${_kdever}
pkgrel=1
pkgdesc='A KDE visual diff viewer'
url='http://kde.org/applications/development/kompare/'
arch=('x86_64')
license=('GPL' 'LGPL' 'FDL')
depends=('kcoreaddons' 'kcodecs' 'kiconthemes' 'kjobwidgets' 'kconfig' 'kparts' 'ktexteditor'
         'kwidgetsaddons' 'libkomparediff2')
makedepends=('extra-cmake-modules' 'kdoctools')
install=${pkgname}.install
groups=('kde' 'kdesdk' 'kde-uninstall' 'programming')
conflicts=('kdesdk-cervisia'
         'kdesdk-kcachegrind' 
         'kdesdk-kioslaves'
         'kdesdk-kompare'
         'kdesdk-poxml'
         'kdesdk-dev-scripts'
         'kdesdk-strigi-analyzers')
replaces=('kdesdk-cervisia'
         'kdesdk-kcachegrind' 
         'kdesdk-kioslaves'
         'kdesdk-kompare'
         'kdesdk-poxml'
         'kdesdk-dev-scripts'
         'kdesdk-strigi-analyzers')
source=("$_mirror/${pkgname}-$_kdever.tar.xz")
md5sums=(`grep ${pkgname}-$_kdever.tar.xz ../kde-sc.md5 | cut -d" " -f1`)

build() {
  cd ${srcdir}
  sed -e "s|Exec=kompare -caption %c -o %U|Exec=kompare -o %U|" -i ${srcdir}/$pkgname-${pkgver}/kompare.desktop
  sed -e "s|X-DBUS-StartupType=Multi||" -i ${srcdir}/$pkgname-${pkgver}/kompare.desktop
  
  mkdir -p build
  cd build
  
  cmake ../${pkgname}-${pkgver} \
    -DCMAKE_BUILD_TYPE=Release \
    -DCMAKE_INSTALL_PREFIX=/usr \
    -DLIB_INSTALL_DIR=lib \
    -DQML_INSTALL_DIR=/usr/lib/qt5/qml \
    -DPLUGIN_INSTALL_DIR=/usr/lib/qt5/plugins \
    -DBUILD_TESTING=OFF
  make
}

package() {
  cd build
  
  make DESTDIR=${pkgdir} install
}
