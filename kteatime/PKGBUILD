
# include global config
source ../_buildscripts/${current_repo}-${_arch}-cfg.conf

pkgname=kteatime
#pkgver=${_kdever}
pkgver=14.12.80
pkgrel=1
pkgdesc="System tray applet that makes sure your tea doesn't get too strong"
url='http://www.kde.org/'
arch=('x86_64')
license=('GPL' 'LGPL' 'FDL')
#groups=('kde' 'kdetoys' 'kde-uninstall' 'accessories')
depends=('kconfig' 'kcrash' 'ki18n' 'kiconthemes' 'knotifyconfig' 'knotifications' 'kwidgetsaddons'
         'ktextwidgets' 'kxmlgui')
makedepends=('extra-cmake-modules' 'kdoctools' 'git')
conflicts=('kdetoys-kteatime')
replaces=('kdetoys-kteatime')
install=${pkgname}.install
#source=($_mirror/${_pkgname}-$_kdever.tar.xz)
#md5sums=(`grep ${_pkgname}-$_kdever.tar.xz ../kde-sc.md5 | cut -d" " -f1`)
source=("git://anongit.kde.org/kteatime.git")
md5sums=('SKIP')

prepare() {
  cd $pkgname
  #sed -i -e 's|V4.2-Based Variant V1.1//EN" "dtd/kdex.dtd"|V4.5-Based Variant V1.1//EN" "dtd/kdedbx45.dtd"|' ${srcdir}/${pkgname}/doc/index.docbook
}

build() {
  mkdir -p build
  cd build
  
  cmake ../${pkgname} \
    -DCMAKE_BUILD_TYPE=Release \
    -DCMAKE_INSTALL_PREFIX=/usr \
    -DLIB_INSTALL_DIR=lib \
    -DPLUGIN_INSTALL_DIR=/usr/lib/qt5/plugins \
    -DKDE_INSTALL_USE_QT_SYS_PATHS=ON \
    -DBUILD_TESTING=OFF 
  make
}

package() {
  cd build

  make DESTDIR=${pkgdir} install
}
