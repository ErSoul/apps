
pkgname=blender
# adjust .desktop for version
pkgver=2.81
_pkgver=2.81
pkgrel=1
pkgdesc="A fully integrated 3D graphics creation suite"
arch=('x86_64')
license=('GPL')
url="http://www.blender.org"
depends=('desktop-file-utils' 'shared-mime-info' 'hicolor-icon-theme' 'xdg-utils')
source=("https://download.blender.org/release/Blender${_pkgver}/${pkgname}-${_pkgver}-linux-glibc217-x86_64.tar.bz2"
        'blender.desktop')
sha256sums=('e201e7c3dd46aae4a464ec764190199b0ca9ff2e51f9883cd869a4539f33c592'
            'ff766d4f88e9e4a9fcfced95aae7878b3637b3ab5557bbc2f7a067cf5944fe4f')

package() {
  cd ${pkgname}-${_pkgver}-linux-glibc217-x86_64
  
  install -d ${pkgdir}/opt
  mv -iv ${srcdir}/${pkgname}-${_pkgver}-linux-glibc217-x86_64 ${pkgdir}/opt
  
  mkdir -p ${pkgdir}/usr/share/icons/hicolor/scalable/apps
  install -m 644 -p ${pkgdir}/opt/${pkgname}-${_pkgver}-linux-glibc217-x86_64/blender.svg \
      ${pkgdir}/usr/share/icons/hicolor/scalable/apps/blender.svg

  install -Dm644 ${srcdir}/${pkgname}.desktop ${pkgdir}/usr/share/applications/${pkgname}.desktop
}
