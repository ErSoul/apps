
# include global config
source ../_buildscripts/${current_repo}-${_arch}-cfg.conf

pkgname=ksysguard
pkgver=${_plasmaver}
pkgrel=2
pkgdesc='KSysGuard is a program to monitor various elements of your system'
arch=('x86_64')
url='https://projects.kde.org/projects/kde/workspace/ksysguard'
license=('LGPL')
depends=('knewstuff' 'libksysguard' 'lm_sensors')
makedepends=('extra-cmake-modules' 'kdoctools')
groups=('plasma5')
source=("http://download.kde.org/stable/plasma/$pkgver/$pkgname-$pkgver.tar.xz")
#md5sums=(`grep ${pkgname}-$_kdever.tar.xz ../kf5.md5 | cut -d" " -f1`)
#source=("git://anongit.kde.org/ksysguard.git")
# grep md5 picks up libksysguard too
md5sums=('065e0efe3bd28f8e8565b109dc64f647')

build() {
  mkdir -p build
  #sed -e "s/PO_FILES //" -i ${srcdir}/$pkgname-$pkgver/po/*/CMakeLists.txt
  cd build
  
  cmake ../${pkgname}-$pkgver \
    -DCMAKE_BUILD_TYPE=Release \
    -DCMAKE_INSTALL_PREFIX=/usr \
    -DLIB_INSTALL_DIR=lib \
    -DSYSCONF_INSTALL_DIR=/etc \
    -DKDE_INSTALL_USE_QT_SYS_PATHS=ON \
    -DBUILD_TESTING=OFF
  make
}

package() {
  cd build

  make DESTDIR="${pkgdir}" install
}

