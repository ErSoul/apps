
# include global config
source ../_buildscripts/${current_repo}-${_arch}-cfg.conf

pkgname=kdegraphics-kgamma
_pkgname=kgamma
pkgver=${_kdever}
pkgrel=1
pkgdesc="A monitor calibration tool"
arch=('x86_64')
url='http://www.kde.org'
license=('GPL' 'LGPL' 'FDL')
# note on libxxf86vm:
#       not detected by namcap because libgl depends on it
#       but nvidia providing libgl does not depend on libxxf86vm
depends=('kde-runtime' 'libxxf86vm' 'kdegraphics-libkexiv2' 'kdegraphics-libkdcraw' 'kdegraphics-libkipi'
         'kdegraphics-ksaneplugin' 'kdegraphics-thumbnailers' 'kdegraphics-strigi-analyzer' 
         'kdegraphics-svgpart')
makedepends=('cmake' 'automoc4')
source=("$_mirror/${_pkgname}-$_kdever.tar.xz")
md5sums=(`grep ${_pkgname}-$_kdever.tar.xz ../kde-sc.md5 | cut -d" " -f1`)
groups=("kde" "kdegraphics" "kde-uninstall" 'graphics')
provides=('kdegraphics-common')
replaces=('kdegraphics-common' 'kdegraphics-doc')
conflicts=('kdegraphics-common')
options=('docs')

build() {
	cd ${srcdir}/${_pkgname}-${pkgver}
	
	cmake . -DCMAKE_BUILD_TYPE=${_build_type} \
                -DCMAKE_INSTALL_PREFIX=${_installprefix} \
                -DCMAKE_SKIP_RPATH=ON \
                -DCMAKE_{SHARED,MODULE,EXE}_LINKER_FLAGS='-Wl,--no-undefined -Wl,--as-needed'

}

package() {
	cd ${srcdir}/${_pkgname}-${pkgver}
	
	make DESTDIR=${pkgdir} install 

}
