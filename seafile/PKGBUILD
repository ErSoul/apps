
pkgname=seafile
pkgver=4.4.2
pkgrel=1
pkgdesc="Open source cloud storage with advanced features on privacy protection and teamwork."
arch=('x86_64')
url="https://github.com/haiwen/seafile/"
license=('GPLv3')
depends=('ccnet' 'fuse' 'python2')
makedepends=('intltool' 'vala')
source=("https://github.com/haiwen/seafile/archive/v${pkgver}-server.tar.gz")
md5sums=('ffe22390c2a97961acc7aadf325f7639')

build() {
  cd ${srcdir}/${pkgname}-${pkgver}-server

  ./autogen.sh
  ./configure --prefix=/usr
  make
}

package() {
  cd ${srcdir}/${pkgname}-${pkgver}-server

  make DESTDIR=${pkgdir} install
}