
# include global config
source ../_buildscripts/${current_repo}-${_arch}-cfg.conf

pkgname=oxygen-fonts
pkgver=0.4.0.1
_pkgver=${_kdever}
pkgrel=1
pkgdesc='The Oxygen font family. A desktop/gui font family for integrated use with the KDE desktop.'
arch=('x86_64')
url='https://projects.kde.org/projects/playground/artwork/oxygen-fonts'
license=('LGPL')
depends=('fontforge')
makedepends=('extra-cmake-modules')
source=("http://download.kde.org/stable/plasma/$_pkgver/$pkgname-$pkgver.tar.xz")
md5sums=('06abc724bb0ca5614dc6dd66818b7003')

build() {
  mkdir -p build
  cd build
  
  cmake ../${pkgname}-${pkgver} \
    -DCMAKE_BUILD_TYPE=Release \
    -DCMAKE_INSTALL_PREFIX=/usr \
    -DLIB_INSTALL_DIR=lib  
  make
}

package() {
  cd build

  make DESTDIR="${pkgdir}" install
}
