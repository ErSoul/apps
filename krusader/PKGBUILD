
pkgname=krusader
pkgver=2.4.0.2
#_pkgver=2.4.0-beta3
pkgrel=1
pkgdesc="An alternative file manager for KDE resembling Midnight Commander"
url="http://krusader.sourceforge.net/"
arch=('x86_64')
license=('GPL')
depends=('karchive' 'kconfig' 'kdelibs4support' 'kparts' 'acl' 'ark' 'kde-baseapps' 'konsole' 'kate' 
         'kwallet' 'khtml')
makedepends=('extra-cmake-modules' 'kdoctools' 'git' 'docbook-xsl') # 'kdelibs')
#groups=('system')
install=${pkgname}.install
#source=("http://downloads.sourceforge.net/${pkgname}/${pkgname}-${_pkgver}.tar.bz2")
source=("git://anongit.kde.org/krusader.git#branch=plasma")
md5sums=('SKIP')

prepare() {
  cd $srcdir/$pkgname

  #patch -p1 -i "$srcdir/kde_bug309119.diff" 
  #patch -p1 -i "$srcdir/kde_bug325801.diff" 
}

build() {
  cd ${srcdir}
  mkdir build
  
  cd build
  cmake ../${pkgname} \
    -DCMAKE_BUILD_TYPE=Release \
    -DCMAKE_INSTALL_PREFIX=/usr \
    -DPLUGIN_INSTALL_DIR=/usr/lib/qt5/plugins \
    -DKDE_INSTALL_USE_QT_SYS_PATHS=ON 
  make 
}

package() {
  cd ${srcdir}/build
  
  make DESTDIR=${pkgdir} install 
}
