
pkgname=kf5-ktp-auth-handler
_pkgname=ktp-auth-handler
pkgver=0.9.90
pkgrel=1
pkgdesc="Provide UI/KWallet Integration for passwords and ssl errors on account connect"
arch=('x86_64')
url="https://projects.kde.org/projects/extragear/network/telepathy/ktp-auth-handler/"
license=('GPL')
depends=('kwallet' 'kwidgetsaddons' 'ki18n' 'kio' 'kdewebkit' 'kf5-ktp-common-internals' 
         'kaccounts-integration' 'qca-qt5' 'accounts-qt5' 'signon-qt5')
makedepends=('extra-cmake-modules' 'kdoctools' 'git')
conflicts=('ktp-auth-handler')
#groups=('kde-telepathy')
source=("git://anongit.kde.org/ktp-auth-handler.git#branch=frameworks")
md5sums=('SKIP')

build() {
  cd ${srcdir}
  
  mkdir -p build
  cd build

  cmake ../${_pkgname} \
    -DCMAKE_BUILD_TYPE=Release \
    -DCMAKE_INSTALL_PREFIX=/usr \
    -DLIB_INSTALL_DIR=lib \
    -DSYSCONF_INSTALL_DIR=/etc \
    -DQML_INSTALL_DIR=/usr/lib/qt5/qml \
    -DKDE_INSTALL_USE_QT_SYS_PATHS=ON \
    -DBUILD_TESTING=OFF 
  make
}

package() {
  cd build

  make DESTDIR=${pkgdir} install
}
