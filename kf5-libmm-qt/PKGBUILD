
pkgname=kf5-libmm-qt
_pkgname=libmm-qt
pkgver=5.0.90
_pkgver=1.0.1
pkgrel=1
pkgdesc='Qt-only wrapper for ModemManager DBus API'
arch=('x86_64')
url='https://projects.kde.org/projects/extragear/libs/libmm-qt'
license=('LGPL')
depends=('qt5-base' 'modemmanager')
makedepends=('extra-cmake-modules')
source=("http://download.kde.org/unstable/plasma/$pkgver/src/$_pkgname-$pkgver.tar.xz")
md5sums=('cc5b8f48c41caf8ab72ec4e834858c22')
#source=("git://anongit.kde.org/libmm-qt.git")
#md5sums=('SKIP')

build() {
  cd $_pkgname-$pkgver
  mkdir build
  
  cd build
  cmake .. \
    -DCMAKE_BUILD_TYPE=Release \
    -DCMAKE_INSTALL_PREFIX=/usr \
    -DLIB_INSTALL_DIR=lib \
    -DINCLUDE_INSTALL_DIR=/usr/include/KF5
  make
}

package() {
  cd $_pkgname-$pkgver/build
  
  make DESTDIR=${pkgdir} install
}
