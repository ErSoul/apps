
pkgname=calligra
pkgver=2.9.1.1
pkgrel=1
arch=('x86_64')
url='http://www.calligra-suite.org'
license=('FDL1.2' 'GPL2' 'LGPL')
depends=('karchive' 'kcodecs' 'kconfig' 'kcoreaddons' 'kguiaddons' 'ki18n' 'kitemmodels' 'kitemviews' 'kwidgetsaddons'
         'threadweaver' 'kcompletion' 'kiconthemes' 'kparts' 'kxmlgui' 'kross' 'kemoticons' 'kconfigwidgets' 'kdelibs4support'
         'eigen3' 'freetds' 'xbase' 'libpqxx' 'libvisio' 'libgsf' 'libwpd' 'libwpg' 'libwps' 'pstoedit' 'glew' 'gsl' 
         'lcms2' 'libmariadbclient' 'opencolorio' 'libodfgen' 'poppler-qt5' 'libspnav' 'fftw' 'hicolor-icon-theme' 
         'sqlite3' 'libkdcraw' 'exiv2' 'qca-qt5' 'qt5-quick1' 'marble' 'kactivities' 'kdiagram' 'kdeclarative' 'kcalcore'
         'kcontacts' 'kdepimlibs' 'okular' 'openexr') # 'vc'
makedepends=('extra-cmake-modules' 'kdoctools' 'git' 'boost' 'docbook-xsl') # 'kdelibs')
#groups=('calligra')
#source=("http://mirrors.mit.edu/kde/stable/${pkgbase}-${pkgver}/${pkgbase}-${pkgver}.tar.xz")
source=("git://anongit.kde.org/calligra.git#branch=frameworks")
md5sums=('SKIP')

prepare() {
  cd ${srcdir}/${pkgbase}
  sed -i 's|set(REQUIRED_Xinput_FOUND ${X11_Xinput_FOUND})|set(REQUIRED_Xinput_FOUND TRUE)|' CMakeLists.txt
  
  #patch -p1 -i $srcdir/0001-switch-to-librevenge-based-import-libs.patch
}

build() {
  cd ${srcdir}
  
  mkdir build
  cd build
  cmake ../${pkgname} \
    -DCMAKE_BUILD_TYPE=RelWithDebInfo \
    -DCMAKE_INSTALL_PREFIX=/usr \
    -DCMAKE_INSTALL_LIBDIR=lib \
    -DPLUGIN_INSTALL_DIR=/usr/lib/qt5/plugins \
    -DKDE_INSTALL_USE_QT_SYS_PATHS=ON \
    -DPRODUCTSET=DESKTOP  
  make
}

package() {
  cd ${srcdir}/build
  
  make DESTDIR=${pkgdir} install
}

