#source=("http://mirrors.mit.edu/kde/stable/${pkgbase}-${pkgver}/${pkgbase}-${pkgver}.tar.xz")
source=("git://anongit.kde.org/calligra.git#branch=frameworks"
        "libwps-0.4.patch"
        'qt55.diff')
md5sums=('SKIP'
         '2529367ef6a10582436003aceb7dc3e8'
         'a4c8002be755c052ed0695c7d8c689bf')

prepare() {
  cd ${srcdir}/${pkgname}
  #sed -i 's|set(REQUIRED_Xinput_FOUND ${X11_Xinput_FOUND})|set(REQUIRED_Xinput_FOUND TRUE)|' CMakeLists.txt
  #patch -p1 -i $srcdir/qt55.diff
  patch -p1 -i $srcdir/libwps-0.4.patch
}

build() {
  cd ${srcdir}
  
  mkdir build
  cd build
  cmake ../${pkgname} \
    -DCMAKE_BUILD_TYPE=RelWithDebInfo \
    -DCMAKE_INSTALL_PREFIX=/usr \
    -DCMAKE_INSTALL_LIBDIR=lib \
    -DPLUGIN_INSTALL_DIR=/usr/lib/qt5/plugins \
    -DKDE_INSTALL_USE_QT_SYS_PATHS=ON \
    -DPRODUCTSET=DESKTOP 
    # -DCOMPILING_TESTS=FALSE
  make
}

package() {
  cd ${srcdir}/build
  
  make DESTDIR=${pkgdir} install
}

