         'threadweaver' 'kcompletion' 'kiconthemes' 'kparts' 'kxmlgui' 'kross' 'kemoticons' 'kconfigwidgets' 'ktexteditor' 
         'kdelibs4support' 'eigen3' 'freetds' 'xbase' 'libpqxx' 'libvisio' 'libgsf' 'libwpd' 'libwpg' 'libwps' 'pstoedit' 'glew' 'gsl' 
         'lcms2' 'libmariadbclient' 'opencolorio' 'libodfgen' 'poppler-qt5' 'libspnav' 'fftw' 'hicolor-icon-theme' 
         'sqlite3' 'libkdcraw' 'exiv2' 'qca-qt5' 'qt5-quick1' 'marble' 'kactivities' 'kdiagram' 'kdeclarative' 'kcalcore'
         'kcontacts' 'kdepimlibs' 'knotifyconfig' 'okular' 'openexr' 'vc' 'kreport' 'kdb')
makedepends=('extra-cmake-modules' 'kdoctools' 'git' 'boost' 'docbook-xsl') 
conflicts=('calligra-3rdparty'
