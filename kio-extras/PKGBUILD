
# include global config
source ../_buildscripts/${current_repo}-${_arch}-cfg.conf

pkgname=kio-extras
pkgver=${_plasmaver}
pkgrel=1
pkgdesc='Additional components to increase the functionality of KIO'
arch=('x86_64')
url='https://projects.kde.org/projects/kde/workspace/kio-extras'
license=('LGPL')
depends=('exiv2' 'kdelibs4support' 'kdnssd' 'kemoticons' 'khtml' 'kinit' 'kitemmodels' 'libssh'
         'openexr' 'samba')
makedepends=('extra-cmake-modules' 'kdoctools' 'openslp')
conflicts=('kfileaudiopreview')
provides=('kfileaudiopreview')
replaces=('kfileaudiopreview')
groups=('plasma5')
source=("http://download.kde.org/stable/plasma/$pkgver/$pkgname-$pkgver.tar.xz")
md5sums=(`grep ${pkgname}-$_plasmaver.tar.xz ../kf5.md5 | cut -d" " -f1`)
#source=("git://anongit.kde.org/kio-extras.git")
#md5sums=('SKIP')

build() {
  mkdir -p build
  #sed -e "s/PO_FILES //" -i ${srcdir}/$pkgname-$pkgver/po/*/CMakeLists.txt
  cd build
  
  cmake ../$pkgname-$pkgver \
    -DCMAKE_BUILD_TYPE=Release \
    -DCMAKE_INSTALL_PREFIX=/usr \
    -DLIB_INSTALL_DIR=lib \
    -DSYSCONF_INSTALL_DIR=/etc \
    -DPLUGIN_INSTALL_DIR=/usr/lib/qt5/plugins \
    -DKDE_INSTALL_USE_QT_SYS_PATHS=ON \
    -DBUILD_TESTING=OFF
  make
}

package() {
  cd build
  
  make DESTDIR="${pkgdir}" install
}
