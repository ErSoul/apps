
pkgname=now-dock
pkgver=0.3.0
_commit=21813cd21529946a7edcb3f967513e74bb8f254c
pkgrel=1
pkgdesc="Plasmoid for Plasma 5 which is trying to implement a mac style effect for tasks"
arch=('x86_64')
url="https://www.kde-look.org/p/1151047/"
license=('GPL')
depends=('plasma-framework')
groups=('kdeplasma-addons')
install=${pkgname}.install
source=("https://github.com/psifidotos/nowdock-plasmoid/archive/${_commit}.zip")
md5sums=('cd06a3ba52452475cca272e7b5c60961')

package() {
  cd nowdock-plasmoid-${_commit}/
  
  mkdir -p ${pkgdir}/usr/share/plasma/plasmoids/org.kdelook.nowdock
  mv contents ${pkgdir}/usr/share/plasma/plasmoids/org.kdelook.nowdock/
  install -D -m644 metadata.desktop ${pkgdir}/usr/share/plasma/plasmoids/org.kdelook.nowdock/
  
  mkdir -p ${pkgdir}/usr/share/licenses/${pkgname}/
  install -D -m644 LICENSE ${pkgdir}/usr/share/licenses/${pkgname}/LICENSE
}
