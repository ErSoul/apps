
# include global config
source ../_buildscripts/${current_repo}-${_arch}-cfg.conf

pkgname="kdeutils-kwalletmanager"
_pkgname="kwalletmanager"
arch=('x86_64')
pkgver=${_kdever}
pkgrel=1
pkgdesc="The KDE wallet system"
url="http://www.kde.org"
license=('GPL' 'LGPL' 'FDL')
options=('docs')
depends=("kde-runtime>=${_kdever}" "kde-baseapps>=${_kdever}")
replaces=('kdeutils-kwallet')
provides=('kdeutils-kwallet')
conflicts=('kdeutils-common' 'kdeutils-kwallet')
groups=("kde" "kdeutils" "kde-uninstall")
install=kdeutils.install
makedepends=('pkg-config' 'cmake' 'automoc4' "kdelibs>=${_kdever}")
groups=('utils')

source=($_mirror/${_pkgname}-$_kdever.tar.xz)
md5sums=(`grep ${_pkgname}-$_kdever.tar.xz ../kde-sc.md5 | cut -d" " -f1`)

build() {
	cd ${srcdir}/${_pkgname}-${pkgver}

	msg "starting build ..."
	cmake . -DCMAKE_BUILD_TYPE=${_build_type} \
		-DCMAKE_INSTALL_PREFIX=${_installprefix} \
		-DCMAKE_SKIP_RPATH=ON \
		-DCMAKE_{SHARED,MODULE,EXE}_LINKER_FLAGS='-Wl,--no-undefined -Wl,--as-needed'
	make
}

package() {
	cd ${srcdir}/${_pkgname}-${pkgver}
	
	make DESTDIR=${pkgdir} install
}
