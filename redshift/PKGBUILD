
pkgname=redshift
pkgver=1.9
pkgrel=1
pkgdesc='Adjusts the color temperature of your screen according to your surroundings'
arch=('x86_64')
url='http://jonls.dk/redshift/'
license=('GPL3')
depends=('libxxf86vm' 'libxcb')
makedepends=('python3')
source=("https://github.com/jonls/${pkgname}/releases/download/v${pkgver}/${pkgname}-${pkgver}.tar.xz")
md5sums=('9640218cd9ba88f6d10b347b2277c415')

prepare() {
  cd "${srcdir}/${pkgname}-${pkgver}"
  
  sed -i 's/python/python3/' src/redshift-gtk/redshift-gtk
}

build() {
  cd "${srcdir}/${pkgname}-${pkgver}"
  autoreconf -fi

  PYTHON=/usr/bin/python3 ./configure \
         --prefix=/usr \
         --disable-gui \
         --disable-gnome-clock \
         --disable-geoclue \
         --disable-ubuntu 
  make
}

package() {
  cd "${srcdir}/${pkgname}-${pkgver}"
  
  make DESTDIR="${pkgdir}" install
}
