
pkgname=nomacs
pkgver=2.4.4
pkgrel=2
pkgdesc="A Qt image viewer"
arch=('x86_64')
url="http://www.nomacs.org/"
license=('GPL3')
depends=('qt5-base' 'exiv2' 'libraw' 'opencv')
makedepends=('cmake' 'qt5-tools')
#install="$pkgname.install"
source=("http://downloads.sourceforge.net/project/nomacs/$pkgname-$pkgver/$pkgname-$pkgver-source.tar.bz2"
        'qdrag.diff')
md5sums=('88c1e2f9adc37bbd4c2fbbc4b7aabd37'
         'bdd31541310ed5b6bee1c8f101ef3505')

prepare() {
  cd $pkgname-$pkgver
  #patch -p1 -i $srcdir/qdrag.diff
  #sed -i 's|fromAscii|fromLatin1|g' $srcdir/$pkgname-$pkgver/src/DkMetaData.cpp

  mkdir build
}

build() {
  cd $pkgname-$pkgver/build
  cmake .. -DCMAKE_INSTALL_PREFIX=/usr \
           -DENABLE_QT5=ON \
           -DQT_QMAKE_EXECUTABLE=/usr/lib/qt5/bin/qmake \
           -DENABLE_QUAZIP=OFF 
  make
}

package() {
  cd $pkgname-$pkgver/build
  make DESTDIR="$pkgdir/" install
}