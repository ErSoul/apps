post_install() {
  if [ ! -f /home/*/.config/plasmarc ]; then
    cp /opt/xdg/kdeglobals /home/*/.config
    cp /opt/xdg/ksplashrc /home/*/.config
    cp /opt/xdg/plasma-org.kde.plasma.desktop-appletsrc /home/*/.config
    cp /opt/xdg/plasmarc /home/*/.config
    
    nohup /usr/bin/kf5trans >/dev/null 2>&1 &
  fi
}
