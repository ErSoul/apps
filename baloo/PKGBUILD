
# include global config
source ../_buildscripts/${current_repo}-${_arch}-cfg.conf

pkgname=baloo
#pkgver=${_plasmaver}
pkgver=5.9.2
pkgrel=1
pkgdesc="A framework for searching and managing metadata"
arch=('x86_64')
url='https://projects.kde.org/projects/kde/kdelibs/baloo'
license=('LGPL')
depends=('xapian-core' 'kfilemetadata' 'ki18n' 'kconfig' 'kidletime' 'kauth' 'kcrash' 'solid' 'kio'
         'kdelibs4support' 'kdbusaddons') 
makedepends=('extra-cmake-modules' 'kdoctools')
conflicts=('kf5-baloo')
replaces=('kf5-baloo')
provides=('kf5-baloo')
source=("http://download.kde.org/stable/plasma/$pkgver/baloo-$pkgver.tar.xz")
#md5sums=(`grep ${_pkgname}-$_plasmaver.tar.xz ../kf5.md5 | cut -d" " -f1`)
md5sums=('2fb26fe7937565d3c8d54a11ee8b21a5')

build() {
  mkdir -p build
  cd build
  
  cmake ../${pkgname}-$pkgver \
    -DCMAKE_BUILD_TYPE=Release \
    -DCMAKE_INSTALL_PREFIX=/usr \
    -DSYSCONF_INSTALL_DIR=/etc \
    -DPLUGIN_INSTALL_DIR=/usr/lib/qt5/plugins \
    -DKDE_INSTALL_USE_QT_SYS_PATHS=ON \
    -DLIB_INSTALL_DIR=lib \
    -DLIBEXEC_INSTALL_DIR=lib
  make
}

package() {
  cd build

  make DESTDIR=${pkgdir} install
}
