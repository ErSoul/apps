
# include global config
source ../_buildscripts/${current_repo}-${_arch}-cfg.conf

pkgname=milou
pkgver=4.98.0
pkgrel=1
pkgdesc="Dedicated search application built on top of Baloo"
arch=('x86_64')
url='https://projects.kde.org/projects/kdereview/milou'
license=('GPL')
depends=('kf5-baloo' 'qt5-webkit')
makedepends=('extra-cmake-modules' 'kdoctools')
provides=('milou-git')
conflicts=('milou-git')
source=("http://download.kde.org/unstable/plasma/$pkgver/src/${pkgname}5-$pkgver.tar.xz")
md5sums=('117e2715381e73c4b7a49704bc021761')

build() {
  mkdir -p build
  cd build

  cmake ../${pkgname}-$pkgver \
      -DCMAKE_BUILD_TYPE=Release \
      -DCMAKE_INSTALL_PREFIX=/usr \
      -DQML_INSTALL_DIR=/usr/lib/qt5/qml \
      -DLIB_INSTALL_DIR=lib
  make
}

package() {
  cd build

  make DESTDIR="${pkgdir}" install
}