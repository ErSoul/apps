
# include global config
source ../_buildscripts/${current_repo}-${_arch}-cfg.conf

pkgname=kde4support
pkgver=${_kdever}
pkgrel=1
pkgdesc='KDE 4 Support'
arch=('x86_64')
url='https://projects.kde.org/projects/frameworks/kde4support'
license=('LGPL')
depends=('kio' 'kunitconversion' 'kdesignerplugin' 'libsm')
makedepends=('extra-cmake-modules' 'kdoctools')
groups=('kf5')
source=("http://download.kde.org/unstable/frameworks/${pkgver}/${pkgname}-${pkgver}.tar.xz")
md5sums=(`grep ${pkgname}-$_kdever.tar.xz ../kf5.md5 | cut -d" " -f1`)

build() {
  #export XDG_DATA_DIRS="/opt/kf5/share:$XDG_DATA_DIRS"
  mkdir -p build
  cd build
  
  cmake ../${pkgname} \
    -DCMAKE_BUILD_TYPE=Release \
    -DCMAKE_INSTALL_PREFIX=/usr \
    -DLIB_INSTALL_DIR=lib \
    -DBUILD_TESTING=OFF
  make
}

package() {
  cd build
  
  make DESTDIR="${pkgdir}" install
}
