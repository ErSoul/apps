
pkgname=quassel
pkgver=0.10.9
pkgrel=2
pkgdesc="Qt irc client with a separated core"
url="http://quassel-irc.org"
arch=('x86_64')
license=('GPL')
depends=('qt5-script' 'qt5-webkit' 'hicolor-icon-theme' 'inxi' 'libdbusmenu-qt5' 'phonon-qt5' 'snorenotify')
makedepends=('cmake' 'automoc4' 'qt5-tools')
groups=('communication')
#source=("http://quassel-irc.org/pub/quassel-${pkgver}.tar.bz2"
source=("git://github.com/quassel/quassel.git"
	'quassel.service'
        'quassel.conf')
install=quassel.install
backup=(etc/conf.d/quassel.conf)
md5sums=('SKIP'
         '7f56b8d2d54a1395ed8bada023ec710c'
         '479229556ba0dd94e3ce28e31e5deea9')
         
build() {
  [[ ! -d build ]] && mkdir build
  cd build

  cmake \
    -DCMAKE_INSTALL_PREFIX=/usr/ \
    -DUSE_QT5=ON \
    -DUSE_QT4=OFF \
    -DWITH_WEBKIT=ON \
    -DWITH_KDE=0 \
    -DWITH_OXYGEN=0 \
    -DWANT_MONO=ON \
    -DQT_PATH=/usr/lib/qt5/bin/ \
    -DCMAKE_BUILD_TYPE="Release" \
    ../${pkgname} \
    -Wno-dev

  make
}

package() {
  cd build

  make DESTDIR=${pkgdir} install

  install -D ${srcdir}/$pkgname.service ${pkgdir}/usr/lib/systemd/system/$pkgname.service
  install -D -m644 ${srcdir}/$pkgname.conf ${pkgdir}/etc/conf.d/$pkgname
}

