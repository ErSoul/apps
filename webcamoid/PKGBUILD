
pkgname=webcamoid
pkgver=5.1.0
pkgrel=1
pkgdesc="Webcamoid is a full featured webcam capture application."
url='https://github.com/hipersayanX/Webcamoid'
license=('GPL')
arch=('x86_64')
depends=('qt5-webkit' 'ffmpeg' 'opencv')
makedepends=('bison' 'flex' 'qt5-tools')
source=("https://github.com/hipersayanX/Webcamoid/archive/v${pkgver}.tar.gz")
md5sums=('b3c9770446b38998a0f819805a19e22a')

build() {
  cd $srcdir/Webcamoid-${pkgver}
  sed -i -e 's|QMAKE_LRELEASE = lrelease -qt=5|QMAKE_LRELEASE = lrelease-qt5|g' commons.pri

  /usr/lib/qt5/bin/qmake Webcamoid.pro 
  make -j1
}

package() {
  cd $srcdir/Webcamoid-${pkgver}

  make INSTALL_ROOT="${pkgdir}" install
}