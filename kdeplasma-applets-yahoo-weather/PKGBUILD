
pkgname=kdeplasma-applets-yahoo-weather
_pkgname=com.librehat.yahooweather
pkgver=0.5.83
_commit=ebd1704
pkgrel=1
pkgdesc="Yahoo! Weather Widget written in QML."
arch=('x86_64')
url="http://kde-apps.org/content/show.php?content=164194"
license=('GPL')
depends=('plasma-framework')
makedepends=('git' 'zip')
groups=('kdeplasma-addons')
install=$pkgname.install
source=("https://github.com/bvbfan/${_pkgname}/tarball/master/${_pkgname}-${pkgver}.tar.gz")
md5sums=('cb1ab5420d7d5e0c078d288a8c2de117')

build() {
  cd bvbfan-${_pkgname}-${_commit}/
  
  ./mkplasmoid.sh 
}

package() {
  cd bvbfan-${_pkgname}-${_commit}/
  
  mkdir -p ${pkgdir}/usr/share/plasma/plasmoids/${_pkgname}
  mv contents ${pkgdir}/usr/share/plasma/plasmoids/${_pkgname}/
  install -D -m644 metadata.desktop ${pkgdir}/usr/share/plasma/plasmoids/${_pkgname}/
  
  mkdir -p ${pkgdir}/usr/share/licenses/${pkgname}/
  install -D -m644 LICENSE ${pkgdir}/usr/share/licenses/${pkgname}/LICENSE
}
