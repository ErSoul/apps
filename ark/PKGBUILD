
# include global config
source ../_buildscripts/${current_repo}-${_arch}-cfg.conf

pkgname="ark"
arch=('x86_64')
#pkgver=${_kdever}
pkgver=15.03.71
pkgrel=1
pkgdesc="Archiver for various compression formats"
url="http://www.kde.org"
license=('GPL' 'LGPL' 'FDL')
depends=('karchive' 'kconfig' 'kpty' 'khtml' 'kdelibs4support' 'kdbusaddons' 
         'libarchive' 'p7zip' 'zip' 'unzip' 'unrar' 'kde-baseapps')
makedepends=('extra-cmake-modules' 'kdoctools' 'git' 'docbook-xsl')
#groups=('kde' 'kdeutils' 'kde-uninstall' 'utils')
conflicts=('kdeutils-ark')
replaces=('kdeutils-ark')
install=ark.install
#source=($_mirror/${_pkgname}-$_kdever.tar.xz)
#md5sums=(`grep ${_pkgname}-$_kdever.tar.xz ../kde-sc.md5 | cut -d" " -f1`)
source=("git://anongit.kde.org/ark.git#branch=frameworks")
md5sums=('SKIP')

build() {
  cd ${srcdir}
  
  mkdir -p build
  cd build

  cmake ../${pkgname} \
    -DCMAKE_BUILD_TYPE=Release \
    -DCMAKE_INSTALL_PREFIX=/usr \
    -DLIB_INSTALL_DIR=lib \
    -DSYSCONF_INSTALL_DIR=/etc \
    -DQML_INSTALL_DIR=/usr/lib/qt5/qml \
    -DPLUGIN_INSTALL_DIR=/usr/lib/qt5/plugins \
    -DKDE_INSTALL_USE_QT_SYS_PATHS=ON \
    -DBUILD_TESTING=OFF 
  make
}

package() {
  cd build

  make DESTDIR=${pkgdir} install
}
