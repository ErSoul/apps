
pkgname=calibre
pkgver=2.31.0
pkgrel=1
pkgdesc="Ebook management application."
arch=('x86_64') 
url="http://www.calibre-ebook.com/"
license=('GPL3')
depends=('python2')
makedepends=('xdg-utils')
groups=('office')
install=calibre.install
source=("http://download.calibre-ebook.com/${pkgver}/calibre-"${pkgver}"-x86_64.txz"
        'calibre.desktop'
        'calibre.png')
md5sums=('d0a1324703e471902eeb6ce46a0785cd'
         'bda3df9bbc0b793d94a4d3d10bdf194a'
         '5c523427b55c62d7fee06b0cc056c46e')

package() {
  cd "${srcdir}"
  
  install -d "${pkgdir}/opt/calibre"
  tar xvf "${srcdir}"/calibre-"${pkgver}"-x86_64.txz -C "$pkgdir"/opt/calibre

  install -d "${pkgdir}/usr/bin"
  install -Dm644 "${srcdir}/calibre.desktop" "${pkgdir}/usr/share/applications/calibre.desktop"             
  install -Dm644 "${srcdir}/calibre.png" "${pkgdir}/usr/share/pixmaps/calibre.png"
  ln -s /opt/calibre/calibre "$pkgdir/usr/bin/calibre"
}

