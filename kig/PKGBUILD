
# include global config
source ../_buildscripts/${current_repo}-${_arch}-cfg.conf

pkgname=kig
pkgver=${_kdever}
pkgrel=1
pkgdesc="Interactive Geometry"
url="http://kde.org/applications/education/kig/"
arch=('x86_64')
url='http://www.kde.org'
license=('GPL' 'LGPL' 'FDL')
depends=('kparts' 'kdelibs4support' 'ki18n' 'ktexteditor' 'kiconthemes' 'kconfigwidgets' 'karchive' 'kxmlgui'
         'kemoticons' 'kitemmodels' 'boost-libs' 'python2')
makedepends=('extra-cmake-modules' 'kdoctools' 'boost')
conflicts=('kdeedu-kig')
#groups=('kde' 'kdeedu' 'kde-uninstall' 'education')
#options=('docs')
install=${pkgname}.install
source=("$_mirror/${pkgname}-$_kdever.tar.xz")
#md5sums=(`grep ${_pkgname}-$_kdever.tar.xz ../kde-sc.md5 | cut -d" " -f1`)
#source=("git://anongit.kde.org/kig.git#branch=frameworks")
md5sums=('65a8bfbe77ee509ef184ff8945e5dfbe')

build() {
  mkdir -p build
  cd build
  
  cmake ../${pkgname}-${pkgver} \
    -DCMAKE_BUILD_TYPE=Release \
    -DCMAKE_INSTALL_PREFIX=/usr \
    -DLIB_INSTALL_DIR=lib \
    -DPLUGIN_INSTALL_DIR=/usr/lib/qt5/plugins \
    -DKDE_INSTALL_USE_QT_SYS_PATHS=ON \
    -DBUILD_TESTING=OFF 
  make
}

package() {
  cd build

  make DESTDIR=${pkgdir} install
}
