
pkgname=lmms
pkgver=1.0.0
pkgrel=1
pkgdesc='The Linux MultiMedia Studio.'
arch=('x86_64')
url='http://lmms.sourceforge.net/'
license=('GPL')
depends=('sdl' 'glib2' 'fluidsynth' 'libpng' 'libvorbis' 'libxft' 'libxinerama' 'qt'
         'sdl_sound' 'libsamplerate' 'shared-mime-info' 'fltk')
makedepends=('cmake' 'ladspa' 'libxft' 'freetype2' 'fftw')
options=('!makeflags')
install=lmms.install
source=("http://downloads.sourceforge.net/sourceforge/lmms/${pkgname}-${pkgver}-src.tar.bz2")
md5sums=('72260dd6e29bf018875fd751c1d43465')

build() {
  cd "${srcdir}/${pkgname}-${pkgver}"
  sed -i 's|lib64|lib|g' cmake/modules/DetectMachine.cmake

  cmake . -DCMAKE_INSTALL_PREFIX=/usr 
  make
}

package() {
  cd "$srcdir/$pkgname-$pkgver"
  
  make DESTDIR="${pkgdir}" install
}
