
# include global config
source ../_buildscripts/${current_repo}-${_arch}-cfg.conf

pkgname=libkdcraw
#pkgver=${_kdever}
pkgver=5.0.90
pkgrel=1
pkgdesc="A library for decoding RAW picture files"
arch=('x86_64')
url='https://projects.kde.org/projects/kde/kdegraphics/libs'
license=('GPL' 'LGPL' 'FDL')
depends=('kdelibs4support' 'threadweaver' 'libjpeg-turbo' 'libraw')
makedepends=('pkg-config' 'extra-cmake-modules' 'kdoctools')
#groups=("kde" "kdegraphics" "kde-uninstall")
conflicts=('kdegraphics-libkdcraw')
#options=('docs')
#source=("$_mirror/${_pkgname}-$_kdever.tar.xz")
#md5sums=(`grep ${_pkgname}-$_kdever.tar.xz ../kde-sc.md5 | cut -d" " -f1`)
source=("git://anongit.kde.org/libkdcraw.git#branch=frameworks"
        'ractionthreadbase_p.diff'
        'ractionthreadbase.diff')
md5sums=('SKIP'
         '97a1bfa08379be7ee5826c384beb3b4b'
         'e128758ca71ce183c625356ceeb34d72')

prepare() {
  cd $pkgname
  sed -i -e 's/libkexiv2_SOURCE_DIR/libkdcraw_SOURCE_DIR/' ${srcdir}/${pkgname}/CMakeLists.txt
  #patch -p1 -i $srcdir/ractionthreadbase_p.diff
  #patch -p1 -i $srcdir/ractionthreadbase.diff
}

build() {
  mkdir -p build
  cd build
  
  cmake ../${pkgname} \
    -DCMAKE_BUILD_TYPE=Release \
    -DCMAKE_INSTALL_PREFIX=/usr \
    -DLIB_INSTALL_DIR=lib \
    -DPLUGIN_INSTALL_DIR=/usr/lib/qt5/plugins \
    -DBUILD_TESTING=OFF
  make
}

package() {
  cd build

  make DESTDIR=${pkgdir} install
}
