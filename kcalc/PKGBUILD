
# include global config
source ../_buildscripts/${current_repo}-${_arch}-cfg.conf

pkgname="kcalc"
#pkgver=${_kdever}
pkgver=14.11.70
pkgrel=1
arch=('x86_64')
pkgdesc="Scientific calculator"
url="https://www.kde.org/applications/utilities/kcalc"
license=('GPL' 'LGPL' 'FDL')
depends=('kconfig' 'kconfigwidgets' 'kguiaddons' 'ki18n' 'kinit' 'knotifications' 'kxmlgui')
makedepends=('extra-cmake-modules' 'kdoctools' 'git')
conflicts=('kdeutils-kcalc')
#groups=('kde' 'kdeutils' 'kde-uninstall' 'utils')
install=kdeutils.install
#source=($_mirror/${_pkgname}-$_kdever.tar.xz)
#md5sums=(`grep ${_pkgname}-$_kdever.tar.xz ../kde-sc.md5 | cut -d" " -f1`)
source=("git://anongit.kde.org/kcalc.git#branch=frameworks")
md5sums=('SKIP')

build() {
  mkdir -p build
  cd build
  
  cmake ../${pkgname} \
    -DCMAKE_BUILD_TYPE=Release \
    -DCMAKE_INSTALL_PREFIX=/usr \
    -DLIB_INSTALL_DIR=lib \
    -DPLUGIN_INSTALL_DIR=/usr/lib/qt5/plugins \
    -DKDE_INSTALL_USE_QT_SYS_PATHS=ON \
    -DBUILD_TESTING=OFF 
  make
}

package() {
  cd build

  make DESTDIR=${pkgdir} install
}

