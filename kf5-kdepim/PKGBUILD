
# include global config
source ../_buildscripts/${current_repo}-${_arch}-cfg.conf

pkgname=kf5-kdepim
_pkgname=kdepim
arch=('x86_64')
#pkgver=${_kdever}
pkgver=4.98.0
pkgrel=3
pkgdesc="Project that aims to bring together anything to do with personal information management."
url="http://www.kde.org"
license=('GPL' 'LGPL' 'FDL')
options=('!docs')
depends=('grantlee-qt5' 'libxss' 'libsamplerate' 'qrencode' 'libdmtx' 'link-grammar' 'phonon-qt5'
         'qt5-tools' 'sonnet' 'prison-qt5'
         'kdelibs4support' 'kwallet' 'knewstuff' 'kcmutils' 'kdewebkit' 'karchive' 'knotifyconfig'
         'kconfig' 'khtml' 'kservice' 'kdbusaddons' 'kauth' 'ktexteditor' 'kdnssd'
         'kf5-kdepimlibs' 'kf5-baloo' 'kf5-libkgapi')
makedepends=('pkg-config' 'boost' 'docbook-xml' 'extra-cmake-modules' 'kdoctools')
#source=($_mirror/${pkgbase}-${pkgver}.tar.xz)
#md5sums=(`grep ${pkgbase}-$_kdever.tar.xz ../kde-sc.md5 | cut -d" " -f1`)
source=("git://anongit.kde.org/kdepim#commit=d150d1d7103c54b398330f7af5a9f797fec24bb2")
md5sums=('SKIP')

build() {
  cd ${srcdir}
  #sed -i 's|KF5Baloo "5.0.0" CONFIG|KF5Baloo CONFIG|' ${srcdir}/$_pkgname/CMakeLists.txt

  mkdir build
  
  cd build 
  cmake ../${_pkgname} \
    -DCMAKE_INSTALL_PREFIX=/usr \
    -DCMAKE_BUILD_TYPE=Release \
    -DCMAKE_SKIP_RPATH=ON \
    -DLIB_INSTALL_DIR=lib \
    -DSYSCONF_INSTALL_DIR=/etc \
    -DQML_INSTALL_DIR=/usr/lib/qt5/qml \
    -DPLUGIN_INSTALL_DIR=/usr/lib/qt5/plugins \
    -DBUILD_TESTING=OFF 
  make 
}

package() {
  cd ${srcdir}/build
  
  make DESTDIR=${pkgdir} install
}
