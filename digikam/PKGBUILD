
pkgname=digikam
pkgver=4.90.0
_pkgver=5.0.0-beta2
pkgrel=1
url="http://digikam.sourceforge.net"
arch=('x86_64')
license=('GPL')
pkgdesc="Digital photo management application for kde"
depends=('knotifyconfig' 'knotifications' 'kio' 'ktextwidgets' 'kcoreaddons' 'kwindowsystem'
         'solid' 'kiconthemes' 'kfilemetadata' 'libksane' 'ki18n' 'lensfun' 
         'marble' 'qt5-multimedia' 'qt5-x11extras' 'jasper' 'libgphoto2' 'liblqr' 'opencv'
         'kipi-plugins' 'libkface' 'lapack' 'libgpod' 'eigen3' 'libpgf' 'mariadb' 'kdepimlibs') 
makedepends=('pkgconfig' 'extra-cmake-modules' 'kdoctools' 'doxygen' 'boost' 'imagemagick')
install=digikam.install
groups=('graphics')
source=("http://download.kde.org/unstable/digikam/${pkgname}-${_pkgver}.tar.bz2")
md5sums=('596cb78532868355764865311f2def16')

prepare() {
  cd $pkgname-${_pkgver}
  #sed -i -e 's|KF5AkonadiContact|KF5AkonadiCore|' ${srcdir}/${pkgname}/utilities/kdesupport/akonadi/CMakeLists.txt
  #patch -p1 -i $srcdir/CMakeLists.diff
}

build() {
   cd ${srcdir}
 
   mkdir -p build
   cd build
   cmake ../${pkgname}-${_pkgver} \
     -DCMAKE_BUILD_TYPE=Release \
     -DCMAKE_INSTALL_PREFIX=/usr \
     -DLIB_INSTALL_DIR=lib \
     -DCMAKE_SKIP_RPATH=ON \
     -DQML_INSTALL_DIR=/usr/lib/qt5/qml \
     -DPLUGIN_INSTALL_DIR=/usr/lib/qt5/plugins \
     -DKDE_INSTALL_USE_QT_SYS_PATHS=ON \
     -DBUILD_TESTING=OFF \
     -DENABLE_AKONADICONTACTSUPPORT=OFF \
     -DENABLE_MYSQLSUPPORT=ON \
     -DENABLE_KFILEMETADATASUPPORT=ON \
     -DENABLE_DNGCONVERTER=OFF \
     -DENABLE_MEDIAPLAYER=ON \
     -DENABLE_OPENCV3=ON
   make 
}

package() {
  cd $srcdir/build
  
  make DESTDIR=$pkgdir/ install
}

