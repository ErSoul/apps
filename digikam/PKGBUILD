
pkgname=digikam
pkgver=4.9.78
pkgrel=1
url="http://digikam.sourceforge.net"
arch=('x86_64')
license=('GPL')
pkgdesc="Digital photo management application for kde"
depends=('kdelibs4support' 'knotifyconfig' 'libksane' 'ki18n' 'lensfun' 
         'marble' 'qt5-multimedia' 'qt5-x11extras' 'jasper' 'libgphoto2' 'liblqr' 'opencv-qt5'
         'kipi-plugins' 'lapack' 'libgpod' 'eigen3' 'libpgf') # 'kf5-kdepimlibs' 'kf5-baloo'
makedepends=('pkgconfig' 'extra-cmake-modules' 'kdoctools' 'doxygen' 'boost' 'imagemagick')
install=digikam.install
groups=('graphics')
#source=("http://download.kde.org/stable/digikam/${pkgname}-${_pkgver}.tar.bz2")
source=("git://anongit.kde.org/digikam#branch=frameworks")
md5sums=('SKIP')

prepare() {
  cd $pkgname
  #sed -i -e 's|<recognitiondatabase.h>|<kface/recognitiondatabase.h>|' ${srcdir}/${pkgname}/app/utils/componentsinfo.h
}

build() {
   cd ${srcdir}
 
   mkdir -p build
   cd build
   cmake ../${pkgname} \
     -DCMAKE_BUILD_TYPE=Release \
     -DCMAKE_INSTALL_PREFIX=/usr \
     -DLIB_INSTALL_DIR=lib \
     -DCMAKE_SKIP_RPATH=ON \
     -DQML_INSTALL_DIR=/usr/lib/qt5/qml \
     -DPLUGIN_INSTALL_DIR=/usr/lib/qt5/plugins \
     -DKDE_INSTALL_USE_QT_SYS_PATHS=ON \
     -DBUILD_TESTING=OFF \
     -DENABLE_BALOOSUPPORT=OFF \
     -DENABLE_KDEPIMLIBSSUPPORT=OFF \
     -DENABLE_MYSQLSUPPORT=OFF 
   make 
}

package() {
  cd $srcdir/build
  
  make DESTDIR=$pkgdir/ install
}

