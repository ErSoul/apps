
# include global config
source ../_buildscripts/${current_repo}-${_arch}-cfg.conf

pkgname=kanagram
#pkgver=${_kdever}
pkgver=4.9.90
pkgrel=1
pkgdesc="Letter Order Game"
url="http://kde.org/applications/education/kanagram/"
arch=('x86_64')
url='http://www.kde.org'
license=('GPL' 'LGPL' 'FDL')
depends=('ki18n' 'kcrash' 'sonnet' 'kconfig' 'kconfigwidgets' 'kdeclarative' 'kio' 'knewstuff'
         'kdelibs4support' 'libkeduvocdocument' 'phonon-qt5')
makedepends=('extra-cmake-modules' 'kdoctools')
conflicts=('kdeedu-kanagram')
#groups=('kde' 'kdeedu' 'kde-uninstall' 'education' 'kaos-kids')
#options=('docs')
install=${pkgname}.install
#source=("$_mirror/${_pkgname}-$_kdever.tar.xz")
#md5sums=(`grep ${_pkgname}-$_kdever.tar.xz ../kde-sc.md5 | cut -d" " -f1`)
source=("git://anongit.kde.org/kanagram.git")
md5sums=('SKIP')

build() {
  mkdir -p build
  cd build
  
  cmake ../${pkgname} \
    -DCMAKE_BUILD_TYPE=Release \
    -DCMAKE_INSTALL_PREFIX=/usr \
    -DLIB_INSTALL_DIR=lib \
    -DKDE_INSTALL_USE_QT_SYS_PATHS=ON \
    -DBUILD_TESTING=OFF 
  make
}

package() {
  cd build

  make DESTDIR=${pkgdir} install
}
