

# include global config
source ../_buildscripts/${current_repo}-${_arch}-cfg.conf

pkgname=marble
pkgver=${_kdever}
pkgrel=1
pkgdesc="Computer-aided translation"
arch=('x86_64')
url="https://projects.kde.org/projects/kde/kdeedu/marble/"
license=('LGPL')
depends=('gpsd' 'phonon-qt5' 'qt5-script' 'qt5-svg' 'qt5-tools' 'qt5-webkit' 'shapelib' 'phonon-qt5')
         # 'kwallet' 'knewstuff' 'kparts' 'kcoreaddons' 'ki18n' 
makedepends=('extra-cmake-modules')
conflicts=('kdeedu-marble')
replaces=('kdeedu-marble')
#source=("git://anongit.kde.org/marble.git")
source=($_mirror/${pkgname}-$_kdever.tar.xz)
md5sums=(`grep ${pkgname}-$_kdever.tar.xz ../kde-sc.md5 | cut -d" " -f1`)

build() {
  cd $pkgname-${pkgver}
  mkdir build
  
  cd build
  cmake -DCMAKE_INSTALL_PREFIX=/usr \
        -DCMAKE_BUILD_TYPE=Release \
        -DLIB_INSTALL_DIR=lib \
        -DSYSCONF_INSTALL_DIR=/etc \
        -DQML_INSTALL_DIR=/usr/lib/qt5/qml \
        -DPLUGIN_INSTALL_DIR=/usr/lib/qt5/plugins \
        -DQT5BUILD=true \
        -DBUILD_MARBLE_TOOLS=YES \
        -DBUILD_MARBLE_TESTS=NO ..
  make
}

package() {
  cd $pkgname-${pkgver}/build
  
  make DESTDIR="$pkgdir" install
}
