
# include global config
source ../_buildscripts/${current_repo}-${_arch}-cfg.conf

pkgname=kipi-plugins
#pkgver=${_kdever}
pkgver=4.10.71
pkgrel=1
pkgdesc="Collection of plugins extending the KDE graphics and image applications as digiKam, Gwenview, and KPhotoalbum."
url="https://projects.kde.org/projects/extragear/graphics/kipi-plugins"
arch=('x86_64')
license=('GPL' 'LGPL' 'FDL')
depends=('kdelibs4support' 'kparts' 'libkexiv2' 'libkdcraw' 'libkipi' 'libkface' 'libkgeomap' 'libkvkontakte'
         'kconfig' 'threadweaver' 'libpng' 'libtiff' 'libjpeg-turbo')
makedepends=('extra-cmake-modules' 'kdoctools' 'git')
optdepends=('enblend-enfuse: to work with the panorama tool')
conflicts=('kf5-kipi-plugins')
replaces=('kf5-kipi-plugins')
#groups=('kde' 'kde-graphics' 'kde-uninstall')
install=${pkgname}.install
#source=("$_mirror/${_pkgname}-$_kdever.tar.xz")
#md5sums=(`grep ${_pkgname}-$_kdever.tar.xz ../kde-sc.md5 | cut -d" " -f1`)
source=("git://anongit.kde.org/kipi-plugins.git#branch=frameworks")
md5sums=('SKIP')

prepare() {
  cd $pkgname
  sed -i -e 's|#include <libkdcraw/rawdecodingsettings.h|#include <rawdecodingsettings.h|' ${srcdir}/${pkgname}/panorama/manager/actionthread.h
  sed -i -e 's|#include <libkdcraw/rawdecodingsettings.h|#include <rawdecodingsettings.h|' ${srcdir}/${pkgname}/panorama/manager/manager.h
  sed -i -e 's|#include <libkdcraw/kdcraw.h|#include <kdcraw.h|' ${srcdir}/${pkgname}/panorama/manager/actionthread.h
  sed -i -e 's|#include <libkdcraw/kdcraw.h|#include <kdcraw.h|' ${srcdir}/${pkgname}/panorama/manager/actions.h
  sed -i -e 's|#include <libkdcraw/kdcraw.h|#include <kdcraw.h|' ${srcdir}/${pkgname}/panorama/tasks/preprocesstask.h
  sed -i -e 's|#include <libkdcraw/kdcraw.h|#include <kdcraw.h|' ${srcdir}/${pkgname}/panorama/tasks/task.cpp
  sed -i -e 's|#include <libkipi/interface.h|#include <interface.h|' ${srcdir}/${pkgname}/panorama/manager/manager.cpp
  sed -i -e 's|#include <libkipi/interface.h|#include <interface.h|' ${srcdir}/${pkgname}/panorama/importwizard/importwizarddlg.cpp
  sed -i -e 's|#include <libkipi/interface.h|#include <interface.h|' ${srcdir}/${pkgname}/panorama/importwizard/preprocessingpage.cpp
  
}

build() {
  mkdir -p build
  cd build
  
  cmake ../${pkgname} \
    -DCMAKE_BUILD_TYPE=Release \
    -DCMAKE_INSTALL_PREFIX=/usr \
    -DLIB_INSTALL_DIR=lib \
    -DPLUGIN_INSTALL_DIR=/usr/lib/qt5/plugins \
    -DKDE_INSTALL_USE_QT_SYS_PATHS=ON \
    -DBUILD_TESTING=OFF 
  make
}

package() {
  cd build

  make DESTDIR=${pkgdir} install
}

