
# include global config
source ../_buildscripts/${current_repo}-${_arch}-cfg.conf

pkgname=kwrited
pkgver=${_kdever}
pkgrel=1
pkgdesc='Watch for messages from local users sent with write or wall'
arch=('x86_64')
url='https://projects.kde.org/projects/kde/workspace/kwrited'
license=('LGPL')
depends=('kdelibs4support' 'kemoticons' 'kinit' 'kitemmodels' 'kpty')
makedepends=('extra-cmake-modules' 'kdoctools')
conflicts=('kde-workspace')
source=("http://download.kde.org/stable/plasma/$pkgver/$pkgname-$pkgver.tar.xz")
md5sums=(`grep ${pkgname}-$_kdever.tar.xz ../kf5.md5 | cut -d" " -f1`)

build() {
  mkdir -p build
  #sed -e "s/PO_FILES //" -i ${srcdir}/$pkgname-$pkgver/po/*/CMakeLists.txt
  cd build
  
  cmake ../${pkgname}-${pkgver} \
    -DCMAKE_BUILD_TYPE=Release \
    -DCMAKE_INSTALL_PREFIX=/usr \
    -DLIB_INSTALL_DIR=lib \
    -DSYSCONF_INSTALL_DIR=/etc \
    -DBUILD_TESTING=OFF
  make
}

package() {
  cd build

  make DESTDIR="${pkgdir}" install
}

