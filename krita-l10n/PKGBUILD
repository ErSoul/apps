pkgname=()
source=()

for _lang in "${_languages[@]}"; do
  _locale=${_lang%% *}
  _pkgname=krita-l10n-${_locale,,}
  
  pkgname+=($_pkgname)
  source+=("http://download.kde.org/unstable/krita/${pkgver}/${pkgbase}/${pkgbase}-$_locale-${pkgver}.tar.xz")
  eval "package_$_pkgname() {
    _package $_lang
  }"
done

