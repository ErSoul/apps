build() {
  for _lang in "${_languages[@]}"; do
    _locale=${_lang%% *}
    
    mkdir -p build/${_locale}
    cd build/${_locale}
      cmake ${srcdir}/krita-l10n-${_locale}-${pkgver} \
	-DCMAKE_BUILD_TYPE=Release \
	-DCMAKE_INSTALL_PREFIX=/usr
    make 
    cd ../..
  done
}

_package() {
  pkgdesc="$2 language pack for Krita"
  
  cd build/$1
  make DESTDIR="$pkgdir" install
}
