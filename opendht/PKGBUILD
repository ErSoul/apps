
pkgname=opendht
pkgver=0.5.2.1
_commit=468331093345e718b5d269a71b3c52a2eea4797e
pkgrel=1
pkgdesc="Lightweight C++11 Distributed Hash Table implementation originally based on dht"
arch=('x86_64')
url="https://github.com/savoirfairelinux/opendht"
license=('GPL3')
depends=('gnutls' 'readline' 'msgpack-c')
makedepends=('cmake')
source=("https://github.com/savoirfairelinux/opendht/archive/${_commit}.zip")
md5sums=('b5d323e3e85523cf7b1eb52cf7e6ec0a')

build() {
  mkdir -p build
  cd build

  cmake ../${pkgname}-${_commit} \
    -DCMAKE_BUILD_TYPE=Release \
    -DCMAKE_INSTALL_PREFIX=/usr \
    -DOPENDHT_PYTHON=ON
  make
}

package() {
  cd build
  
  make DESTDIR=${pkgdir} install
}
