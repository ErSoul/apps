
pkgname=opendht
pkgver=0.5.2
pkgrel=1
pkgdesc="Lightweight C++11 Distributed Hash Table implementation originally based on dht"
arch=('x86_64')
url="https://github.com/savoirfairelinux/opendht"
license=('GPL3')
depends=('gnutls' 'readline' 'msgpack-c')
makedepends=('cmake')
source=("https://github.com/savoirfairelinux/opendht/archive/${pkgver}.tar.gz")
md5sums=('0c5ba3f9991dc4a924d89ecc52ac68e5')

build() {
  mkdir -p build
  cd build

  cmake ../${pkgname}-${pkgver} \
    -DCMAKE_BUILD_TYPE=Release \
    -DCMAKE_INSTALL_PREFIX=/usr \
    -DOPENDHT_PYTHON=ON
  make
}

package() {
  cd build
  
  make DESTDIR=${pkgdir} install
}
