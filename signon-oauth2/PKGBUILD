
pkgname=signon-oauth2
pkgver=0.19
pkgrel=1
pkgdesc='OAuth 2 plugin for signon'
arch=('x86_64')
url="http://code.google.com/p/accounts-sso/"
license=('LGPL')
depends=('signon-qt5' 'qjson-qt5' 'qt5-xmlpatterns')
#makedepends=('signon-qt5')
source=("http://accounts-sso.googlecode.com/files/$pkgname-$pkgver.tar.bz2")
md5sums=('32aa3b93b5d08c15a8e077d73bda61fa')

prepare() {
  cd $srcdir/$pkgname-$pkgver

  # resolve kaccounts-providers conflict
  echo 'INSTALLS =' >>tests/tests.pro
  echo 'INSTALLS =' >>example/example.pro
}

build() {
  cd $srcdir/$pkgname-$pkgver

  /usr/lib/qt5/bin/qmake PREFIX=/usr LIBDIR=/usr/lib
  make
}

package() {
  cd $srcdir/$pkgname-$pkgver

  make INSTALL_ROOT=$pkgdir install
}
