
# include global config
source ../_buildscripts/${current_repo}-${_arch}-cfg.conf

pkgname=kiriki
#pkgver=${_kdever}
pkgver=15.03.70
pkgrel=1
pkgdesc="Yahtzee-like Dice Game"
arch=('x86_64')
url='https://projects.kde.org/projects/kde/kdegames/kiriki'
license=('GPL' 'LGPL' 'FDL')
depends=('libkdegames' 'kconfig' 'kconfigwidgets' 'kcoreaddons' 'kiconthemes' 'ki18n' 'kio' 'knotifications'
         'kwidgetsaddons' 'kwindowsystem' 'knotifyconfig' 'kservice' 'kxmlgui' 'kjobwidgets' 'kitemmodels' 'kcodecs'
         'karchive' 'kdbusaddons' 'kdnssd' 'kguiaddons' 'kitemviews' 'kcompletion' 'kdelibs4support')
makedepends=('pkg-config' 'extra-cmake-modules' 'kdoctools' 'git')
#groups=('kde' 'kdegames' 'kde-uninstall')
conflicts=('kdegames-kiriki')
replaces=('kdegames-kiriki')
#source=("$_mirror/${_pkgname}-$_kdever.tar.xz")
#md5sums=(`grep ${_pkgname}-$_kdever.tar.xz ../kde-sc.md5 | cut -d" " -f1`)
source=("git://anongit.kde.org/kiriki.git#branch=frameworks")
md5sums=('SKIP')

prepare() {
  cd $pkgname
  #sed -i -e 's|V4.2-Based Variant V1.1//EN" "dtd/kdex.dtd"|V4.5-Based Variant V1.1//EN" "dtd/kdedbx45.dtd"|' ${srcdir}/${pkgname}/doc/index.docbook
}

build() {
  mkdir -p build
  cd build
  
  cmake ../${pkgname} \
    -DCMAKE_BUILD_TYPE=Release \
    -DCMAKE_INSTALL_PREFIX=/usr \
    -DLIB_INSTALL_DIR=lib \
    -DPLUGIN_INSTALL_DIR=/usr/lib/qt5/plugins \
    -DKDE_INSTALL_USE_QT_SYS_PATHS=ON \
    -DBUILD_TESTING=OFF 
  make
}

package() {
  cd build

  make DESTDIR=${pkgdir} install
}

