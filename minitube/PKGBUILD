
pkgname=minitube
pkgver=2.3
pkgrel=1
pkgdesc="A native YouTube client in QT. Watch YouTube videos without Flash Player"
arch=('x86_64')
url="http://flavio.tordini.org/minitube"
license=('GPL')
depends=('phonon' 'qt')
optdepends=('phonon-xine: for xine backend'
            'phonon-mplayer: for mplayer backend'
            'phonon-vlc: for vlc backend')
groups=('multimedia')
install=minitube.install
source=("http://flavio.tordini.org/files/minitube/minitube-$pkgver.tar.gz"
        'locale.diff')
md5sums=('8c9dba9b0190a740fab6c38c5d79c3f8'
         '61ebe0b289e63790a70388d49cec205e')

build() {
        cd "${srcdir}/${pkgname}"
        #patch -p0 -i "${srcdir}/locale.diff"
        
        qmake 
        make
}

package() {
        cd "${srcdir}/${pkgname}"
        
        make install INSTALL_ROOT="${pkgdir}" 
}
