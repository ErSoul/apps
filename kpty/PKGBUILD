           'kdeutils-sweeper'
           'kdegraphics-kcolorchooser'
           'kdegraphics-kgamma'
           'kdegraphics-svgpart'
           'kdegraphics-strigi-analyzer'
           'kde-base-artwork'
           'kde-thumbnailer-epub'
           'kdeaccessibility-jovie'
           'kdeaccessibility-kaccessible'
           'kdeaccessibility-kmag'
           'kdeaccessibility-kmousetool'
           'kdeaccessibility-kmouth'
           'kdeadmin-ksystemlog'
           'kdeartwork-colorschemes'
           'kdeartwork-desktopthemes'
           'kdeartwork-emoticons'
           'kdeartwork-iconthemes'
           'kdeartwork-screensavers'
           'kdeartwork-styles'
           'kdeartwork-wallpapers'
           'kdeartwork-weatherwallpapers'
           'kdeedu-blinken'
           'kdeedu-kalzium'
           'kdeedu-kmplot'
           'kdeedu-kqtquickcharts'
           'kdeedu-ktouch'
           'kdeedu-kturtle'
           'kdeedu-step'
           'kdemultimedia-audiocd-kio'
           'kdemultimedia-kscd'
           'kdenetwork-kppp') 
replaces=('knights'
           'kdewebdev-kfilereplace'
           'kdewebdev-kimageeditor'
           'kdewebdev-klinkstatus'
           'kdewebdev-kommander'
           'kdetoys-amor'
           'kdetoys-ktux'
           'kdeutils-kdf'
           'kdeutils-kfloppy'
	   'kdeutils-kgpg'
           'kdeutils-kremotecontrol'
           'kdeutils-ktimer'
           'kdeutils-superkaramba'
           'kdeutils-sweeper'
           'kdegraphics-kcolorchooser'
           'kdegraphics-kgamma'
           'kdegraphics-svgpart'
           'kdegraphics-strigi-analyzer'
           'kde-base-artwork'
           'kde-thumbnailer-epub'
           'kdeaccessibility-jovie'
           'kdeaccessibility-kaccessible'
           'kdeaccessibility-kmag'
           'kdeaccessibility-kmousetool'
           'kdeaccessibility-kmouth'
           'kdeadmin-ksystemlog'
           'kdeartwork-colorschemes'
           'kdeartwork-desktopthemes'
           'kdeartwork-emoticons'
           'kdeartwork-iconthemes'
           'kdeartwork-screensavers'
           'kdeartwork-styles'
           'kdeartwork-wallpapers'
           'kdeartwork-weatherwallpapers'
           'kdeedu-blinken'
           'kdeedu-kalzium'
           'kdeedu-kmplot'
           'kdeedu-kqtquickcharts'
           'kdeedu-ktouch'
           'kdeedu-kturtle'
           'kdeedu-step'
           'kdemultimedia-audiocd-kio'
           'kdemultimedia-kscd') 
source=("http://download.kde.org/unstable/frameworks/${pkgver}/${pkgname}-${pkgver}.tar.xz")
md5sums=(`grep ${pkgname}-$_kdever.tar.xz ../kf5.md5 | cut -d" " -f1`)

build() {
  mkdir -p build
  cd build
  
  cmake ../${pkgname}-${pkgver} \
    -DCMAKE_BUILD_TYPE=Release \
    -DCMAKE_INSTALL_PREFIX=/usr \
    -DLIB_INSTALL_DIR=lib \
    -DECM_MKSPECS_INSTALL_DIR=/usr/lib/qt5/mkspecs/modules \
    -DPLUGIN_INSTALL_DIR=/usr/lib/qt5/plugins \
    -DBUILD_TESTING=OFF
  make
}

package() {
  cd build
  
  make DESTDIR="${pkgdir}" install
}
