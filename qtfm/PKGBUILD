
pkgname=qtfm
pkgver=6.0.3
_pkgver=6.0.3
pkgrel=1
pkgdesc="A lightweight file manager using Qt"
arch=('x86_64')
url="http://qtfm.dracolinux.org/"
license=('GPL')
depends=('qt5-declarative' 'udisks2')
categories=('system')
source=("https://github.com/rodlie/qtfm/releases/download/${_pkgver}/qtfm-${_pkgver}.tar.xz")
sha256sums=('1e09b5d2c9a9d96d618d48733a4e17d2fc734bdad73a0384c558d7a914830779')


build() {
  mkdir -p build
  cd build

  /usr/lib/qt5/bin/qmake  CONFIG+=release PREFIX=/usr ../${pkgname}-${_pkgver}
  make
}

package() {
  cd build
  
  make INSTALL_ROOT=${pkgdir} install
}

