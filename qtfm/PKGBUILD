
pkgname=qtfm
pkgver=5.9.80
_pkgver=6.0.0-beta1
pkgrel=1
pkgdesc="A lightweight file manager using Qt"
arch=('x86_64')
url="http://qtfm.dracolinux.org/"
license=('GPL')
depends=('qt5-declarative' 'file' 'desktop-file-utils' 'udisks2')
categories=('system')
source=("https://github.com/rodlie/qtfm/releases/download/${_pkgver}/qtfm-${_pkgver}.tar.xz")
md5sums=('abf140cc5e49eea07df91e90a033f7a3')


build() {
  mkdir -p build
  cd build

  /usr/lib/qt5/bin/qmake  CONFIG+=release PREFIX=/usr ../${pkgname}-${_pkgver}
  make
}

package() {
  cd build
  
  make INSTALL_ROOT=${pkgdir} install
}

