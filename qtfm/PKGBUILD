
pkgname=qtfm
pkgver=6.1.3
_pkgver=6.1.3
pkgrel=1
pkgdesc="A lightweight file manager using Qt"
arch=('x86_64')
url="https://qtfm.eu/"
license=('GPL')
depends=('qt5-declarative' 'udisks2')
categories=('system')
source=("https://github.com/rodlie/qtfm/archive/${_pkgver}.tar.gz")
sha256sums=('567904b5709a803fd5b4a4234e99e46ca9b41c5fbdd4b21e9afa93b66e43d097')


build() {
  mkdir -p build
  cd build

  /usr/lib/qt5/bin/qmake  CONFIG+=release PREFIX=/usr ../${pkgname}-${_pkgver}
  make
}

package() {
  cd build
  
  make INSTALL_ROOT=${pkgdir} install
}

