
pkgname=tvheadend
pkgver=4.0.9
pkgrel=1
pkgdesc="TV streaming server and digital video recorder"
arch=('x86_64')
url="https://tvheadend.org/projects/tvheadend"
license=('GPL3')
depends=('avahi' 'dvb-apps' 'ffmpeg' 'openssl' 'python2' 'uriparser')
install=tvheadend.install
source=("https://github.com/tvheadend/tvheadend/archive/v$pkgver.tar.gz")
md5sums=('afe45a345151e7ce31db673e0c738e6e')

build() {
    cd ${pkgname}-${pkgver}
    
    ./configure --prefix=/usr
    make
}

package() {
    cd ${pkgname}-${pkgver}
    make DESTDIR=$pkgdir/ install
    
    chmod 0644 ${pkgdir}/usr/share/man/man1/tvheadend.1
}
