
pkgname=kf5-ktp-contact-list
_pkgname=ktp-contact-list
pkgver=0.9.90
pkgrel=1
pkgdesc="Telepathy contact list application "
arch=('x86_64')
url="http://www.kde.org"
license=('GPL')
depends=('kdbusaddons' 'kio' 'kcmutils' 'knotifyconfig' 'kdelibs4support' 'kf5-ktp-common-internals'
         'telepathy-qt5' 'kf5-libkpeople')
makedepends=('extra-cmake-modules' 'kdoctools' 'git' 'boost')
groups=('kf5-kde-telepathy' 'communication')
install=${_pkgname}.install
#source=("ftp://mirrors.mit.edu/kde/stable/kde-telepathy/${pkgver}/src/${pkgname}-${pkgver}.tar.bz2")
conflicts=('kf5-ktp-contact-list')
source=("git://anongit.kde.org/ktp-contact-list.git")
md5sums=('SKIP')

build() {
  cd ${srcdir}
  
  mkdir -p build
  cd build

  cmake ../${_pkgname} \
    -DCMAKE_BUILD_TYPE=Release \
    -DCMAKE_INSTALL_PREFIX=/usr \
    -DLIB_INSTALL_DIR=lib \
    -DSYSCONF_INSTALL_DIR=/etc \
    -DQML_INSTALL_DIR=/usr/lib/qt5/qml \
    -DPLUGIN_INSTALL_DIR=/usr/lib/qt5/plugins \
    -DBUILD_TESTING=OFF 
  make
}

package() {
  cd build

  make DESTDIR=${pkgdir} install
}