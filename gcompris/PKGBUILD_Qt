
pkgname=gcompris
pkgver=0.16
pkgrel=1
pkgdesc="High quality educational software suite comprising of numerous activities for children aged 2 to 10."
arch=('x86_64')
url="http://gcompris.net/"
license=('GPL3')
#depends=('pygtk' 'librsvg' 'gst-plugins-base')
depends=('qt5-webkit' 'qt5-tools' 'qt5-quick1' 'qt5-svg' 'qt5-graphicaleffects')
makedepends=('texinfo' 'intltool' 'git')
groups=('kaos-kids')
#source=("http://gcompris.net/download/$pkgname-$pkgver.tar.bz2")
source=("git://github.com/bdoin/GCompris-qt.git")
md5sums=('SKIP')

build() {
  cd ${srcdir}
  #sed -e "s/configure_file(${CMAKE_MODULE_PATH}/#configure_file(${CMAKE_MODULE_PATH}/" -i ${srcdir}/GCompris-qt/src/core/CMakeLists.txt
  #sed -e "s/install(SCRIPT/#install(SCRIPT/" -i ${srcdir}/GCompris-qt/src/core/CMakeLists.txt
  mkdir build
  
  cd build 
  cmake ../GCompris-qt \
    -DCMAKE_INSTALL_PREFIX=/usr \
    -DCMAKE_BUILD_TYPE=Release \
    -DCMAKE_SKIP_RPATH=ON 
  make BuildTranslations
  make 
}

package() {
  cd ${srcdir}/build
  
  make DESTDIR=${pkgdir} install
}

