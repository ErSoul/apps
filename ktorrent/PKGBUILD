
pkgname=ktorrent
pkgver=5.0.1.2
_commit=3b34d81aeb16d7d3c74b93250655eef119c569f0
pkgrel=1
ktorver=5.0
pkgdesc="A BitTorrent program for KDE"
arch=('x86_64')
url="http://ktorrent.pwsp.net/"
license=('GPL2')
depends=('kdelibs4support' 'ki18n' 'kiconthemes' 'kio' 'knotifications' 'knotifyconfig'
         'kconfig' 'kconfigwidgets' 'kcoreaddons' 'kdbusaddons' 'kcrash' 'kcmutils' 'kparts'
         'kservice' 'solid' 'kwidgetsaddons' 'kwindowsystem' 'kxmlgui' 'kross' 'karchive' 'kitemviews' 'kdnssd'
         'taglib' 'libktorrent' 'plasma-workspace' 'kdewebkit' 'syndication')
makedepends=('extra-cmake-modules' 'boost' 'kdoctools')
install=ktorrent.install
groups=('network')
options=('libtool')
#source=("http://download.kde.org/stable/ktorrent/${ktorver}/${pkgname}-${pkgver}.tar.xz")
source=("https://github.com/KDE/ktorrent/archive/${_commit}.zip")
md5sums=('46d4de32be1ac4daecafd9d80cecbaa2')

prepare() {
  cd ${pkgname}-${_commit}

  #sed -i 's|TARGETS ktorrent_app ${INSTALL_TARGETS_DEFAULT_ARGS}|TARGETS ktorrent_app ${KDE_INSTALL_TARGETS_DEFAULT_ARGS}|g' ktorrent/CMakeLists.txt
}

build() {
  mkdir build
  cd build
  
  cmake ../${pkgname}-${_commit} \
    -DCMAKE_BUILD_TYPE=Release \
    -DCMAKE_INSTALL_PREFIX=/usr \
    -DKDE_INSTALL_LIBDIR=lib \
    -DKDE_INSTALL_USE_QT_SYS_PATHS=ON 
  make
}

package() {
  cd build
  
  make DESTDIR=${pkgdir} install
}
