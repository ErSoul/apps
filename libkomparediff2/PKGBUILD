
# include global config
source ../_buildscripts/${current_repo}-${_arch}-cfg.conf

pkgname=libkomparediff2
#pkgver=${_kdever}
pkgver=14.12.81
pkgrel=1
pkgdesc="Library to compare files and strings"
url='https://projects.kde.org/projects/kde/kdesdk/libkomparediff2'
arch=('x86_64')
license=('GPL' 'LGPL' 'FDL')
#groups=('kde' 'kdesdk' 'kde-uninstall' 'programming')
depends=('kcoreaddons' 'kcodecs' 'kconfig' 'kxmlgui' 'ki18n' 'kio' 'kparts')
makedepends=('extra-cmake-modules' 'kdoctools' 'git')
conflicts=('kdesdk-libkomparediff2')
replaces=('kdesdk-libkomparediff2')
#source=("$_mirror/${_pkgname}-$_kdever.tar.xz")
#md5sums=(`grep ${_pkgname}-$_kdever.tar.xz ../kde-sc.md5 | cut -d" " -f1`)
source=("git://anongit.kde.org/libkomparediff2#branch=frameworks")
md5sums=('SKIP')

build() {
  mkdir -p build
  cd build
  
  cmake ../${pkgname} \
    -DCMAKE_BUILD_TYPE=Release \
    -DCMAKE_INSTALL_PREFIX=/usr \
    -DLIB_INSTALL_DIR=lib \
    -DQML_INSTALL_DIR=/usr/lib/qt5/qml \
    -DPLUGIN_INSTALL_DIR=/usr/lib/qt5/plugins \
    -DBUILD_TESTING=OFF
  make
}

package() {
  cd build
  
  make DESTDIR="${pkgdir}" install
}