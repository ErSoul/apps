
pkgname=smtube
pkgver=15.5.17
_pkgver=15.5.17
pkgrel=1
pkgdesc="YouTube browser for smplayer, mplayer, vlc and dragonplayer"
arch=('x86_64')
url="http://smplayer.sourceforge.net"
license=('GPL')
depends=('qt5-base')
makedepends=('qt5-tools' 'qt5-script')
source=("http://sourceforge.net/projects/smtube/files/SMTube/15.5/smtube-${_pkgver}.tar.bz2")
md5sums=('577ebdf5fbcd3d17959294e688c124b4')

build() {
  cd ${pkgname}-${_pkgver}

  make PREFIX=/usr QMAKE=/usr/lib/qt5/bin/qmake LRELEASE=/usr/lib/qt5/bin/lrelease
}

package() {
  cd ${pkgname}-${_pkgver}

  make PREFIX=/usr DESTDIR="${pkgdir}/" install
}