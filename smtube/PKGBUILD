
pkgname=smtube
pkgver=14.8.0
pkgrel=1
pkgdesc="YouTube browser for smplayer, mplayer, vlc and dragonplayer"
arch=('x86_64')
url="http://smplayer.sourceforge.net"
license=('GPL')
depends=('qt5-base')
makedepends=('qt5-tools' 'qt5-script')
source=("http://downloads.sourceforge.net/smplayer/$pkgname-$pkgver.tar.bz2")
md5sums=('21d9341a1a5de13a7064296f6625d399')

build() {
  cd $pkgname-$pkgver

  make PREFIX=/usr QMAKE=/usr/lib/qt5/bin/qmake LRELEASE=/usr/lib/qt5/bin/lrelease
}

package() {
  cd $pkgname-$pkgver

  make PREFIX=/usr DESTDIR="$pkgdir/" install
}