
pkgname=ktp-approver
pkgver=0.6.2
pkgrel=1
pkgdesc="KDE Channel Approver for Telepathy"
arch=('x86_64')
url="http://www.kde.org"
license=('GPL')
depends=('ktp-common-internals' 'ktp-contact-list' )
makedepends=('cmake' 'automoc4')
conflicts=('telepathy-kde-approver')
replaces=('telepathy-kde-approver')
provides=('telepathy-kde-approver')
groups=('kde-telepathy')
source=("ftp://mirrors.mit.edu/kde/stable/kde-telepathy/${pkgver}/src/${pkgname}-${pkgver}.tar.bz2")
md5sums=('5f582c5eef4524b3a35e51b2cd50eea7')

build() {
  cd "${srcdir}"
  mkdir build
  
  cd build
  cmake ../${pkgname}-${pkgver} \
    -DCMAKE_INSTALL_PREFIX=/usr \
    -DCMAKE_BUILD_TYPE=Release
  make
}

package() {
  cd "${srcdir}"/build
  
  make DESTDIR="${pkgdir}" install
}
