
# include global config
source ../_buildscripts/${current_repo}-${_arch}-cfg.conf

pkgname=okular
arch=('x86_64')
#pkgver=${_kdever}
pkgver=15.11.71
pkgrel=1
pkgdesc="KDE document viewer"
url="http://www.kde.org"
license=('GPL' 'LGPL' 'FDL')
#options=('docs')
groups=('office')
install=okular.install
depends=('kactivities' 'karchive' 'kbookmarks' 'kconfig' 'kconfigwidgets' 'kcoreaddons' 'kdbusaddons'
         'kjs' 'kdelibs4support' 'kio' 'khtml' 'kparts' 'kpty' 'threadweaver' 'kwallet' 'phonon-qt5' 'libkscreen2'
         'libxxf86vm' 'sane' 'lcms' 'poppler-qt5' 'chmlib' 'djvulibre' 'libspectre' 'ebook-tools'
         'json-c' 'qimageblitz-qt5' 'libkexiv2' 'libkdcraw' 'qtspeech')
makedepends=('pkg-config' 'extra-cmake-modules' 'kdoctools' 'qca-qt5')
conflicts=('kdegraphics-okular')
replaces=('kdegraphics-okular')
#source=("$_mirror/${_pkgname}-$_kdever.tar.xz")
#md5sums=(`grep ${_pkgname}-$_kdever.tar.xz ../kde-sc.md5 | cut -d" " -f1`)
source=("git://anongit.kde.org/okular.git#branch=frameworks")
md5sums=('SKIP')

prepare() {
  cd $pkgname
  #patch -p1 -i $srcdir/pageview.diff
  #sed -i -e 's|find_package(QCA2 "2.0.0")|find_package(Qca "2.0.0")|' ${srcdir}/${pkgname}/generators/ooo/CMakeLists.txt
}

build() {
  mkdir -p build
  cd build
  
  cmake ../${pkgname} \
    -DCMAKE_BUILD_TYPE=Release \
    -DCMAKE_INSTALL_PREFIX=/usr \
    -DLIB_INSTALL_DIR=lib \
    -DPLUGIN_INSTALL_DIR=/usr/lib/qt5/plugins \
    -DKDE_INSTALL_USE_QT_SYS_PATHS=ON \
    -DBUILD_TESTING=OFF \
    -DKF5KExiv2_DIR=/usr/lib/cmake/KEXIV2
  make
}

package() {
  cd build

  make DESTDIR=${pkgdir} install
}
