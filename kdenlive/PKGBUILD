
pkgname=kdenlive
pkgver=0.9.8.1
_pkgver=0.9.8
pkgrel=1
pkgdesc="A non-linear video editor for Linux"
arch=('x86_64')
url="http://www.kdenlive.org/"
license=('GPL')
depends=('kdelibs' 'mlt' 'dvgrab' 'kde-runtime' 'frei0r-plugins' 'qjson' 'qimageblitz')
makedepends=('automoc4' 'cmake' 'gettext' 'docbook-xsl')
optdepends=("dvdauthor: for creating dvds")
groups=('multimedia')
source=("http://download.kde.org/stable/$pkgname/$_pkgver/src/$pkgname-0.9.8-1.tar.bz2")
md5sums=('9de70ac15c084ff3dc70a5a38f22685b')

build() {
  export LDFLAGS="$LDFLAGS -lX11"

  cd "$srcdir/$pkgname-$_pkgver"

  cmake \
    -DCMAKE_BUILD_TYPE=Release \
    -DCMAKE_INSTALL_PREFIX=/usr \
    -DLIB_INSTALL_DIR=/usr/lib 
  make
}

package() {
  cd "$srcdir/$pkgname-$_pkgver"
  
  make DESTDIR="${pkgdir}" install
}
