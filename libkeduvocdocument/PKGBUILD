
# include global config
source ../_buildscripts/${current_repo}-${_arch}-cfg.conf

pkgname=libkeduvocdocument
#pkgver=${_kdever}
pkgver=4.9.90
pkgrel=1
pkgdesc="Library to parse, convert, and manipulate KVTML files "
arch=('x86_64')
url='https://projects.kde.org/projects/kde/kdeedu/libkeduvocdocument'
license=('GPL' 'LGPL' 'FDL')
depends=('kconfig' 'ki18n' 'karchive' 'kio')
makedepends=('extra-cmake-modules' 'kdoctools')
conflicts=('kdeedu-libkdeedu' 'libkdeedu')
#groups=("kde" "kdeedu" "kde-uninstall")
#options=('docs' 'debug')
#install=${pkgname}.install
#source=("$_mirror/${_pkgname}-$_kdever.tar.xz")
#md5sums=(`grep ${_pkgname}-$_kdever.tar.xz ../kde-sc.md5 | cut -d" " -f1`)
source=("git://anongit.kde.org/libkeduvocdocument.git")
md5sums=('SKIP')

build() {
  mkdir -p build
  cd build
  
  cmake ../${pkgname} \
    -DCMAKE_BUILD_TYPE=Release \
    -DCMAKE_INSTALL_PREFIX=/usr \
    -DLIB_INSTALL_DIR=lib \
    -DPLUGIN_INSTALL_DIR=/usr/lib/qt5/plugins \
    -DBUILD_TESTING=OFF 
  make
}

package() {
  cd build

  make DESTDIR=${pkgdir} install
}
