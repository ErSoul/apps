
pkgname=scribus
_pkgname=Scribus
pkgver=1.4.82
pkgrel=1
pkgdesc="A desktop publishing program"
arch=('x86_64')
url="http://www.scribus.net"
license=('GPL')
install=scribus.install
depends=('libcups' 'lcms2' 'qt5-webkit' 'ghostscript' 'libart-lgpl' 'python2' 'libxml2' 'hyphen'
         'cairo' 'desktop-file-utils' 'shared-mime-info' 'ruby' 'aspell' 'podofo' 'librevenge' 'poppler'
         'hunspell' 'graphicsmagick' 'libvisio')
makedepends=('cmake' 'boost' 'subversion' 'qt5-tools')
groups=('office')
options=('!libtool' '!makeflags')
#source=("http://sourceforge.net/projects/scribus/files/scribus/${pkgver}/${pkgname}-${pkgver}.tar.xz")
source=("scribus::svn://scribus.net/trunk")
md5sums=('SKIP')

build() {
	cd ${srcdir}
	mkdir build
	
	cd build
	cmake ../${pkgname}/${_pkgname} \
	   -DCMAKE_INSTALL_PREFIX=/usr \
	   -DCMAKE_BUILD_TYPE=Release \
	   -DCMAKE_SKIP_RPATH=ON \
	   -DWANT_GRAPHICSMAGICK=1 \
	   -DLIB_SUFFIX=""
	make 
}

package() {
	cd ${srcdir}/build
	make DESTDIR=${pkgdir} install

	install -Dm644 ${srcdir}/${pkgname}/${_pkgname}/scribus.desktop \
	   ${pkgdir}/usr/share/applications/scribus.desktop
}
