
# include global config
source ../_buildscripts/${current_repo}-${_arch}-cfg.conf

pkgname=kdesdk-dev-scripts
pkgver=${_kdever}
pkgrel=1
pkgdesc='Scripts and setting files useful during development of KDE software'
url='https://projects.kde.org/projects/kde/kdesdk/kde-dev-scripts'
arch=('x86_64')
license=('GPL' 'LGPL' 'FDL')
groups=('kde' 'kdesdk' 'kde-uninstall')
depends=("kde-runtime>=${_kdever}" 'python2')
makedepends=('cmake' 'automoc4')
source=("$_mirror/${pkgbase}-$_kdever.tar.xz")
md5sums=(`grep ${pkgbase}-$_kdever.tar.xz ../kde-sc.md5 | cut -d" " -f1`)

build() {
  mkdir build
  cd build
  
  cmake ../kde-dev-scripts-${pkgver} \
    -DCMAKE_BUILD_TYPE=Release \
    -DKDE4_BUILD_TESTS=OFF \
    -DCMAKE_INSTALL_PREFIX=/usr
  make
}

package() {
  cd build
  
  make DESTDIR=$pkgdir install
}
