
pkgname=weston-git
pkgver=20130708
pkgrel=1
pkgdesc='Reference implementation of a Wayland compositor'
arch=('x86_64')
url='http://wayland.freedesktop.org'
license=('MIT')
options=(!libtool)
depends=('libxkbcommon' 'mesa' 'pango' 'poppler-glib' 'mtdev' 'libxcursor' 'glu' 'libunwind'
         'pixman' 'xkeyboard-config')

source=('git://anongit.freedesktop.org/wayland/weston')
md5sums=('SKIP')

build() {
	cd ${srcdir}/weston

	./autogen.sh \
	    --prefix=/usr \
	    --libexecdir=/usr/lib/weston \
	    --disable-android-compositor
	make
}

package() {
	cd ${srcdir}/weston
	make DESTDIR="${pkgdir}" install

	for _c in clickdot cliptest dnd eventdemo flower image resizor simple-egl \
	        simple-shm simple-touch smoke transformed view weston-desktop-shell weston-info \
	        weston-keyboard weston-simple-im weston-tablet-shell weston-terminal; do
		install -Dm755 "clients/$_c" "$pkgdir/usr/bin/weston-$_c"
	done
}
