
pkgname=sddm
pkgver=20140511
pkgrel=2
pkgdesc="QML based X11 display manager"
arch=('x86_64')
url="http://github.com/sddm/sddm"
license=('GPL')
depends=('qt' 'xorg-xauth')
makedepends=('cmake' 'git')
conflicts=('sddm-qt5-git')
provides=('sddm-qt5-git')
backup=('etc/sddm.conf')
source=('git://github.com/blue-shell/sddm.git'
        'background.png')
#source=('sddm-master.tar.xz')
md5sums=('SKIP'
         '4932058967e1fe4df3e8cd75b75997ca')

_gitroot="github.com/blue-shell/sddm.git"
_gitname=sddm

build() {
  cd "$srcdir"

  mkdir -p $srcdir/build
  cd build

  cmake ../${_gitname} -DCMAKE_INSTALL_PREFIX=/usr 
  make
}

package() {
  cd ${srcdir}/build
  make DESTDIR="${pkgdir}" install
  #sed -i -e "s|SessionsDir=/usr/share/xsessions|SessionsDir=/etc/X11/sessions|g" $pkgdir/etc/sddm.conf
  
  rm "${pkgdir}"/usr/share/apps/sddm/themes/maui/background.png
  install -m 644 -p ${srcdir}/background.png ${pkgdir}/usr/share/apps/sddm/themes/maui/  
}
