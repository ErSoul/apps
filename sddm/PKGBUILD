
pkgname=sddm
pkgver=20150125
pkgrel=1
pkgdesc="QML based X11 display manager"
arch=('x86_64')
url="http://github.com/sddm/sddm"
license=('GPL')
depends=('qt5-declarative' 'libxcb')
makedepends=('cmake' 'git' 'qt5-tools' 'python2-docutils')
conflicts=('sddm-qt5-git' 'kf5-sddm')
provides=('sddm-qt5-git' 'kf5-sddm')
replaces=('sddm-qt5-git' 'kf5-sddm')
backup=('etc/sddm.conf')
install=sddm.install
source=('git://github.com/sddm/sddm.git'
        'sddm.conf'
        'background.png')
md5sums=('SKIP'
         '1d36fc405602fd19a43dff80236a2bd5'
         'b78df22ceb3522a33499e2b1146e5d0c')

build() {
  cd $srcdir 
  mkdir -p $srcdir/build
  cd build

  cmake ../${pkgname} \
    -DCMAKE_INSTALL_PREFIX=/usr \
    -DCMAKE_BUILD_TYPE=Release \
    -DCMAKE_INSTALL_LIBEXECDIR=/usr/lib/sddm \
    -DBUILD_MAN_PAGES=ON 
  make
}

package() {
  cd ${srcdir}/build
  make DESTDIR=${pkgdir} install
  
  sed -i -e "s|white|deepskyblue|g" $pkgdir/usr/share/sddm/themes/maui/Main.qml
  rm ${pkgdir}/usr/share/sddm/themes/maui/background.png
  install -m 644 -p ${srcdir}/background.png ${pkgdir}/usr/share/sddm/themes/maui/
  
  install -m 644 -p ${srcdir}/sddm.conf ${pkgdir}/etc/
  install -d -g 136 -o 136 ${pkgdir}/var/lib/sddm
}
