
pkgname=kde-touchpad-config
pkgver=0.1
_commit=ffc24b5
pkgrel=1
pkgdesc="Touchpad configuration tool for KDE, provides a System Settings module that allows configuration of touchpads."
arch=('x86_64')
url="https://github.com/sanya-m/kde-touchpad-config"
license=('GPL')
depends=('kde-workspace' 'xf86-input-synaptics' 'libx11' 'libxcb' 'xorg-server' 'libxi')
makedepends=('automoc4' 'cmake' 'pkg-config')
groups=('system')
source=("https://github.com/sanya-m/kde-touchpad-config/tarball/master/sanya-m-kde-touchpad-config-${pkgver}.tar.gz")
md5sums=('13929846b4e8e97df5ae8447b6c110ee')

build() {
    cd "${srcdir}/sanya-m-kde-touchpad-config-${_commit}/"
    mkdir build
    
    cd build
    cmake -DCMAKE_INSTALL_PREFIX="$(kde4-config --prefix)" ..
    make
}

package() {
    cd "${srcdir}/sanya-m-kde-touchpad-config-${_commit}/build/"
    
    make DESTDIR="$pkgdir" install
}
