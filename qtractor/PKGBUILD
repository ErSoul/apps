
pkgname=qtractor
pkgver=0.7.0
pkgrel=1
pkgdesc="Audio/MIDI multitrack sequencer"
arch=('x86_64')
url="http://qtractor.sourceforge.net/"
license=('GPL')
depends=('qt5-base' 'suil' 'lilv' 'libmad' 'libsamplerate' 'rubberband' 'liblo' 'shared-mime-info')
makedepends=('ladspa' 'dssi' 'qt5-tools')
groups=('multimedia')
source=("http://downloads.sourceforge.net/qtractor/$pkgname-$pkgver.tar.gz")
md5sums=('787757fba50723dcbadf230b78458820')

build() {
  cd "$srcdir/$pkgname-$pkgver"

  ./configure --prefix=/usr --enable-debug --enable-qt5
  make
}

package () {
  cd "$srcdir/$pkgname-$pkgver"

  make DESTDIR="$pkgdir/" install
}

