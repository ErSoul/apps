
pkgname=kid3
pkgver=3.3.2
pkgrel=1
pkgdesc="Easily tag multiple MP3, Ogg/Vorbis, FLAC, MPC, MP4/AAC, and more, plus have control over both ID3v1 and ID3v2 tags"
arch=('x86_64')
url="http://kid3.sourceforge.net/"
license=('GPL')
depends=('qt5-declarative' 'libmp4v2' 'chromaprint' 'taglib' 'kio')
makedepends=('extra-cmake-modules' 'docbook-xsl' 'qt5-tools' 'kdoctools')
groups=('multimedia')
install=${pkgname}.install
source=("http://sourceforge.net/projects/kid3/files/kid3/$pkgver/$pkgname-$pkgver.tar.gz")
md5sums=('ddd04f815d45272f1871d5ddd68a28f7')

build() {
  cd ${srcdir}
  mkdir build
  cd build
  
  cmake ../${pkgname}-${pkgver} \
    -DCMAKE_INSTALL_PREFIX=/usr \
    -DCMAKE_BUILD_TYPE=Release \
    -DWITH_QT5=ON \
    -DWITH_APPS="CLI;KDE" \
    -DWITH_ID3LIB=OFF
  make 
}

package() {
  cd ${srcdir}/build
  
  make DESTDIR=${pkgdir} install
}
