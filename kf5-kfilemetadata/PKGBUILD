
# include global config
source ../_buildscripts/${current_repo}-${_arch}-cfg.conf

pkgname=kf5-kfilemetadata
_pkgname=kfilemetadata
pkgver=${_kdever}
pkgrel=3
pkgdesc="A library for extracting file metadata"
arch=('x86_64')
url='https://projects.kde.org/projects/kde/kdelibs/kfilemetadata'
license=('LGPL')
depends=('ebook-tools' 'karchive' 'exiv2' 'kservice' 'poppler-qt5' 'taglib' 'ffmpeg')
makedepends=('extra-cmake-modules')
conflicts=('kfilemetadata' 'kfilemetadata5')
provides=('kfilemetadata' 'kfilemetadata5')
replaces=('kfilemetadata' 'kfilemetadata5')
source=("http://download.kde.org/stable/plasma/$pkgver/${_pkgname}-$pkgver.tar.xz")
md5sums=(`grep ${_pkgname}-$_kdever.tar.xz ../kf5.md5 | cut -d" " -f1`)
#source=("git://anongit.kde.org/kfilemetadata.git")
#md5sums=('SKIP')

prepare() {
  cd $_pkgname-${pkgver}
  #sed -i -e 's/ecm_setup_version(5.0.0/ecm_setup_version(1/' ${srcdir}/${_pkgname}-${pkgver}/CMakeLists.txt
}

build() {
  mkdir -p build
  cd build
  
  cmake ../${_pkgname}-${pkgver} \
    -DCMAKE_BUILD_TYPE=Release \
    -DCMAKE_INSTALL_PREFIX=/usr \
    -DPLUGIN_INSTALL_DIR=/usr/lib/qt5/plugins \
    -DLIB_INSTALL_DIR=lib
  make
}

package() {
  cd build

  make DESTDIR="${pkgdir}" install
}
