
# include global config
source ../_buildscripts/${current_repo}-${_arch}-cfg.conf

pkgname=kf5-kfilemetadata
_pkgname=kfilemetadata
pkgver=4.98.0
pkgrel=1
pkgdesc="A library for extracting file metadata"
arch=('x86_64')
url='https://projects.kde.org/projects/kde/kdelibs/kfilemetadata'
license=('LGPL')
depends=('ebook-tools' 'karchive' 'exiv2' 'kservice' 'poppler-qt5' 'taglib' 'ffmpeg')
makedepends=('extra-cmake-modules')
conflicts=('kfilemetadata' 'kfilemetadata5')
provides=('kfilemetadata' 'kfilemetadata5')
replaces=('kfilemetadata' 'kfilemetadata5')
source=("http://download.kde.org/unstable/plasma/$pkgver/src/${_pkgname}-$pkgver.tar.xz")
md5sums=('502995666f2228f839365cb865569bef')

build() {
  mkdir -p build
  cd build
  
  cmake ../${_pkgname}-${pkgver} \
    -DCMAKE_BUILD_TYPE=Release \
    -DCMAKE_INSTALL_PREFIX=/usr \
    -DPLUGIN_INSTALL_DIR=/usr/lib/qt5/plugins \
    -DLIB_INSTALL_DIR=lib
  make
}

package() {
  cd build

  make DESTDIR="${pkgdir}" install
}
