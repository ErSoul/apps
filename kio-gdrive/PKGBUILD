
pkgname=kio-gdrive
pkgver=1.2.2
pkgrel=1
pkgdesc="KIO Slave to access Google Drive"
arch=('x86_64')
url='https://github.com/KDE/kio-gdrive'
license=('GPL2')
depends=('ki18n' 'kio' 'libkgapi' 'qtkeychain' 'dolphin' 'kaccounts-integration')
makedepends=('extra-cmake-modules' 'kdoctools')
source=("https://download.kde.org/stable/kio-gdrive/${pkgver}/src/${pkgname}-${pkgver}.tar.xz")
sha256sums=('25dc91424ac79e882471ccb142ef9b50f9069e4b18775b8def875464d2627b5e')

build() {
  mkdir -p build
  cd build 
  
  cmake ../${pkgname}-${pkgver} \
    -DCMAKE_INSTALL_PREFIX=/usr \
    -DCMAKE_BUILD_TYPE=Release \
    -DCMAKE_INSTALL_LIBDIR=lib \
    -DKDE_INSTALL_QMLDIR=/usr/lib/qt5/qml \
    -DKDE_INSTALL_PLUGINDIR=/usr/lib/qt5/plugins \
    -DBUILD_TESTING=OFF 
  make 
}

package() {
  cd build
  
  make DESTDIR=${pkgdir} install
}
