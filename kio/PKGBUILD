
# include global config
source ../_buildscripts/${current_repo}-${_arch}-cfg.conf

pkgname=kio
pkgver=${_kf5ver}
pkgrel=1
pkgdesc='Framework that implements almost all the file management functions you will ever need'
arch=('x86_64')
url='https://projects.kde.org/projects/frameworks/kio'
license=('LGPL')
depends=('krb5' 'solid' 'knotifications' 'kjobwidgets' 'kbookmarks' 'qt5-script' 'libxslt' 'kwallet')
makedepends=('extra-cmake-modules' 'kdoctools')
groups=('kf5')
install=kio.install
source=("http://download.kde.org/unstable/frameworks/${pkgver}/${pkgname}-${pkgver}.tar.xz"
        'kurlnavigator.diff')
md5sums=(`grep ${pkgname}-$_kf5ver.tar.xz ../kf5.md5 | cut -d" " -f1`
         'c922c3d2277c93c0b43a6b39156d1f01')

prepare() {
  cd ${srcdir}/${pkgname}-${pkgver}
  #patch -p1 -R -i ${srcdir}/kurlnavigator.diff
}
         
build() {
  cd ${srcdir}
  mkdir -p build
  cd build
  
  cmake ../${pkgname}-${pkgver} \
    -DCMAKE_BUILD_TYPE=Release \
    -DCMAKE_INSTALL_PREFIX=/usr \
    -DLIB_INSTALL_DIR=lib \
    -DLIBEXEC_INSTALL_DIR=lib \
    -DSYSCONF_INSTALL_DIR=/etc \
    -DKDE_INSTALL_USE_QT_SYS_PATHS=ON \
    -DBUILD_TESTING=OFF
  make
}

package() {
  cd build
  
  make DESTDIR="${pkgdir}" install
}
