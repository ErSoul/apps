
# include global config
source ../_buildscripts/${current_repo}-${_arch}-cfg.conf

pkgname=kdepim
pkgver=${_kdever}
pkgrel=3
arch=('x86_64')
pkgdesc="Project that aims to bring together anything to do with personal information management."
url="http://www.kde.org"
license=('GPL' 'LGPL' 'FDL')
depends=('grantlee-qt5' 'phonon-qt5' 'qt5-tools' 'prison' 'libkgapi' 'qtwebengine' 'qtspeech'
         #frameworks
         'kdelibs4support' 'kwallet' 'knewstuff' 'kcmutils' 'kdewebkit' 'karchive' 'knotifyconfig'
         'kconfig' 'khtml' 'kservice' 'kdbusaddons' 'kauth' 'ktexteditor' 'kdnssd' 'kcodecs' 'kglobalaccel'
         'sonnet' 'kross' 
         #kdepimlibs
         'kcontacts' 'kcalcore' 'kidentitymanagement' 'kldap' 'kmailtransport' 'kcalutils' 'kontactinterface'
         'kholidays' 'ktnef' 'kimap' 'kmbox' 'akonadi-calendar' 'syndication' 'gpgmepp' 'kalarmcal' 'kmime'
         'kxmlrpcclient' 'kblog' 'kdepimlibs' 'akonadi-search' 'kdepim-runtime')
makedepends=('boost' 'extra-cmake-modules' 'kdoctools' 'git')
conflicts=('kf5-kdepim'
           'kdepim-common'
           'kdepim-akonadiconsole'
           'kdepim-akregator'
           'kdepim-blogilo'
           'kdepim-kaddressbook'
           'kdepim-kalarm'
           'kdepim-kjots'
	   'kdepim-kleopatra'
           'kdepim-kmail'
           'kdepim-knode'
           'kdepim-knotes'
           'kdepim-kontact'
           'kdepim-korganizer'
           'kdepim-ktimetracker') 
replaces=('kf5-kdepim'
          'kdepim-common'
	  'kdepim-akonadiconsole'
          'kdepim-akregator'
          'kdepim-blogilo'
          'kdepim-kaddressbook'
          'kdepim-kalarm'
          'kdepim-kjots'
	  'kdepim-kleopatra'
          'kdepim-kmail'
          'kdepim-knode'
          'kdepim-knotes'
          'kdepim-kontact'
          'kdepim-korganizer'
          'kdepim-ktimetracker')
install=kdepim.install
source=($_mirror/${pkgname}-${_kdever}.tar.xz
        'libcommon.diff')
md5sums=(`grep ${pkgname}-${_kdever}.tar.xz ../kde-sc.md5 | cut -d" " -f1`
        '945faf5733e4d61aabe62b5b14f0afbe')

prepare() {
  cd $pkgname-${pkgver}
  #sed -i 's|add_subdirectory(korganizer)|#add_subdirectory(korganizer)|' ${srcdir}/$pkgname/CMakeLists.txt
  #patch -p1 -i $srcdir/libcommon.diff
}

build() {
  mkdir build
  
  cd build 
  cmake ../${pkgname}-${pkgver} \
    -DCMAKE_INSTALL_PREFIX=/usr \
    -DCMAKE_BUILD_TYPE=Release \
    -DCMAKE_SKIP_RPATH=ON \
    -DLIB_INSTALL_DIR=lib \
    -DSYSCONF_INSTALL_DIR=/etc \
    -DQML_INSTALL_DIR=/usr/lib/qt5/qml \
    -DPLUGIN_INSTALL_DIR=/usr/lib/qt5/plugins \
    -DKDE_INSTALL_USE_QT_SYS_PATHS=ON \
    -DBUILD_TESTING=FALSE \
    -DKDEPIM_NO_TEXTTOSPEECH=FALSE
  make VERBOSE=1
}

package() {
  cd build
  
  make DESTDIR=${pkgdir} install
}
