
# include global config
source ../_buildscripts/${current_repo}-${_arch}-cfg.conf

pkgname=kdepim
pkgver=${_kdever}
pkgrel=1
arch=('x86_64')
pkgdesc="Project that aims to bring together anything to do with personal information management."
url="http://www.kde.org"
license=('GPL' 'LGPL' 'FDL')
depends=('grantlee' 'phonon-qt5' 'qt5-tools' 'prison' 'libkgapi' 'qt5-webkit' # fails with Qt5.5.1 'qtspeech'
         #frameworks
         'kdelibs4support' 'kwallet' 'knewstuff' 'kcmutils' 'kdewebkit' 'karchive' 'knotifyconfig'
         'kconfig' 'khtml' 'kservice' 'kdbusaddons' 'kauth' 'ktexteditor' 'kdnssd' 'kcodecs' 'kglobalaccel'
         'sonnet' 'kross' 
         #kdepimlibs
         'kcontacts' 'kcalcore' 'kidentitymanagement' 'kldap' 'kmailtransport' 'kcalutils' 'kontactinterface'
         'kholidays' 'ktnef' 'kimap' 'kmbox' 'akonadi-calendar' 'syndication' 'gpgmepp' 'kalarmcal' 'kmime'
         'kxmlrpcclient' 'kblog' 'kdepimlibs' 'akonadi-search' 'kdepim-runtime')
makedepends=('boost' 'extra-cmake-modules' 'kdoctools') # 'clang')
conflicts=('kf5-kdepim'
           'kdepim-common'
           'kdepim-akonadiconsole'
           'kdepim-akregator'
           'kdepim-blogilo'
           'kdepim-kaddressbook'
           'kdepim-kalarm'
           'kdepim-kjots'
	   'kdepim-kleopatra'
           'kdepim-kmail'
           'kdepim-knode'
           'kdepim-knotes'
           'kdepim-kontact'
           'kdepim-korganizer'
           'kdepim-ktimetracker') 
replaces=('kf5-kdepim'
          'kdepim-common'
	  'kdepim-akonadiconsole'
          'kdepim-akregator'
          'kdepim-blogilo'
          'kdepim-kaddressbook'
          'kdepim-kalarm'
          'kdepim-kjots'
	  'kdepim-kleopatra'
          'kdepim-kmail'
          'kdepim-knode'
          'kdepim-knotes'
          'kdepim-kontact'
          'kdepim-korganizer'
          'kdepim-ktimetracker')
install=kdepim.install
source=($_mirror/${pkgname}-${_kdever}.tar.xz)
md5sums=(`grep ${pkgname}-${_kdever}.tar.xz ../kde-sc.md5 | cut -d" " -f1`)

#prepare() {
#  cd $pkgname-${pkgver}
  #sed -i 's|add_subdirectory(korganizer)|#add_subdirectory(korganizer)|' ${srcdir}/$pkgname/CMakeLists.txt
  #patch -p1 -i $srcdir/CMakeLists.diff
#}

build() {
  mkdir build
  
  #export CC=/usr/bin/clang
  #export CXX=/usr/bin/clang++
  
  cd build 
  cmake ../${pkgname}-${pkgver} \
    -DCMAKE_INSTALL_PREFIX=/usr \
    -DCMAKE_BUILD_TYPE=Release \
    -DCMAKE_SKIP_RPATH=ON \
    -DLIB_INSTALL_DIR=lib \
    -DSYSCONF_INSTALL_DIR=/etc \
    -DQML_INSTALL_DIR=/usr/lib/qt5/qml \
    -DPLUGIN_INSTALL_DIR=/usr/lib/qt5/plugins \
    -DKDE_INSTALL_USE_QT_SYS_PATHS=ON \
    -DBUILD_TESTING=FALSE \
    -DKDEPIM_NO_TEXTTOSPEECH=TRUE
  make VERBOSE=1
}

package() {
  cd build
  
  make DESTDIR=${pkgdir} install
}
