	depends=('kdepim-common')
        groups=('kde' 'kdepim' 'kde-uninstall')
        provides=('kleopatra')
        install=${pkgbase}.install
	url="http://kde.org/applications/utilities/kleopatra/"

        splitdirs="kleopatra"
                for i in ${splitdirs} ; do
                        cd ${srcdir}/${pkgbase}-${pkgver}/${i}
                        make DESTDIR=${pkgdir} install
                done
}

