
pkgname=rssguard
pkgver=2.5.0
pkgrel=1
pkgdesc="Simple (yet powerful) feed reader, able to fetch the most known feed formats, including RSS/RDF and ATOM."
arch=('x86_64')
url="https://bitbucket.org/skunkos/rssguard/wiki/Home"
license=('GPL')
depends=('qt5-webkit')
makedepends=('cmake' 'qt5-tools')
#source=("https://bitbucket.org/skunkos/$pkgname/downloads/$pkgname-$pkgver.tar.gz")
source=("https://bitbucket.org/skunkos/rssguard/get/$pkgver.tar.bz2")
md5sums=('891c1417becd89fcd7ae12ee212940b2')

build() {
  mkdir -p build
  cd build

  #cmake ../$pkgname-${pkgver} \
  cmake ../skunkos* \
    -DCMAKE_INSTALL_PREFIX=/usr \
    -DCMAKE_BUILD_TYPE=release \
    -DUSE_QT_5=ON
  make
}

package() {
  cd build

  make DESTDIR=$pkgdir/ install
}