
pkgname=avogadro
pkgver=1.1.1
pkgrel=6
pkgdesc="An advanced molecular editor based on Qt"
arch=('x86_64')
url="http://avogadro.openmolecules.net/wiki/Main_Page"
license=('GPL2')
depends=('eigen' 'openbabel' 'pyqt-python2' 'boost-libs' 'glew' 'python2-numpy')
makedepends=('cmake' 'boost' 'mesa' 'doxygen')
groups=('education')
source=("http://downloads.sourceforge.net/avogadro/${pkgname}-${pkgver}.tar.bz2"
        'boost.patch'
        'avogadro-0001-fix-undefined-reference-to-symbol-XInitThreads.patch')
md5sums=('1223bb18f50dccd2c60538aa90d58c7a'
         'c3b5676f889cc552c6b396e519d19ae4'
         '11b1efb27f7a309e014aa805995488a2')

build() {
  cd ${srcdir}/${pkgname}-${pkgver}
  patch -p1 -i ${srcdir}/boost.patch
  patch -p1 -i ${srcdir}/avogadro-0001-fix-undefined-reference-to-symbol-XInitThreads.patch

  cd ${srcdir}
  mkdir build
  cd build
  cmake ../${pkgname}-${pkgver} \
    -DCMAKE_BUILD_TYPE=Release \
    -DCMAKE_INSTALL_PREFIX=/usr \
    -DPYTHON_EXECUTABLE=/usr/bin/python2 \
    -DQT_MKSPECS_RELATIVE=share/qt/mkspecs
  make
}

package() {
  cd ${srcdir}/build
  
  make DESTDIR=${pkgdir} install
}
