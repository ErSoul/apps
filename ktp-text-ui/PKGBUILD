
pkgname=ktp-text-ui
pkgver=0.6.2.1
pkgrel=1
pkgdesc="Telepathy text chat handler"
arch=('x86_64')
url="http://www.kde.org"
license=('GPL')
depends=('ktp-common-internals' 'ktp-contact-list')
makedepends=('cmake' 'automoc4' 'boost')
conflicts=('telepathy-kde-text-ui')
replaces=('telepathy-kde-text-ui')
provides=('telepathy-kde-text-ui')
groups=('kde-telepathy')
source=("ftp://mirrors.mit.edu/kde/stable/kde-telepathy/${pkgver}/src/${pkgname}-${pkgver}.tar.bz2")
md5sums=('c2a99904b62eba1836fb2889be1b8c54')

build() {
  cd "${srcdir}"
  mkdir build
  
  cd build
  cmake ../${pkgname}-${pkgver} \
    -DCMAKE_INSTALL_PREFIX=/usr \
    -DCMAKE_BUILD_TYPE=Release
  make
}

package() {
  cd "${srcdir}"/build
  
  make DESTDIR="${pkgdir}" install
}
