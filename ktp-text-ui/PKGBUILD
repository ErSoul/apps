
pkgname=ktp-text-ui
pkgver=0.8.1
_pkgver=0.8.1
pkgrel=1
pkgdesc="Telepathy text chat handler"
arch=('x86_64')
url="http://www.kde.org"
license=('GPL')
depends=('ktp-common-internals' 'ktp-contact-list' 'telepathy-logger-qt' 'qjson')
makedepends=('cmake' 'automoc4' 'boost')
groups=('kde-telepathy')
source=("ftp://mirrors.mit.edu/kde/stable/kde-telepathy/${_pkgver}/src/${pkgname}-${pkgver}.tar.bz2")
md5sums=('500f3d1d7849e115be15b6168436fae5')

build() {
  cd "${srcdir}"
  mkdir build
  
  cd build
  cmake ../${pkgname}-${pkgver} \
    -DCMAKE_INSTALL_PREFIX=/usr \
    -DCMAKE_BUILD_TYPE=Release
  make
}

package() {
  cd "${srcdir}"/build
  
  make DESTDIR="${pkgdir}" install
}
