
# include global config
source ../_buildscripts/${current_repo}-${_arch}-cfg.conf

pkgname=koko
pkgver=0.1.0
_commit=2672f180b01f01a18a264658fe7befa0e4ba6107
pkgrel=2
pkgdesc="An Image Gallery application"
arch=('x86_64')
url='https://projects.kde.org/projects/playground/graphics/koko'
license=('LGPL')
depends=('ki18n' 'kdeclarative' 'kconfig' 'kdbusaddons' 'kio' 'kguiaddons' 'exiv2' 'qt5-location')
makedepends=('extra-cmake-modules' 'kdoctools')
source=("https://github.com/KDE/koko/archive/${_commit}.zip")
md5sums=('b949662c56bbb2c83a8c83f91dce41f7')

build() {
  mkdir -p build
  cd build
  
  cmake ../${pkgname}-${_commit} \
    -DCMAKE_BUILD_TYPE=Release \
    -DCMAKE_INSTALL_PREFIX=/usr \
    -DKDE_INSTALL_LIBDIR=lib 
  make
}

package() {
  cd build

  make DESTDIR=${pkgdir} install
}
