
# include global config
source ../_buildscripts/${current_repo}-${_arch}-cfg.conf

pkgname=koko
pkgver=0.1.0
_commit=e27ff434dfeabeee8976c51d9e3c9877a54ff3c3
pkgrel=1
pkgdesc="An Image Gallery application"
arch=('x86_64')
url='https://projects.kde.org/projects/playground/graphics/koko'
license=('LGPL')
depends=('ki18n' 'kdeclarative' 'kconfig' 'kdbusaddons' 'kio' 'kguiaddons' 'exiv2' 'qt5-location')
makedepends=('extra-cmake-modules' 'kdoctools')
source=("https://github.com/KDE/koko/archive/${_commit}.zip")
md5sums=('8a40eb68e40563a842df41ad22ad9743')

build() {
  mkdir -p build
  cd build
  
  cmake ../${pkgname}-${_commit} \
    -DCMAKE_BUILD_TYPE=Release \
    -DCMAKE_INSTALL_PREFIX=/usr \
    -DKDE_INSTALL_LIBDIR=lib 
  make
}

package() {
  cd build

  make DESTDIR=${pkgdir} install
}
