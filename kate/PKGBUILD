
# include global config
source ../_buildscripts/${current_repo}-${_arch}-cfg.conf

pkgname=kate
pkgver=${_kdever}
pkgrel=1
pkgdesc='Advanced editor component which is used in numerous KDE applications requiring a text editing component'
arch=('x86_64')
url='https://projects.kde.org/projects/kde/applications/kate'
license=('LGPL')
depends=('kconfig' 'kguiaddons' 'ki18n' 'kinit' 'kjobwidgets' 'kitemmodels'
         'kio' 'knewstuff' 'kparts' 'ktexteditor' 'kwindowsystem' 'kxmlgui' 'plasma-framework')
makedepends=('extra-cmake-modules' 'kdoctools')
conflicts=('kdesdk-kate' 'kdesdk-kate-debug')
replaces=('kdesdk-kate' 'kdesdk-kate-debug')
provides=('kdesdk-kate')
source=("$_mirror/${pkgname}-${pkgver}.tar.xz"
        'org.kde.kate.desktop')
md5sums=(`grep ${pkgname}-$_kdever.tar.xz ../kf5.md5 | cut -d" " -f1`)
         '74cc96d80949fc8973e4d542ba17193b')

prepare() {
  cd $pkgname-${pkgver}
  #patch -p1 -i "${srcdir}"/pkgbuild-syntax-highlight.patch
}

build() {
  mkdir -p build
  cd build
  
  cmake ../${pkgname}-${pkgver} \
    -DCMAKE_BUILD_TYPE=Release \
    -DCMAKE_INSTALL_PREFIX=/usr \
    -DSYSCONF_INSTALL_DIR=/etc \
    -DPLUGIN_INSTALL_DIR=/usr/lib/qt5/plugins \
    -DKDE_INSTALL_USE_QT_SYS_PATHS=ON \
    -DLIB_INSTALL_DIR=lib
  make
}

package() {
  cd build
  make DESTDIR=${pkgdir} install
  
  rm -r ${pkgdir}/usr/share/applications/org.kde.kate.desktop
  install -D -m644 ${srcdir}/org.kde.kate.desktop ${pkgdir}/usr/share/applications/
}
