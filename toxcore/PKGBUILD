
pkgname=toxcore
pkgver=0.0.0.2
_commit=dcf2aaa53005060608353b9d66b9917fd7ed18a9
pkgrel=1
pkgdesc='Easy to use, all-in-one communication platform that ensures full privacy and secure message delivery.'
arch=('x86_64')
url='https://tox.chat'
license=('GPL3')
depends=('systemd' 'libconfig' 'libsodium' 'libvpx' 'opus')
makedepends=('check')
options=('!staticlibs')
source=("https://github.com/irungentoo/toxcore/archive/${_commit}.zip")
md5sums=('d23ddbda57dac3404bf72ac9db37f825')

build() {
  cd ${pkgname}-${_commit}
  
  autoreconf -i
  ./configure \
    --prefix=/usr \
    --enable-tests
  make
}

check() {
  cd ${pkgname}-${_commit}
  
  #make check tests hang/keep repeating
}

package() {
  cd ${pkgname}-${_commit}
  
  make DESTDIR=${pkgdir} install
}
