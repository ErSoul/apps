
# include global config
source ../_buildscripts/${current_repo}-${_arch}-cfg.conf

pkgname=libkexiv2
#pkgver=${_kdever}
pkgver=4.9.84
pkgrel=1
pkgdesc="Wrapper around exiv2"
arch=('x86_64')
url='http://www.kde.org'
license=('GPL' 'LGPL' 'FDL')
depends=('ktextwidgets' 'kcoreaddons' 'ki18n' 'libjpeg-turbo' 'exiv2')
makedepends=('pkg-config' 'extra-cmake-modules' 'kdoctools' 'git')
#groups=("kde" "kdegraphics" "kde-uninstall")
conflicts=('kdegraphics-libkexiv2')
replaces=('kdegraphics-libkexiv2')
provides=('kdegraphics-libkexiv2')
#options=('docs')
#source=("$_mirror/${_pkgname}-$_kdever.tar.xz")
#md5sums=(`grep ${_pkgname}-$_kdever.tar.xz ../kde-sc.md5 | cut -d" " -f1`)
source=("git://anongit.kde.org/libkexiv2.git#branch=frameworks")
md5sums=('SKIP')

prepare() {
  cd $pkgname
  #sed -i -e 's|KF5::KDELibs4Support|KF5::KDELibs4Support KF5::KHtml|' ${srcdir}/${pkgname}/src/CMakeLists.txt
}

build() {
  mkdir -p build
  cd build
  
  cmake ../${pkgname} \
    -DCMAKE_BUILD_TYPE=Release \
    -DCMAKE_INSTALL_PREFIX=/usr \
    -DLIB_INSTALL_DIR=lib \
    -DPLUGIN_INSTALL_DIR=/usr/lib/qt5/plugins \
    -DBUILD_TESTING=OFF
  make
}

package() {
  cd build

  make DESTDIR=${pkgdir} install
}
