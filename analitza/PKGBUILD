
# include global config
source ../_buildscripts/${current_repo}-${_arch}-cfg.conf

pkgname=analitza
pkgver=${_kdever}
pkgrel=1
pkgdesc="Shared Math libraries from Kalgebra"
url="http://kde.org/applications/education/kalgebra/"
arch=('x86_64')
license=('GPL' 'LGPL' 'FDL')
depends=('eigen3'  'qt5-svg')
makedepends=('extra-cmake-modules' 'kdoctools')
conflicts=('kdeedu-analitza')
replaces=('kdeedu-analitza')
provides=('kdeedu-analitza')
#groups=('kde' 'kdeedu' 'kde-uninstall' 'education')
install=${pkgname}.install
source=("$_mirror/${pkgname}-$_kdever.tar.xz")
#md5sums=(`grep ${pkgname}-$_kdever.tar.xz ../kde-sc.md5 | cut -d" " -f1`)
md5sums=('604933c4de59d89d154b142c70cd8fd8')

build() {
  mkdir -p build
  cd build
  
  cmake ../${pkgname}-${pkgver} \
    -DCMAKE_BUILD_TYPE=Release \
    -DCMAKE_INSTALL_PREFIX=/usr \
    -DLIB_INSTALL_DIR=lib \
    -DPLUGIN_INSTALL_DIR=/usr/lib/qt5/plugins \
    -DKDE_INSTALL_USE_QT_SYS_PATHS=ON \
    -DBUILD_TESTING=OFF 
  make
}

package() {
  cd build

  make DESTDIR=${pkgdir} install
}
