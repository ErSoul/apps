
pkgname=akonadi
pkgver=1.12.1
_pkgver=1.12.1
pkgrel=2
pkgdesc="PIM layer, which provides an asynchronous API to access all kind of PIM data"
arch=('x86_64')
url='http://www.akonadi-project.org'
license=('LGPL')
depends=('shared-mime-info' 'boost-libs' 'mariadb' 'libxslt')
makedepends=('pkg-config' 'cmake' 'automoc4' 'boost' 'postgresql')
install=$pkgname.install
source=("http://download.kde.org/stable/akonadi/src/${pkgname}-${_pkgver}.tar.bz2"
        'dbupdater.diff')
md5sums=('9a4a99d10e003a267a515fc60de4f817'
         '3952bbc97a479c248e974fcf920c659b')

build() {
 	cd ${srcdir}/${pkgname}-${pkgver}
 	patch -p1 -i ${srcdir}/dbupdater.diff
	
	cd ${srcdir}
	mkdir -p build
	cd build
	cmake ../${pkgname}-${pkgver} \
		-DCMAKE_BUILD_TYPE=Release \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DINSTALL_QSQLITE_IN_QT_PREFIX=TRUE \
		-DWITH_SOPRANO=OFF
	make 
}

package() {
  	cd ${srcdir}/build
  	
	make DESTDIR=${pkgdir} install
}
