
# include global config
source ../_buildscripts/${current_repo}-${_arch}-cfg.conf

pkgname=akonadi
pkgver=${_kdever}
#pkgver=5.0.51
pkgrel=4
arch=('x86_64')
url='http://community.kde.org/KDE_PIM/Akonadi'
pkgdesc="PIM layer, which provides an asynchronous API to access all kind of PIM data"
license=('LGPL')
depends=('shared-mime-info' 'mariadb' 'qt5-base' 'libxslt')
makedepends=('extra-cmake-modules' 'postgresql')
optdepends=('postgresql: PostgreSQL backend')
install=akonadi.install
conflicts=('kf5-akonadi')
replaces=('kf5-akonadi')
provides=('kf5-akonadi')
source=("$_mirror/${pkgname}-$_kdever.tar.xz") 
md5sums=(`grep ${pkgname}-$_kdever.tar.xz ../kde-sc.md5 | cut -d" " -f1`)
#source=("git://anongit.kde.org/akonadi")
#md5sums=('SKIP')

build() {
  mkdir -p build
  cd build
  
  cmake ../${pkgname}-${pkgver} \
    -DCMAKE_BUILD_TYPE=Release \
    -DCMAKE_INSTALL_PREFIX=/usr \
    -DLIB_INSTALL_DIR=lib \
    -DPLUGIN_INSTALL_DIR=/usr/lib/qt5/plugins \
    -DKDE_INSTALL_USE_QT_SYS_PATHS=ON
  make
}

package() {
  cd build
  
  make DESTDIR="${pkgdir}" install
}
