
# include global config
source ../_buildscripts/${current_repo}-${_arch}-cfg.conf

pkgname=kolourpaint
#pkgver=${_kdever}
pkgver=16.03.70
_commit=3a48dd18fa60649956d894803b50a8e12e89b103
pkgrel=1
pkgdesc="Painting program to quickly create raster images plus useful as a touch-up tool and simple image editing tasks."
url="http://kde.org/applications/graphics/kolourpaint/"
arch=('x86_64')
license=('GPL' 'LGPL' 'FDL')
depends=('kparts' 'kdelibs4support' 'qimageblitz' 'libkexiv2' 'libksane')
makedepends=('extra-cmake-modules' 'kdoctools' 'git')
groups=('graphics')
conflicts=('kdegraphics-kolourpaint')
replaces=('kdegraphics-kolourpaint')
#source=("$_mirror/${_pkgname}-$_kdever.tar.xz")
#md5sums=(`grep ${_pkgname}-$_kdever.tar.xz ../kde-sc.md5 | cut -d" " -f1`)
source=("https://github.com/KDE/kolourpaint/archive/${_commit}.zip")
md5sums=('c69c59c3e574c30b640246535cd6ae3d')

build() {
  mkdir -p build
  cd build
  
  cmake ../${pkgname}-${_commit} \
    -DCMAKE_BUILD_TYPE=Release \
    -DCMAKE_INSTALL_PREFIX=/usr \
    -DSYSCONF_INSTALL_DIR=/etc \
    -DPLUGIN_INSTALL_DIR=/usr/lib/qt5/plugins \
    -DLIB_INSTALL_DIR=lib
  make
}

package() {
  cd build
  
  make DESTDIR="${pkgdir}" install
}
