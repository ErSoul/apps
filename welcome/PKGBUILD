
pkgname=welcome
pkgver=2.2
pkgrel=1
pkgdesc="Live Welcome app for KaOS"
arch=('x86_64')
url="http://kaosx.us/"
license=('GPL')
depends=('qt5-declarative')
makedepends=('git')
source=("git://github.com/KaOSx/welcome.git")
md5sums=('SKIP')

build() {
    cd "${srcdir}/welcome/"
   
    /usr/lib/qt5/bin/qmake welcome.pro
    #qmake
    make clean
    make
}

package() {
    cd "${srcdir}/welcome/"
   
    make INSTALL_ROOT="$pkgdir/" install
}
