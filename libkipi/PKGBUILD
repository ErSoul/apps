
# include global config
source ../_buildscripts/${current_repo}-${_arch}-cfg.conf

pkgname=libkipi
#pkgver=${_kdever}
pkgver=15.03.70
pkgrel=1
pkgdesc="An interface to use kipi-plugins from a KDE application"
arch=('x86_64')
url='http://www.kde.org'
license=('GPL' 'LGPL' 'FDL')
depends=('ki18n' 'kconfig' 'kxmlgui' 'kio')
makedepends=('extra-cmake-modules' 'kdoctools' 'git' 'pkg-config')
#groups=("kde" "kdegraphics" "kde-uninstall")
install=${pkgname}.install
conflicts=('kdegraphics-libkipi')
provides=('kdegraphics-libkipi')
replaces=('kdegraphics-libkipi')
#source=("$_mirror/${_pkgname}-$_kdever.tar.xz")
#md5sums=(`grep ${_pkgname}-$_kdever.tar.xz ../kde-sc.md5 | cut -d" " -f1`)
source=("git://anongit.kde.org/libkipi.git#branch=frameworks")
md5sums=('SKIP')

build() {
  mkdir -p build
  cd build
  
  cmake ../${pkgname} \
    -DCMAKE_BUILD_TYPE=Release \
    -DCMAKE_INSTALL_PREFIX=/usr \
    -DLIB_INSTALL_DIR=lib \
    -DPLUGIN_INSTALL_DIR=/usr/lib/qt5/plugins \
    -DKDE_INSTALL_USE_QT_SYS_PATHS=ON \
    -DBUILD_TESTING=OFF 
  make
}

package() {
  cd build

  make DESTDIR=${pkgdir} install
}
