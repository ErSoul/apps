
pkgname=kde-kdm-themes-grey
pkgver=1.1
pkgrel=1
pkgdesc="KdeOS grey KDM-Theme"
url="http://kde-os.tk"
license=('GPL')
arch=('x86_64')
depends=('kde-workspace')
groups=("kde" "kde-complete" "kde-uninstall" "kde-minimal")
source=("http://sourceforge.net/projects/kdeos/files/Sources/grey/kdm/1.1/grey_kdm.tar.gz")
md5sums=('a7ab7d3fda06a8aa0c7e47b2b3708a22')

package() {
	cd ${srcdir}/
	
	mkdir -pv $pkgdir/usr/share/apps/kdm/themes
	cp -Rv ${srcdir}/grey_kdm $pkgdir/usr/share/apps/kdm/themes/
}
