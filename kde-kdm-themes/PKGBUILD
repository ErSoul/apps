
pkgname=kde-kdm-themes-midna
pkgver=1.0
pkgrel=2
pkgdesc="KaOS grey KDM-Theme"
url="http://kaosx.us"
license=('GPL')
arch=('x86_64')
depends=('kde-workspace')
groups=("kde" "kde-complete" "kde-uninstall" "kde-minimal")
source=("http://sourceforge.net/projects/kaosx/files/sources/midna/kdm/$pkgver/midna_kdm.tar.xz")
md5sums=('93700fd284c46ea9dd5b3be2fa0fbc04')

package() {
	cd ${srcdir}/
	
	mkdir -pv $pkgdir/usr/share/apps/kdm/themes/midna
	cp -Rv ${srcdir}/midna_kdm/* $pkgdir/usr/share/apps/kdm/themes/midna
}
