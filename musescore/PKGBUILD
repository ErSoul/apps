
pkgname=musescore
pkgver=2.0.1
pkgrel=1
pkgdesc="Music notation and composition software written in Qt"
arch=('x86_64')
url="http://www.musescore.org/en/"
license=('GPL')
depends=('qt5-quick1' 'qt5-svg' 'qt5-tools' 'openssl' 'pulseaudio' 'lame' 'portaudio-svn' 'jack')
makedepends=('cmake' 'doxygen' 'texlive-core')
groups=('multimedia')
source=("https://github.com/musescore/MuseScore/archive/v${pkgver}.tar.gz")
md5sums=('3ad97361c1b95bc1ee7fc7740ba1dbcd')
         
build() {
  cd $srcdir/MuseScore-${pkgver}
  
  make PREFIX=/usr release
  
  #cd build
  #make doxy
}
package() {
  cd $srcdir/MuseScore-${pkgver}
  
  make PREFIX=/usr DESTDIR=$pkgdir install
}
