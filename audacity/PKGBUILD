
pkgname=audacity
pkgver=2.0.6
pkgrel=1
pkgdesc="A program that lets you manipulate digital audio waveforms"
arch=('x86_64')
url="http://audacity.sourceforge.net/"
license=('GPL')
depends=('libvorbis' 'libmad' 'libid3tag' 'wxgtk' 'lame' 'hicolor-icon-theme'
         'shared-mime-info' 'desktop-file-utils' 'redland' 'jack' 'soundtouch')
makedepends=('zip' 'python' 'pkgconfig')
options=('!makeflags')
install="${pkgname}.install"
source=("http://sourceforge.net/projects/audacity/files/audacity/${pkgver}/${pkgname}-minsrc-${pkgver}.tar.xz")
md5sums=('fb7b39a1ec8cb562be5ee65725af8832')

build() {
  cd "${srcdir}/${pkgname}-src-${pkgver}"
  sed -i 's|wx-config|wx-config-2.8|' "${srcdir}/${pkgname}-src-${pkgver}/configure"
  sed -i 's|wx-config|wx-config-2.8|' "${srcdir}/${pkgname}-src-${pkgver}/lib-src/FileDialog/configure"
  sed -i 's|wx-config|wx-config-2.8|' "${srcdir}/${pkgname}-src-${pkgver}/lib-src/lib-widget-extra/configure"
  
  ./configure --prefix=/usr --enable-unicode --with-wx-config=wx-config-2.8
  make
}

package() {
  cd "${srcdir}/${pkgname}-src-${pkgver}"
  
  make DESTDIR="${pkgdir}" install
}

