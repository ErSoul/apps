
pkgname=audacity
pkgver=2.1.0
pkgrel=1
pkgdesc="A program that lets you manipulate digital audio waveforms"
arch=('x86_64')
url="http://audacity.sourceforge.net/"
license=('GPL')
depends=('libvorbis' 'libmad' 'libid3tag' 'wxgtk2.9' 'lame' 'hicolor-icon-theme'
         'shared-mime-info' 'desktop-file-utils' 'redland' 'jack' 'soundtouch')
makedepends=('cmake' 'zip' 'python2' 'pkgconfig')
options=('!makeflags')
install="${pkgname}.install"
source=("http://sourceforge.net/projects/audacity/files/audacity/${pkgver}/${pkgname}-minsrc-${pkgver}.tar.xz")
md5sums=('d21a794cc1e2a1567d3d75b53b1f2f02')

build() {
  cd "${srcdir}/${pkgname}-minsrc-${pkgver}"
  
  ./configure --prefix=/usr --enable-unicode #--with-wx-config=wx-config-2.8
  make
}

package() {
  cd "${srcdir}/${pkgname}-minsrc-${pkgver}"
  
  make DESTDIR="${pkgdir}" install
}

