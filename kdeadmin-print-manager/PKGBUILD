
# include global config
source ../_buildscripts/${current_repo}-${_arch}-cfg.conf

pkgname=kdeadmin-print-manager
_pkgname=print-manager
pkgver=${_kdever}
pkgrel=1
pkgdesc="A KDE tool for managing print jobs and printers"
url="https://projects.kde.org/projects/kde/kdeutils/print-manager"
arch=('x86_64')
license=('GPL' 'LGPL' 'FDL')
depends=('kde-workspace' 'libcups' 'system-config-printer')
makedepends=('cmake' 'automoc4')
install=${pkgname}.install
groups=('kde' 'kdeadmin' 'kde-uninstall')
options=('docs')
source=("$_mirror/${_pkgname}-$_kdever.tar.xz"
        'cups2a.diff'
        'cups2b.diff')
md5sums=(`grep ${_pkgname}-$_kdever.tar.xz ../kde-sc.md5 | cut -d" " -f1`
         '4ebba3a0c0289e665e29dda1e6bff4d8'
         '77a7a54a332678bd64e9cf38ca414b0e')

build() {
	cd ${srcdir}/${_pkgname}-${pkgver}
	#patch -p1 -i ${srcdir}/cups2b.diff
	#patch -p1 -i ${srcdir}/cups2a.diff
	
	cmake . -DCMAKE_BUILD_TYPE=${_build_type} \
                -DCMAKE_INSTALL_PREFIX=${_installprefix} \
                -DCMAKE_SKIP_RPATH=ON \
                -DCMAKE_{SHARED,MODULE,EXE}_LINKER_FLAGS='-Wl,--no-undefined -Wl,--as-needed'
}

package() {
	cd ${srcdir}/${_pkgname}-${pkgver}
	
	make DESTDIR=${pkgdir} install 
}
