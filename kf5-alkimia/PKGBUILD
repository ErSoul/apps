
pkgname=kf5-alkimia	
_pkgname=alkimia
pkgver=4.100.0
pkgrel=3
arch=('x86_64')
pkgdesc="A library with common classes and functionality used by finance applications for the KDE SC."
url=('http://kde-apps.org/content/show.php/libalkimia?content=137323')
depends=('kcoreaddons' 'kdelibs4support')
makedepends=('extra-cmake-modules' 'kdoctools' 'doxygen')
conflicts=('alkimia')
license=('LGPL')
source=("git://anongit.kde.org/alkimia#branch=frameworks")
md5sums=('SKIP')

build() {
  cd "${srcdir}"
  #sed -e "s/Qt5::DBus/Qt5::DBus KF5::KDELibs4Support/" -i ${srcdir}/$_pkgname/libalkimia/CMakeLists.txt
  #sed -e "s/KDE4_ENABLE_EXCEPTIONS/KDE_ENABLE_EXCEPTIONS/" -i ${srcdir}/$_pkgname/libalkimia/CMakeLists.txt

  mkdir build
  cd build

  cmake ../${_pkgname} \
    -DCMAKE_BUILD_TYPE=Release \
    -DCMAKE_INSTALL_PREFIX=/usr \
    -DLIB_INSTALL_DIR=lib \
    -DSYSCONF_INSTALL_DIR=/etc \
    -DQML_INSTALL_DIR=/usr/lib/qt5/qml \
    -DKDE_INSTALL_USE_QT_SYS_PATHS=ON \
    -DBUILD_TESTING=OFF 
  make
}

package() {
  cd "${srcdir}"/build
 
  make DESTDIR="${pkgdir}" install  
}