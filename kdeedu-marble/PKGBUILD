
# include global config
source ../_buildscripts/${current_repo}-${_arch}-cfg.conf

pkgname=kdeedu-marble
_pkgname=marble
pkgver=${_kdever}
pkgrel=2
pkgdesc="Desktop Globe"
url="http://kde.org/applications/education/marble/"
arch=('x86_64')
url='http://www.kde.org'
license=('GPL' 'LGPL' 'FDL')
depends=("kde-runtime>=${_kdever}" "gpsd" 'shapelib')
makedepends=('cmake' 'automoc4' 'qt-mobility')
optdepends=('qt-mobility: enable QtMobility Location Provider')
provides=('marble')
groups=('kde' 'kdeedu' 'kde-uninstall' 'education')
options=('docs')
install=${pkgname}.install

source=("$_mirror/${_pkgname}-$_kdever.tar.xz"
        'srtm.diff')
md5sums=(`grep ${_pkgname}-$_kdever.tar.xz ../kde-sc.md5 | cut -d" " -f1`
         'd483df81a8c85b295c42ece7debdc25f')

build() {
	cd ${srcdir}/${_pkgname}-${pkgver}
	# increase globe size in the installer
	patch -p1 -i ${srcdir}/srtm.diff
	
	cmake . -DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_BUILD_TYPE=Release \
                -DCMAKE_SKIP_RPATH=ON \
                -DWITH_DESIGNER_PLUGIN=ON \
                -DCMAKE_{SHARED,MODULE,EXE}_LINKER_FLAGS='-Wl,--no-undefined -Wl,--as-needed'

}

package() {
	cd ${srcdir}/${_pkgname}-${pkgver}
	
	make DESTDIR=${pkgdir} install 
}
