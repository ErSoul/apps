
# include global config
source ../_buildscripts/${current_repo}-${_arch}-cfg.conf

pkgname=libkface
#pkgver=${_kdever}
pkgver=4.9.80
pkgrel=9
pkgdesc="Qt/C++ library to perform face detection and recognition over pictures"
url="http://www.digikam.org/"
arch=('x86_64')
license=('GPL' 'LGPL' 'FDL')
depends=('ki18n' 'opencv')
makedepends=('extra-cmake-modules' 'kdoctools')
#groups=('kde' 'kdeedu' 'kde-uninstall' 'education')
#source=("$_mirror/${pkgname}-$_kdever.tar.xz")
#md5sums=(`grep ${_pkgname}-$_kdever.tar.xz ../kde-sc.md5 | cut -d" " -f1`)
source=("git://anongit.kde.org/libkface.git#branch=frameworks")
md5sums=('SKIP')

prepare() {
   cd $pkgname
   #sed -i -e 's|#   include <opencv2/face.hpp>||' ${srcdir}/${pkgname}/src/recognition-opencv-lbph/lbphfacemodel.h
   #patch -p1 -i ${srcdir}/libopencv.diff
}

build() {
  mkdir -p build
  cd build
  
  cmake ../${pkgname} \
    -DCMAKE_BUILD_TYPE=Release \
    -DCMAKE_INSTALL_PREFIX=/usr \
    -DLIB_INSTALL_DIR=lib \
    -DPLUGIN_INSTALL_DIR=/usr/lib/qt5/plugins \
    -DKDE_INSTALL_USE_QT_SYS_PATHS=ON \
    -DBUILD_TESTING=OFF \
    -DENABLE_OPENCV3=ON
  make
}

package() {
  cd build

  make DESTDIR=${pkgdir} install
}
