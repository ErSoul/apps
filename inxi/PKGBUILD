
pkgname=inxi
pkgver=2.1.23
pkgrel=1
pkgdesc="script to get system information"
arch=('x86_64')
url="http://inxi.org"
license=('GPL')
depends=('mesa-demos' 'coreutils' 'gawk' 'grep' 'pciutils' 'procps-ng' 'sed' 'dmidecode')
#wget http://inxi.googlecode.com/svn/trunk/inxi.tar.gz -O inxi-2.1.23.tar.gz
source=("http://sourceforge.net/projects/kaosx/files/sources/inxi/$pkgname-$pkgver.tar.gz")
md5sums=('e442ee5517e9a23ca7407eeaef0897a6')

package() {
  cd "$srcdir"
  install -D -m755 inxi "$pkgdir/usr/bin/inxi"
  install -D -m755 inxi.1.gz "$pkgdir/usr/share/man/man1/inxi.1.gz"
}

