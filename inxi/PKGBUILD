
pkgname=inxi
pkgver=2.9.00
_commit=394994cacb6284d5d633bb342b3584c5e8b1ecb8
pkgrel=1
pkgdesc="Script to get system information"
arch=('x86_64')
url="https://smxi.org/docs/inxi.htm"
license=('GPL')
depends=('mesa-demos' 'coreutils' 'pciutils' 'procps-ng' 'dmidecode' 'perl')
source=("https://github.com/smxi/inxi/archive/${_commit}.zip")
md5sums=('c6e097fa45c78d952cd7e1d804a3b9b4')

package() {
  cd ${pkgname}-${_commit}
  
  install -D -m755 pinxi ${pkgdir}/usr/bin/pinxi
  ln -s pinxi ${pkgdir}/usr/bin/inxi
  install -D -m755 pinxi.1 ${pkgdir}/usr/share/man/man1/pinxi.1
}

