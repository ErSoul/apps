
pkgname=inxi
pkgver=2.1.27
pkgrel=1
pkgdesc="script to get system information"
arch=('x86_64')
url="http://inxi.org"
license=('GPL')
depends=('mesa-demos' 'coreutils' 'gawk' 'grep' 'pciutils' 'procps-ng' 'sed' 'dmidecode')
#wget http://inxi.googlecode.com/svn/trunk/inxi.tar.gz -O inxi-2.1.27.tar.gz
source=("https://code.google.com/p/inxi/source/browse/tarballs/inxi_$pkgver.tar.gz")
md5sums=('e756fb80820062f7d440f64001ae40a3')

package() {
  cd "$srcdir"
  install -D -m755 inxi "$pkgdir/usr/bin/inxi"
  install -D -m755 inxi.1.gz "$pkgdir/usr/share/man/man1/inxi.1.gz"
}

