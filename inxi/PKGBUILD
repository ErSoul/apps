
pkgname=inxi
pkgver=2.2.5
pkgrel=1
pkgdesc="script to get system information"
arch=('x86_64')
url="http://inxi.org"
license=('GPL')
depends=('mesa-demos' 'coreutils' 'gawk' 'grep' 'pciutils' 'procps-ng' 'sed' 'dmidecode')
#wget http://inxi.googlecode.com/svn/trunk/inxi.tar.gz -O inxi-2.2.5.tar.gz
source=("https://code.google.com/p/inxi/source/browse/tarballs/inxi-$pkgver.tar.gz")
md5sums=('7c5f9bad4293f7a33e222f934ca15913')

package() {
  cd "$srcdir"
  install -D -m755 inxi "$pkgdir/usr/bin/inxi"
  install -D -m755 inxi.1.gz "$pkgdir/usr/share/man/man1/inxi.1.gz"
}

