
# include global config
source ../_buildscripts/${current_repo}-${_arch}-cfg.conf

pkgname=purpose
#pkgver=${_kdever}
pkgver=0.1.2
pkgrel=1
pkgdesc="Framework for providing abstractions to get the developer's purposes fulfilled."
arch=('x86_64')
url='http://quickgit.kde.org/?p=purpose.git'
license=('GPL' 'LGPL' 'FDL')
depends=('kcoreaddons' 'kconfig' 'kdeclarative' 'ki18n' 'kio' 'kaccounts-integration')
makedepends=('extra-cmake-modules' 'kdoctools' 'git')
#groups=('')
#source=("$_mirror/${_pkgname}-$_kdever.tar.xz")
#md5sums=(`grep ${_pkgname}-$_kdever.tar.xz ../kde-sc.md5 | cut -d" " -f1`)
source=("git://anongit.kde.org/purpose")
md5sums=('SKIP')

prepare() {
  cd $pkgname
  sed -i -e 's|KF5::Purpose|KF5::Purpose KF5::Wallet|' ${srcdir}/${pkgname}/src/plugins/youtube/CMakeLists.txt
}

build() {
  mkdir -p build
  cd build
  
  cmake ../${pkgname} \
    -DCMAKE_BUILD_TYPE=Release \
    -DCMAKE_INSTALL_PREFIX=/usr \
    -DLIB_INSTALL_DIR=lib \
    -DPLUGIN_INSTALL_DIR=/usr/lib/qt5/plugins \
    -DKDE_INSTALL_USE_QT_SYS_PATHS=ON \
    -DBUILD_TESTING=OFF 
  make
}

package() {
  cd build

  make DESTDIR=${pkgdir} install
}

