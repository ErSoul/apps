
pkgname=kcp
pkgver=0.10
pkgrel=1
_commit=92f1fa7
pkgdesc="A command-line tool for KaOS Community Packages"
arch=('x86_64')
url="https://github.com/bvaudour/kcp"
license=('Public Domain')
install=kcp.install
depends=('git')
#source=("https://github.com/bvaudour/kcp/tarball/master/kcp-${pkgver}.tar.gz")
source=("https://github.com/bvaudour/kcp/archive/${pkgver}.tar.gz")
md5sums=('0d214217436013fa8dc115a1e343a737')
 
package() {
	cd ${srcdir}/${pkgname}-${pkgver}
	install -Dm755 kcp ${pkgdir}/usr/bin/kcp
	install -Dm644 LICENSE ${pkgdir}/usr/share/licenses/${pkgname}/LICENSE
}