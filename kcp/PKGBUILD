
pkgname=kcp
pkgver=0.3
pkgrel=1
pkgdesc="A command-line tool for KaOS Community Packages"
arch=('x86_64')
url="https://github.com/bvaudour/kcp"
license=('Public Domain')
install=kcp.install
depends=('git' 'python3' 'curl')
source=("https://github.com/bvaudour/${pkgname}/archive/${pkgver}.tar.gz")
md5sums=('5547d526c4aca1ee9eed8664f32f47bd')
 
package() {
	cd ${srcdir}/${pkgname}-${pkgver}
	install -Dm755 kcp.py ${pkgdir}/usr/bin/kcp
	install -Dm644 LICENSE ${pkgdir}/usr/share/licenses/${pkgname}/LICENSE
}