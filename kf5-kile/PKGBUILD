
pkgname=kf5-kile
_pkgname=kile
pkgver=2.9.60
pkgrel=1
pkgdesc="User friendly TeX/LaTeX frontend for KDE."
arch=('x86_64')
license=('GPL2')
url="http://kile.sourceforge.net/"
depends=('kconfig' 'kguiaddons' 'ki18n' 'kinit' 'kjobwidgets' 'kio' 'khtml' 'kparts' 'ktexteditor'
         'kwindowsystem' 'kxmlgui' 'kdelibs4support' 'texlive-core' 'docbook-xsl')
makedepends=('extra-cmake-modules' 'kdoctools' 'git')
conflicts=('kile')
groups=('office')
install=kile.install
source=("git://anongit.kde.org/kile#branch=frameworks")
md5sums=('SKIP')

build() {
  cd ${srcdir}
  sed -e "s/cmake_minimum_required(VERSION 3.0.0)/cmake_minimum_required(VERSION 2.8.12)/" -i ${srcdir}/$_pkgname/CMakeLists.txt
  sed -e "s/ADD_SUBDIRECTORY( symbols-ng )/#ADD_SUBDIRECTORY( symbols-ng )/" -i ${srcdir}/$_pkgname/src/data/CMakeLists.txt
  
  mkdir -p build
  cd build

  cmake ../${_pkgname} \
    -DCMAKE_BUILD_TYPE=Release \
    -DCMAKE_INSTALL_PREFIX=/usr \
    -DLIB_INSTALL_DIR=lib \
    -DSYSCONF_INSTALL_DIR=/etc \
    -DQML_INSTALL_DIR=/usr/lib/qt5/qml \
    -DPLUGIN_INSTALL_DIR=/usr/lib/qt5/plugins \
    -DBUILD_TESTING=OFF 
  make
}

package() {
  cd build

  make DESTDIR=${pkgdir} install
}
