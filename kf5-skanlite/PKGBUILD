
pkgname=kf5-skanlite
pkgver=1.1.1
pkgrel=1
pkgdesc="Image Scanning Application for KDE"
arch=('x86_64')
url='http://www.kde.org'
license=('LGPL')
depends=('kio' 'libksane' 'sane')
makedepends=('pkgconfig' 'extra-cmake-modules' 'git' 'kdoctools')
conflicts=('skanlite')
groups=('graphics')
source=("git://anongit.kde.org/skanlite#branch=frameworks")
md5sums=('SKIP')

build() {
  cd ${srcdir}
  sed -i -e 's/KAboutLicense::GPL/KAboutData::License_GPL/' ${srcdir}/skanlite/src/main.cpp
  
  mkdir build
  cd build
  cmake ../skanlite \
    -DCMAKE_BUILD_TYPE=Release \
    -DCMAKE_INSTALL_PREFIX=/usr
  make 
}

package() {
  cd ${srcdir}/build
  
  make DESTDIR=${pkgdir} install
}
