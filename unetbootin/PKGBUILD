
pkgname=unetbootin
pkgver=608
pkgrel=2
pkgdesc="Allows the creation of bootable Live USB drives."
url="http://unetbootin.sourceforge.net/"
license=('GPL3')
arch=('x86_64')
depends=('kdelibs' 'libpng' 'mtools' 'p7zip' 'qt' 'syslinux') 
groups=('system')
source=("http://downloads.sourceforge.net/unetbootin/$pkgname-source-$pkgver.tar.gz")
md5sums=('8c0f9f565a3dc0b093a0a9afd58fa9a7')

build() {
  lupdate $pkgname.pro
  lrelease $pkgname.pro
  qmake
  make
}

package() {
  # Executable 
  install -Dm755 $pkgname $pkgdir/usr/bin/$pkgname

  # Translations 
  mkdir -p $pkgdir/usr/share/$pkgname
  install -m644 $pkgname_*.qm $pkgdir/usr/share/$pkgname/

  install -Dm644 $pkgname.desktop $pkgdir/usr/share/applications/$pkgname.desktop
  install -Dm644 ${pkgname}_48.png $pkgdir/usr/share/pixmaps/$pkgname.png
}
