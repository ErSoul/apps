
pkgname=kf5-ktp-accounts-kcm
_pkgname=ktp-accounts-kcm
pkgver=0.9.90
pkgrel=2
pkgdesc="KCM Module for configuring Telepathy Instant Messaging Accounts"
arch=('x86_64')
url="https://projects.kde.org/projects/extragear/network/telepathy/ktp-accounts-kcm"
license=('GPL')
depends=('kcmutils' 'kio' 'ki18n' 'kwidgetsaddons' 'kcoreaddons' 'kconfigwidgets' 'kiconthemes'
         'kitemviews' 'kf5-ktp-common-internals' 'telepathy-gabble' )
makedepends=('extra-cmake-modules' 'kdoctools' 'git' 'boost')
optdepends=('telepathy-haze: all protocols supported by libpurple')
#groups=('kde-telepathy')
conflicts=('ktp-accounts-kcm')
source=("git://anongit.kde.org/ktp-accounts-kcm.git#branch=frameworks")
md5sums=('SKIP')

build() {
  cd ${srcdir}
  
  mkdir -p build
  cd build

  cmake ../${_pkgname} \
    -DCMAKE_BUILD_TYPE=Release \
    -DCMAKE_INSTALL_PREFIX=/usr \
    -DLIB_INSTALL_DIR=lib \
    -DSYSCONF_INSTALL_DIR=/etc \
    -DQML_INSTALL_DIR=/usr/lib/qt5/qml \
    -DPLUGIN_INSTALL_DIR=/usr/lib/qt5/plugins \
    -DBUILD_TESTING=OFF 
  make
}

package() {
  cd build

  make DESTDIR=${pkgdir} install
}
