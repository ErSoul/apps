
pkgname=kf5-kmymoney
_pkgname=kmymoney
pkgver=4.100.0
pkgrel=1
pkgdesc="An finance manager for KDE with HBCI support"
arch=('x86_64')
url="http://www.kmymoney.org/"
license=('GPL')
depends=('kcoreaddons' 'kconfig' 'khtml' 'kdelibs4support' 'kcompletion' 'kcmutils' 'kitemviews' 
         'kf5-kactivities' 'kf5-kdepimlibs' 'aqbanking' 'shared-mime-info' 'boost-libs'
         'pulseaudio' 'libofx' 'libical' 'kf5-alkimia')
makedepends=('extra-cmake-modules' 'kdoctools' 'gwenhywfar' 'docbook-xsl' 'boost')
conflicts=('kmymoney')
groups=('office')
source=("git://anongit.kde.org/kmymoney#branch=frameworks")
md5sums=('SKIP')

build() {
  cd ${srcdir}
  sed -e "s/#include <kstdguiitem.h>/#include <kstandardguiitem.h>/" -i ${srcdir}/$_pkgname/kmymoney/widgets/kbudgetvalues.cpp
  
  mkdir -p build
  cd build

  cmake ../${_pkgname} \
    -DCMAKE_BUILD_TYPE=Release \
    -DCMAKE_INSTALL_PREFIX=/usr \
    -DLIB_INSTALL_DIR=lib \
    -DSYSCONF_INSTALL_DIR=/etc \
    -DQML_INSTALL_DIR=/usr/lib/qt5/qml \
    -DPLUGIN_INSTALL_DIR=/usr/lib/qt5/plugins \
    -DBUILD_TESTING=OFF 
  make
}

package() {
  cd build

  make DESTDIR=${pkgdir} install
}
