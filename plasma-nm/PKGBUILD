

# include global config
source ../_buildscripts/${current_repo}-${_arch}-cfg.conf

pkgname=plasma-nm
pkgver=${_plasmaver}
pkgrel=2
pkgdesc="Plasma applet written in QML for managing network connections"
arch=('x86_64')
url="https://projects.kde.org/projects/playground/network/plasma-nm"
license=('GPL')
depends=('libmm-qt' 'networkmanager-qt' 'plasma-framework' 'kemoticons' 
         'mobile-broadband-provider-info' 'openconnect')
makedepends=('extra-cmake-modules' 'kdoctools' 'qt5-tools')
groups=('plasma5')
conflicts=('kf5-plasma-nm')
replaces=('kf5-plasma-nm')
#source=("http://download.kde.org/stable/plasma/$pkgver/$pkgname-$pkgver.tar.xz")
#md5sums=(`grep ${pkgname}-$_plasmaver.tar.xz ../kf5.md5 | cut -d" " -f1`)
source=("git://anongit.kde.org/plasma-nm.git#commit=66d9ab613c1ffd3f36df818f28cffe7750a36f6b")
md5sums=('SKIP')

build() {
  #cd $pkgname-$pkgver
  cd $pkgname
  #sed -e "s/PO_FILES //" -i ${srcdir}/$_pkgname-$pkgver/po/*/CMakeLists.txt
  mkdir build
  
  cd build
  cmake -DCMAKE_INSTALL_PREFIX=/usr \
        -DCMAKE_BUILD_TYPE=Release \
        -DLIB_INSTALL_DIR=lib \
        -DSYSCONF_INSTALL_DIR=/etc \
        -DQML_INSTALL_DIR=/usr/lib/qt5/qml \
        -DPLUGIN_INSTALL_DIR=/usr/lib/qt5/plugins \
        -DBUILD_TESTING=OFF ..
  make
}

package() {
  #cd $pkgname-$pkgver/build
  cd $pkgname/build
  
  make DESTDIR="$pkgdir" install
}
