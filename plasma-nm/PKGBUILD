

# include global config
source ../_buildscripts/${current_repo}-${_arch}-cfg.conf

pkgname=plasma-nm
pkgver=${_plasmaver}
pkgrel=2
pkgdesc="Plasma applet written in QML for managing network connections"
arch=('x86_64')
url="https://github.com/KDE/plasma-nm"
license=('GPL')
depends=('modemmanager-qt' 'networkmanager-qt' 'ki18n' 'kwindowsystem' 'kservice' 'kcompletion' 'kwidgetsaddons'
         'kio' 'kcoreaddons' 'kwallet' 'kitemviews' 'kxmlgui' 'kconfigwidgets' 'kiconthemes' 'solid'
         'kdbusaddons' 'knotifications' 'kdeclarative' 'kinit' 'kdelibs4support' 'plasma-framework' 
         'mobile-broadband-provider-info' 'openconnect' 'qca-qt5')
makedepends=('extra-cmake-modules' 'kdoctools' 'qt5-tools')
groups=('plasma5')
conflicts=('kf5-plasma-nm')
replaces=('kf5-plasma-nm')
source=("http://download.kde.org/stable/plasma/$pkgver/$pkgname-$pkgver.tar.xz"
        "https://github.com/KDE/plasma-nm/commit/c5eb19bb44c8b10d848628557405b597b680bbe8.diff")
md5sums=(`grep ${pkgname}-$_plasmaver.tar.xz ../kf5.md5 | cut -d" " -f1`
         '7e1a9ddba632831480585601d539ad3b')

build() {
  cd $pkgname-$pkgver
  patch -p1 -i ${srcdir}/c5eb19bb44c8b10d848628557405b597b680bbe8.diff
  mkdir build
  
  cd build
  cmake -DCMAKE_INSTALL_PREFIX=/usr \
        -DCMAKE_BUILD_TYPE=Release \
        -DKDE_INSTALL_LIBDIR=lib \
        -DKDE_INSTALL_SYSCONFDIR=/etc \
        -DKDE_INSTALL_QMLDIR=/usr/lib/qt5/qml \
        -DKDE_INSTALL_PLUGINDIR=/usr/lib/qt5/plugins \
        -DBUILD_TESTING=OFF ..
  make
}

package() {
  cd $pkgname-$pkgver/build
  
  make DESTDIR="$pkgdir" install
}
