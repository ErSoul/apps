
pkgname=openshot
pkgver=2.0.6
_pkgver=2.0
pkgrel=1
pkgdesc="Non-linear video editor for Linux based on MLT framework"
arch=('x86_64')
url="http://www.openshotvideo.com/"
license=('GPL')
depends=('pyqt5-python3' 'ffmpeg' 'libopenshot' 'desktop-file-utils')
makedepends=('python3-setuptools')
install=openshot.install
source=("http://launchpad.net/openshot/${_pkgver}/$pkgver/+download/$pkgname-qt-$pkgver.tar.gz")
md5sums=('0faab6cc9229565f083cf9cc554d3d47')

package() {
  cd $srcdir/$pkgname-qt-$pkgver
  
  python3 setup.py install --root=$pkgdir/ --optimize=1
}
