
pkgname=trojita
pkgver=0.6
pkgrel=1
pkgdesc="Trojita is a Qt IMAP e-mail client."
arch=('x86_64')
url="http://trojita.flaska.net"
license=('GPL')
depends=('qt5-webkit' 'qt5-tools' 'qtkeychain')
#depends=('qtwebkit')
#makedepends=('cmake' 'automoc4')
makedepends=('extra-cmake-modules' 'git')
groups=('network')
source=("http://downloads.sourceforge.net/trojita/$pkgname-$pkgver.tar.bz2")
md5sums=('fae2071fba700d626f6b551449b427fa')
#source=('git://anongit.kde.org/trojita.git')
#md5sums=('SKIP')


build() {
  cd $srcdir/$pkgname-$pkgver
  mkdir build
  
  cd build
  cmake .. -DCMAKE_BUILD_TYPE=Release \
           -DCMAKE_INSTALL_PREFIX=/usr \
           -DWITH_QT5=ON
  make
}

package() {
  cd $srcdir/$pkgname-$pkgver/build
  
  make DESTDIR=$pkgdir install
}

