
pkgname=kdev-python
pkgver=1.6.1
_pkgver=4.6.0
pkgrel=1
pkgdesc='Python plugin for KDevelop - stable version'
arch=('x86_64')
url="https://projects.kde.org/projects/playground/devtools/plugins/kdev-python"
license=('GPL')
groups=('kde' 'kdevelop-plugins')
depends=('kdevelop' 'python3')
makedepends=('kdevelop-pg-qt' 'cmake' 'automoc4')
source=("http://download.kde.org/stable/kdevelop/$pkgname/$pkgver/src/$pkgname-v$pkgver-py3.tar.xz")
md5sums=('5e9ee0b4b880bc52be991f033123c20a')

build() {
	cd "$srcdir/$pkgname-v$pkgver-py3"
	
	mkdir -p "$srcdir/build"
	cd "$srcdir/build"
	
	cmake "../$pkgname-v$pkgver-py3" \
		-DCMAKE_INSTALL_PREFIX=/usr \
                -DCMAKE_BUILD_TYPE=Release
	make
}

package() {
	cd "$srcdir/build"
	
	make DESTDIR="$pkgdir" install
}
