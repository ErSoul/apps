
pkgname=kpmcore
pkgver=2.0.2
pkgrel=1
pkgdesc="Library for managing partitions. Common code for KDE Partition Manager and other projects."
arch=('x86_64')
url="https://projects.kde.org/projects/extragear/sysadmin/kpmcore"
license=('GPL2')
depends=('ki18n' 'kio' 'kiconthemes' 'kservice' 'libatasmart' 'parted')
makedepends=('extra-cmake-modules' 'pkgconfig' 'git')
groups=('system')
options=('debug')
source=("http://download.kde.org/stable/kpmcore/${pkgver}/src/${pkgname}-${pkgver}.tar.xz")
#source=("git://anongit.kde.org/kpmcore")
md5sums=('9d175a1e703e4d86923ec4de52481c98')

build() {
  mkdir build
  cd build

  cmake ../${pkgname}-${pkgver} \
        -DCMAKE_INSTALL_PREFIX=/usr \
        -DCMAKE_BUILD_TYPE=RelWithDebInfo \
        -DLIB_INSTALL_DIR=lib \
        -DSYSCONF_INSTALL_DIR=/etc \
        -DQML_INSTALL_DIR=/usr/lib/qt5/qml \
        -DPLUGIN_INSTALL_DIR=/usr/lib/qt5/plugins \
        -DKDE_INSTALL_USE_QT_SYS_PATHS=ON \
        -DBUILD_TESTING=OFF 

  make 
}

package() {
  cd build
  
  make DESTDIR=${pkgdir} install 
}

